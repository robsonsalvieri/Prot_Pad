method GetD3W(cIdParent, cProcess) class acLogRepository

    Local oStatement
    Local oRet          := JsonObject():New()
    Local cAlias        := ""
    Local cQuery        := ""

    cQuery := "SELECT D3W_IDPROS "
    cQuery += "FROM "+RetSQLName("D3W") + " "
    cQuery += "WHERE D3W_IDEXEC = ? "
    cQuery += "AND D3W_PROC = ? "
    cQuery += "AND D_E_L_E_T_ = ? "
    cQuery += "ORDER BY 1 DESC"

    cQuery :=  ChangeQuery(cQuery)

    oStatement := FwExecStatement():New(cQuery)

    oStatement:setString(1, cIdParent)
    oStatement:setString(2, cProcess)
    oStatement:setString(3, " ")

    cAlias := oStatement:OpenAlias()

    DbSelectArea(cAlias)
    If (cAlias)->(!Eof())
        oRet['idRepair'] := (cAlias)->D3W_IDPROS
        oRet['founded']  := .T.
    Else
        oRet['founded']  := .F.
    EndIf

    (cAlias)->(DbCloseArea())
    oStatement:Destroy()
    oStatement := Nil

Return oRet
