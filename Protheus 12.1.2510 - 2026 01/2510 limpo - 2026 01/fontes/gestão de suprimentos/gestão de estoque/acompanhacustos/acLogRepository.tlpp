method isD3YSB9(cId) class acLogRepository
    Local oStatement
    Local cAlias        := ""
    Local isSB9         := .F.
    Local cQuery        := ""

    cQuery := "SELECT D3Y.D3Y_TYPE TYPE "
    cQuery += "FROM "+RetSQLName("D3Y") + " D3Y " 
    cQuery += "WHERE D3Y.D3Y_IDEXEC = ? "
    cQuery += "AND D3Y.D3Y_STATUS = ? "
    cQuery += "AND D3Y.D3Y_POSITI = ? "
    cQuery += "AND D_E_L_E_T_ = ?" 

    cQuery :=  ChangeQuery(cQuery)
    oStatement := FwExecStatement():New(cQuery)

    oStatement:setString(1, cId)
    oStatement:setString(2, "ER")
    oStatement:setString(3, "RE1")
    oStatement:setString(4, " ")

    cAlias := oStatement:OpenAlias()

    isSB9 := Upper(Alltrim((cAlias)->TYPE)) == 'SB9'

    (cAlias)->(DbCloseArea())
    oStatement:Destroy()
    oStatement := Nil

Return isSB9

