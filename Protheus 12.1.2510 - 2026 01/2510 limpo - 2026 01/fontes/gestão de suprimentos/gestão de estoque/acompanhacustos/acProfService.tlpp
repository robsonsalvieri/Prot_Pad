Method getGenericProfile(cId, cCompany, cBranch, cProg, cTask, cType) class acProfService

    
    Local cProfile    as Character 
    Local oRepository as Object
    Local xRet

    oRepository := ac.config.profile.repository.acProfRepository():new()
    cProfile :=  oRepository:getGenericProfile(cId, cCompany, cBranch, cProg, cTask, cType) 

    If EMPTY( cProfile )
        self:lEmpty := .T.
    Else 
        if cProfile == "false"
            xRet := .F.
        elseif cProfile == "true"
            xRet := .T.
        endif

    Endif

return xRet
