        Case  cMv_par == "mv_par02"
            Iif(xtype == 1 ,xRet := .T., xRet := .F.)
        Case cMv_par == "mv_par03"
            Iif(xtype == 1 ,xRet := .T., xRet := .F.)    
        Case  cMv_par == "mv_par04"
