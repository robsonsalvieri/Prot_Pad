/*/{Protheus.doc} A290Load
Carrega os parâmetros da tabela D4R (Indicadores Lote Eonômico)
D4S (Indicadores Tipo de Materiais) e D4T (Indicadores Grupo de Materiais)
para as variáveis de memória e array de opções utilizadas pela MATA290
@type    Function
@author  Paulo Dias Oliveira (oliveira.paulo)
@since   20/10/2025
@version P12
@param cCodIndic - Código do indicador para cálculo (D4R_COD)
@param lBat - Indica se está em processamento batch (.T. ou .F.)
@param lSchedule - Indica se está em processamento via schedule (.T. ou .F.)
@param aPergunte - Array com os parâmetros de pergunta para substituir o Pergunte (MTA290)
@return aParams - Array com os parâmetros carregados
/*/
//-------------------------------------------------------------------
Static Function A290Load(cCodIndic, lBat, lSchedule, aPergunte)
	Local aArea      As Array
	Local aParams    As Array

	aArea          := FWGetArea()
	aAreaD4R       := D4R->(FWGetArea())
	aParams        := Array(11, 3)
	aParams[1][1]  := Space(1)
	aParams[2][1]  := Space(1)
	aParams[2][2]  := 0
	aParams[3][1]  := 'x' //Cálculo pela Tendência
	aParams[3][2]  := D4R->D4R_NUMMES //Número de Meses
	aParams[4][1]  := Space(1)
	aParams[4][2]  := Space(1)
	aParams[5][1]  := Space(1)
	aParams[11][1] := Space(1)
	aParams[11][3] := .F.

	DbSelectArea('D4R')
	D4R->(DbSetOrder(1)) //D4R_FILIAL + D4R_COD

	If D4R->(DbSeek(FwxFilial('D4R') + cCodIndic))
		//Carrega o array aPergunte dos campos da D4R para substituir o Pergunte (MTA290)
		aAdd(aPergunte, D4R->D4R_LOCDE)       //Armazém de
		aAdd(aPergunte, D4R->D4R_LOCATE)      //Armazém até
		aAdd(aPergunte, D4R->D4R_PRDDE)       //Produto de
		aAdd(aPergunte, D4R->D4R_PRDATE)      //Produto até 
		aAdd(aPergunte, Val(D4R->D4R_ZRMDNG)) //Zera Md. Neg
		aAdd(aPergunte, Val(D4R->D4R_MOVINV)) //Cons Mov Inv
		aAdd(aPergunte, Val(D4R->D4R_PRDSGP)) //Analisa Produtos sem Grupo

		//--- 1. Mapeamento (D4R) para aOpcoes ---
		//[1][1]-> Atualiza Consumo do Mes (D4R_ATUCON é lógico, converte para "x" / " ")
		If D4R->D4R_ATUCON
			aParams[1][1] := 'x'
		EndIf

		//[10][1]-> Selecao de Filiais (MV_PAR02 1=Sim;2=Não)
		aParams[10][1] := lBat .Or. lSchedule .Or. IsBlind() .Or. MV_PAR02 == 1
		
		//lGrvABC (variável global/private) (D4R_GRVABC é lógico)
		lGrvABC := D4R->D4R_GRVABC
		
		//[2] / [3] -> Tipo de Cálculo (D4R_TPCALC: C: "1"=Peso, "2"=Tendência)
		If D4R->D4R_TPCALC == '1' //Por Peso (A290CalNor)
			aParams[2][1] := 'x'
			aParams[2][2] := D4R->D4R_TPINCR
			aParams[3][1] := ' '
			aParams[3][2] := 0
		EndIf

		//[4] -> Lote Econômico / Ponto de Pedido (D4R_CALLEC/D4R_CALCPP são lógicos)
		If D4R->D4R_CALLEC
			aParams[4][1] := 'x'
		EndIf

		If D4R->D4R_CALCPP
			aParams[4][2] := 'x'
		EndIf

		//[5] -> Ajuste Financeiro (D4R_AJUFIN é lógico)
		If D4R->D4R_AJUFIN
			aParams[5][1] := 'x'
		EndIf

		aParams[5][2] := D4R->D4R_VALFIN
		
		//[6] -> Períodos de Aquisição ABC
		aParams[6][1] := D4R->D4R_PERIOA
		aParams[6][2] := D4R->D4R_PERIOB
		aParams[6][3] := D4R->D4R_PERIOC
		
		//[7] -> Distribuição Percentual ABC
		aParams[7][1] := D4R->D4R_PERCTA
		aParams[7][2] := D4R->D4R_PERCTB
		aParams[7][3] := D4R->D4R_PERCTC

		//--- 2. Mapeamento (D4S/D4T) para Filtros (aOpcoes[8]/[9]) ---
		//[8][1] -> Tipos de Materiais (D4S_CTIPO)
		//D4S -> Indicadores Tipo de Materiais
		aParams[8][1] := A290GetDet(cCodIndic, 'D4S', 'D4S_CTIPO', lBat, lSchedule, aPergunte)
		
		//[9][1] -> Grupos de Materiais (D4T_CGRUPO)
		//D4T -> Indicadores Grupo de Materiais
		aParams[9][1] := A290GetDet(cCodIndic, 'D4T', 'D4T_CGRUPO', lBat, lSchedule, aPergunte)
		
		//--- 3. Estoque de Segurança (aOpcoes[11]) ---
		If D4R->D4R_CALCES
			aParams[11][1] := 'x'
		EndIf

		aParams[11][2] := D4R->D4R_MESSEG

		//Tipo: D4R_TPSEGU: "1"=Média Consumo (.T.), "2"=Previsão Venda (.F.)
		If D4R->D4R_TPSEGU == '1'
			aParams[11][3] := .T.
		EndIf
	EndIf

	FWRestArea(aAreaD4R)
	FWRestArea(aArea)
Return aParams

