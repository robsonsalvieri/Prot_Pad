Function MATA290(lBat, aLista, lAutoOld, cCodIndic)

Local cPerg := "MTA290"
Local lContinua := .T.
Local lRetPE := .T.
Local lRet := .T.
Local lSchedule := .F.
Local lA290Proc := .F.
Local aPergunte := {}

Private nTotRegs := 0
Private lGrvABC  :=.T.
Private lEnd     :=.F.
Private aOpcoes

Private lMTA290Fil := ExistBlock("MTA290FIL")
Private cMTA290Fil

Default lBat := .F.
Default lAutoOld := .F. // Valida se está executando a automação no formato antigo
Default cCodIndic := "" // Código do indicador para execução via Schedule ou serviço

TCInternal(5,"*OFF")   // Desliga Refresh no Lock do Top

//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
//³ Carrega as perguntas selecionadas                   ³
//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
//³ Variaveis utilizadas para parametros                         ³
//³ mv_par01        	// Armazem De                            ³
//³ mv_par02        	// Armazem Ate                           ³
//³ mv_par03        	// Produto De 	                         ³
//³ mv_par04        	// Produto Ate   	                     ³
//| mv_par05            // Consumo Med. Neg. Zerar (Sim/Nao)     |
//| mv_par06            // Considerar Mov. Inventario (Sim/Nao)  | 
//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
Pergunte(cPerg,.F.)

//Indica se irá processar a nova tela de parâmetros
lA290Proc := !lAutoOld .And. A290Proc()

//Verifica se o novo serviço de execução está ativo e se o ambiente está preparado
If lA290Proc
	lSchedule := (FwIsInCallStack("WFLAUNCHER") .Or. FwIsInCallStack("FWBOSCHDEXECUTE") .Or. FWGetRunSchedule()) //Verifica se está sendo executado por Schedule
	If lSchedule
		Pergunte("MTA290B", .F.)
	Else
		Pergunte("MTA290A", .F.)
	EndIf
	If Empty(cCodIndic)
		cCodIndic := MV_PAR01 //Código do indicador informado nos parâmetros do pergunte
	EndIf
	If lBat .Or. lSchedule .Or. IsBlind()
		lRet := !Empty(cCodIndic) //Verifica se foi informado o código do indicador
		
		If lRet //Se informou o código do indicador
			aOpcoes := A290Load(cCodIndic, lBat, lSchedule, @aPergunte) //Carrega parâmetros preenchidos da nova tela
		EndIf
	Else
		cCodIndic := A290NewScr() //Retorna o código selecionado na nova tela de parâmetros
		lRet      := !Empty(cCodIndic) //Verifica se foi informado o código do indicador
		
		If lRet //Se informou o código do indicador
			aOpcoes := A290Load(cCodIndic, lBat, lSchedule, @aPergunte) //Carrega parâmetros preenchidos da nova tela
		EndIf
	EndIf
	Pergunte("MTA290", .F.) //Restaura o pergunte original
Else
	//Mantém a chamada original da tela A290Menu
	If !lBat
	    aOpcoes := A290Menu(lBat)
	Else
 	    aOpcoes := aClone(aLista)
	EndIf
EndIf

If ExistBlock("A290CONT")
	lContinua := If(ValType(lRetPE := ExecBlock("A290CONT",.F.,.F.,{aOpcoes})) == "L",lRetPE,.T.)
Endif

If !aOpcoes == NIL .And. lContinua .And. lRet

	//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
	//³ Variaveis utilizadas para desenhar cursor                    ³
	//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
	dbSelectArea("SB1")
	nTotRegs := nTotRegs + RecCount()
	nTotRegs := nTotRegs + RecCount()
	
	dbSelectArea("SB3")
	nTotRegs := nTotRegs + RecCount()
	nTotRegs := nTotRegs + RecCount()
	nTotRegs := nTotRegs + RecCount()
	nTotRegs := nTotRegs + RecCount()
	nTotRegs := nTotRegs + RecCount()
	
	dbSelectArea("SD1")
	nTotRegs := nTotRegs + RecCount()
	
	dbSelectArea("SD2")
	nTotRegs := nTotRegs + RecCount()
	
	dbSelectArea("SD3")
	nTotRegs := nTotRegs + RecCount()
	
	If !lBat
		If IsBlind()
			BatchProcess(OemToAnsi(STR0001),OemToAnsi(STR0002),"MTA290",{ || Processa({|lEnd| MA290Process(aOpcoes,@lEnd,lBat,,cCodIndic,lA290Proc,@aPergunte)},OemToAnsi(STR0001),OemToAnsi(STR0002),.F.)})
	    Else
			Processa({|lEnd| MA290Process(aOpcoes,@lEnd,lBat,,cCodIndic,lA290Proc,@aPergunte)},OemToAnsi(STR0001),OemToAnsi(STR0002),.F.)
	    EndIf
	Else
		MA290Process(aOpcoes,@lEnd,lBat,,cCodIndic,lA290Proc,@aPergunte)  //"C lculo do Lote Econ“mico"###"Efetuando C lculo do Lote Econ“mico..."
	EndIf    
EndIf
Return

