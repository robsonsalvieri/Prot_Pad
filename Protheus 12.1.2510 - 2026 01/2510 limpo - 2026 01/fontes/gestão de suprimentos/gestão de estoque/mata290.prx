/*/{Protheus.doc} A290GetDet
Lê a tabela de detalhes (D4S ou D4T) e constrói a string de filtro 
com pipe ('CODIGO1|CODIGO2|')
@type    Function
@author  Paulo Dias Oliveira (oliveira.paulo)
@since   20/10/2025
@version P12
@param cCodIndic - Código do indicador (D4R_COD)
@param cAliasTab - Alias da tabela de detalhes (D4S ou D4T)
@param cCampoCod - Nome do campo de código no detalhe (D4S_CGRUPO ou D4T_CTIPO)
@param lBat      - Indica se está em processamento batch (.T. ou .F.)
@param lSchedule - Indica se está em processamento via schedule (.T. ou .F.)
@return cFilter - String do filtro ('CODIGO1|CODIGO2|')
/*/
//-------------------------------------------------------------------
Static Function A290GetDet(cCodIndic, cAliasTab, cCampoCod, lBat, lSchedule, aPergunte)
	Local cFilter   As Character
	Local aArea     As Array
	Local aAreaTab  As Array
	Local cFil      As Character
	Local nTotal    As Numeric
	Local cChave    As Character
	Local cQuery    As Character
	Local cAliasGrp As Character
	Local aRetSX5   As Array
	Local nAtivos   As Numeric
	Local nParam    As Numeric
	Local oGrupo    As Object
	Local lSemGrp   As Logical //Indica se consulta produtos sem grupo

	cFilter   := ''
	aArea     := FWGetArea()
	aAreaTab  := (cAliasTab)->(FwGetArea())
	cFil      := FwxFilial(cAliasTab)
	nTotal    := 0
	nAtivos   := 0
	nParam    := 1
	cChave    := cAliasTab + '_CINDIC'
	cAliasGrp := GetNextAlias()

	DbSelectArea(cAliasTab)
	&(cAliasTab)->(DbSetOrder(1))

	If &(cAliasTab)->(DbSeek(cFil + cCodIndic))
		While &(cAliasTab)->(!Eof()) .And. &(&(cAliasTab)->(cAliasTab + '_FILIAL')) + &(&(cAliasTab)->(cChave)) == cFil + cCodIndic
			nTotal++
			cFilter += AllTrim(&(&(cAliasTab)->(cCampoCod))) + '|'
			&(cAliasTab)->(DbSkip())
		EndDo
	EndIf

	//Tipo de materiais
	If cAliasTab == "D4S"
		//Carrega materiais
		aRetSX5 := FWGetSX5("02")
		nAtivos := Len(aRetSX5)

		//Se todos os itens possíveis no detalhe estiverem ativos, retorna '**' que todos foram selecionados
		If nTotal > 0 .And. nAtivos == nTotal .And. cAliasTab == "D4S"
			cFilter := '**'
		EndIf
	EndIf

	//Grupo de materiais
	If cAliasTab == 'D4T'
		//Carrega grupos
		cQuery := "SELECT COUNT(1) QTD"
		cQuery +=  " FROM " + RetSqlName("SBM") + " SBM"
		cQuery += " WHERE SBM.BM_FILIAL = ?"  //#1
		cQuery +=   " AND SBM.D_E_L_E_T_ = ?" //#2

		oGrupo := FWExecStatement():New(cQuery)

		oGrupo:SetString(nParam++, FWxFilial("SBM")) //#1
		oGrupo:SetString(nParam++, Space(1))         //#2

		oGrupo:OpenAlias(cAliasGrp)

		If !(cAliasGrp)->(EOF())
			nAtivos := (cAliasGrp)->(QTD)
		EndIf

		(cAliasGrp)->(DbCloseArea())

		lSemGrp := lBat .Or. lSchedule .Or. IsBlind() .Or. aPergunte[7] == 1 //Analisa Produtos Sem Grupo

		//Analisa Produtos Sem Grupo ? 1=Sim;2=Não
		If nAtivos == nTotal .And. !Empty(cFilter)
			If lSemGrp
				cFilter := '**'
			EndIf
		Else
			//O espaço em branco (Space(Len(SB1->B1_GRUPO))) é o código para 'sem grupo'
			If lSemGrp .And. nTotal > 0
				cFilter := cFilter + Space(Len(SB1->B1_GRUPO)) + '|'
			EndIf
		EndIf
	EndIf

	FWRestArea(aAreaTab)
	FWRestArea(aArea)
Return cFilter

