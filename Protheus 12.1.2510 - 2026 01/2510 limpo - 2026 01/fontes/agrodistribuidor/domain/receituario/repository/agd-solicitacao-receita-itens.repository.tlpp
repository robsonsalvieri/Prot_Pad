	AAdd(aArrayFields, {'quantidade'              , 'NEU_QTDVEN', 'C', .T.})
	AAdd(aArrayFields, {'unidadeMedida'           , 'NEU_UM'    , 'C', .T.})

	AAdd(aArrayFields, {'descricaoProduto'        , 'B1_DESC'   , 'C', .T.})

