Static Function FS_GrvA26(nReg)
Local aArea := GetArea()

DbSelectArea("GFY")
If nOpcE <> 3
 DbGoTo(nReg)
Endif

If nOpcE == 3 .Or. nOpcE == 4 //Inclusao e Alterar
 RecLock("GFY", (nOpcE == 3))
 HS_GrvCpo("GFY")
 MsUnlock()

ElseIf nOpcE == 5 //Exclusao
 RecLock("GFY", .F.)
 DbDelete()
 MsUnlock()
Endif

RestArea(aArea)
Return()

