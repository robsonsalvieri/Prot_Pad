Function HSPAHABE()

Private cCadastro := STR0001 //"Listas"
Private nOpc      := 0
Private aRotina := MenuDef()

dbSelectArea("GFN")
dbSetOrder(1)
mBrowse(06, 01, 22, 75, "GFN")
Return( Nil )    
/************************************* Invoca as funcoes para validacao de inclusao / exclusao  ******************/
Function HS_ABE(cAlias, nReg, nOpc)
 Local nOpcA := 0
 Private cDelFunc := "HS_VEABE()"
 If nOpc == 3
  nOpcA := axInclui("GFN",, 3,,,, "HS_VIABE()") 
 ElseIf nOpc == 5
  nOpcA := axDeleta("GFN", nReg, nOpc)
 EndIf                            
Return(nOpcA) 
/*************************************  validacao de inclusao  ****************************************************/
Function HS_VIABE()
 Local lRet := .T.

 If DBSeek(xFilial("GFN") + M->GFN_CODIGO)
  HS_MsgInf(STR0009, STR0010, STR0012) //"LISTA JA EXISTE"###"Atencao"####"Valida็ใo de inclusใo"
  lRet := .F.
 EndIf
Return( lRet )  
/**************************************   validacao de exclusao   **********************************************/
Function HS_VEABE()
 Local lRet := .T., cAliasOld := Alias()
 
 dbSelectArea("GFO")
 dbSetOrder(2)
 
 If DBSeek(xFilial("GFO") + GFN->GFN_CODIGO  )
  HS_MsgInf(STR0007, STR0010, STR0013) //"Ja existe relacionamento para este registro ok... Nao podera exclui-lo."###"Atencao"###"Valida็ใo de exclusใo"
  lRet := .F.
 EndIf  
  
 DbSelectArea(cAliasOld)
Return( lRet )


