Static Function Af171Vld()
Local lSldAtf
Local lRet := .T.
Local dUltDepr 	:= GetMv("MV_ULTDEPR")

lSldAtf 	:= GetNewPar("MV_ATFRSLD",.F.)

//se tem o parametro MV_ATFRSLD (REFAZ SALDO) CONFIGURADO COM .T. e controla data de virada
If lSldAtf
	dDataVir :=  AtfGetSN0("13","VIRADAATIVO")
	If !Empty(dDataVir)
		dDataVir := STOD(dDataVir)
		
		//data da virada deve ser sempre no primeiro dia do ano
		If ( DTOS(dDataVir) != "19800101" .And. Year(dDataBase) != Year(dDataVir) ) .Or.  dDataBase < dDataVir
			Aviso(STR0017,STR0018+;  //"Atencao"##"O calculo de depreciacao acelerada somente pode ser efetuado após a  virada anual no exercicio vigente. "
							STR0019+CRLF+;  //"No Ativo, a virada ocorre após o cálculo de 31 de Dezembro. "
							STR0020+ cFilAnt+" "+CRLF+;  //"Filial : "
							STR0021+DtoC(dDataVir)+Space(10)+;   //"Ultima Virada : "
							STR0022+DtoC(dUltDepr), {"Ok"})  //"Ultimo Calculo Depreciacao : "
			lRet := .F.		// Invalidar o processo.
		EndIf
	Else
		Aviso(STR0017,STR0023+;  //"Atencao"##"Não encontrada a data da virada anual e o parametro MV_ATFRSLD esta ativo. Verifique! "
						STR0019+Space(50)+CRLF+;  //"No Ativo, a virada ocorre após o cálculo de 31 de Dezembro. "
						STR0020+ cFilAnt+" ", {"Ok"})  //"Filial : "
		lRet := .F.		// Invalidar o processo.
	EndIf
EndIf
  		
Return(lRet)

//-------------------------------------------------------------------
/*/{Protheus.doc}Af171VldItem
Valida se item atende lei Nº 14.871, DE 28 DE MAIO DE 2024

@author Totvs
@since  20/12/24

@version 12
/*/
//-------------------------------------------------------------------
Function Af171VldItem(dDataIni as date, dDataFim as date, cFilDep as character, cBase as character, cItem as character,; 
	nTaxaDepr as numeric, oQueryDep as object, lLote as logical, cTipo as character,cBaixa as character, cSeq as Character) as logical

Local nDeprAtual as numeric
Local nDeprAcum as numeric
Local nMaxDepr as numeric
Local dDtAquis as date
Local lRet as logical

Default lLote  := .F.
Default cTipo  := " "
Default cBaixa := " "
Default cSeq   := " "


lRet := .T.

If !FWIsInCallStack("ATFA050")
	SN3->(dbSetOrder(1)) //N3_FILIAL+N3_CBASE+N3_ITEM+N3_TIPO+N3_BAIXA+N3_SEQ
	SN3->(dbSeek(cFilDep+cBase+cItem+cTipo+cBaixa+cSeq))
EndIf	

If SN3->N3_TIPO == "01" .Or. SN3->N3_TIPO == "07"
	dDtAquis := If(!Empty(SN3->N3_AQUISIC), SN3->N3_AQUISIC, dDataIni)	
	
	If (dDtAquis >= STOD("20240528") .And. dDtAquis <= STOD("20251231")) .And.; //Periodo de vigor da lei Nº 14.871, DE 28 DE MAIO DE 2024
		(Year(dDataBase) == Year(dDtAquis) .Or. Year(dDataBase) == Year(dDtAquis)+1) //Ano de inicio da depreciacao acelerada ou proximo ano subsequente
														
		If lLote
			nDeprAtual := Round(Abs(SN3->N3_VORIG1+SN3->N3_AMPLIA1+SN3->N3_VRCACM1)* nTaxaDepr / 100, X3Decimal("N3_VORIG1"))
		Else
			nDeprAtual := aValDepr[1]
		EndIf
		
		nDeprAcum := Af171TotAcum(@oQueryDep, lLote)
		nMaxDepr  := SN3->N3_VORIG1 / 2 //Valor máximo permitido para depreciacao acelerada (50% do valor do bem)		
							
		If nDeprAtual+nDeprAcum >= nMaxDepr
			If nDeprAcum >= nMaxDepr
				lRet := .F.
			Else //Tratamento de residuo				
				aValDepr[1] := nMaxDepr - nDeprAcum				
			EndIf			
		EndIf		
	EndIf
EndIf

Return lRet

//-------------------------------------------------------------------
/*/{Protheus.doc}Af171TotAcum
Soma depreciacoes acelaredas om bem no ano

@author Totvs
@since  20/12/24

@version 12
/*/
//-------------------------------------------------------------------
Static Function Af171TotAcum(oQueryDep, lLote) as numeric

Local cQuery as character

//Indice SN4: 4- N4_FILIAL+N4_CBASE+N4_ITEM+N4_TIPO+N4_OCORR+DTOS(N4_DATA)
If oQueryDep == Nil
	cQuery := "SELECT SUM(N4_VLROC1) TOTALDEPR"
	cQuery += " FROM "+RetSQLTab("SN4")
	cQuery += " WHERE N4_FILIAL = ?" 	//P1 FWxFilial("SN4")	
	cQuery += " AND N4_CBASE = ?" 		//P2 SN3->N3_CBASE
	cQuery += " AND N4_ITEM = ?"		//P3 SN3->N3_ITEM
	cQuery += " AND N4_TIPO = ?"	    //P4 "01" ou "07"
	cQuery += " AND N4_OCORR = ?"		//P5 "10"
	cQuery += " AND N4_DATA >= ?"		//P6 FirstYDate(dDatabase)
	cQuery += " AND N4_DATA <= ?"		//P7 LastYDate(dDatabase)
	cQuery += " AND N4_TIPOCNT = ?"		//P8 "4"
	cQuery += " AND D_E_L_E_T_ = ?"		//P9 DELETE
	cQuery := ChangeQuery(cQuery)

	oQueryDep := FwExecStatement():New(cQuery)	
EndIf

oQueryDep:SetString(1, FWxFilial("SN4", SN3->N3_FILIAL))
oQueryDep:SetString(2, SN3->N3_CBASE)
oQueryDep:setString(3, SN3->N3_ITEM)
oQueryDep:SetString(4, If(lLote, "07", "01"))
oQueryDep:SetString(5, "10")
oQueryDep:SetString(6, DTOS(FirstYDate(dDatabase)))
oQueryDep:SetString(7, DTOS(LastYDate(dDatabase)))
oQueryDep:SetString(8, "4")
oQueryDep:SetString(9, Space(1))
	
Return oQueryDep:ExecScalar("TOTALDEPR")
