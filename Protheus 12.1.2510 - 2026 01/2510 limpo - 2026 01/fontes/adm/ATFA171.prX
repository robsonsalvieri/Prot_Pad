Function af171Display(cMarca,lInverte,oQtda,cArquivo)
Local cFieldMarca := "N3_OK"

SN1->(MsSeek(xFilial("SN1") + SN3->(N3_CBASE + N3_ITEM)))

If IsMark(cFieldMarca,cMarca,lInverte)
	If SN1->N1_STATUS != "2"
		nQtdBens++
		oQtda:Refresh()
	Else
		RecLock("SN3",.F.)
		SN3->N3_OK := " "
		MsUnlock()
		Help(" ",1,"AF171BLQ")	//"Este bem está bloqueado, a depreciação não poderá ser acelerada."		
	EndIf

	/*
	 * Tratamento da seleção de bens com classificação patrimonial como "Custos de Transação"
	 * Não permitir a seleção.
	 */
	If SN1->N1_PATRIM == "T"
		SN3->(RecLock("SN3",.F.))
		SN3->N3_OK := " "
		SN3->(MsUnlock())
		Help(" ",1,"AF171CUSTR")
	EndIf
Else
	nQtdBens--
	nQtdBens:= Iif(nQtdBens<0,0,nQtdBens)
	oQtda:Refresh()
EndIf

Return

