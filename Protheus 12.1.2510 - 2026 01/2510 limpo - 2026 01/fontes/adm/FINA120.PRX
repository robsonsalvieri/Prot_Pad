Function fA120Inclui( cAlias, nReg, nOpc )

Local lRetorno	:= .T.

If lExecAuto
	lMsErroAuto := .F.
	RegToMemory( cAlias, .T., .F. )

	If EnchAuto( cAlias, aAutoCab, "Fa120TudOk()", nOpc )
	
		nOpca := AxIncluiAuto( cAlias, "Fa120TudOk()", )
		If nOpca == 0
			lMsErroAuto := .T.
			lRetorno := .F.
		EndIf
	Else
		lMsErroAuto := .T.
		lRetorno := .F.
	EndIf
Else
	lRetorno := AxInclui( cAlias, nReg, nOpc, , , , "Fa120TudOk()" )
EndIf

Return(lRetorno)

