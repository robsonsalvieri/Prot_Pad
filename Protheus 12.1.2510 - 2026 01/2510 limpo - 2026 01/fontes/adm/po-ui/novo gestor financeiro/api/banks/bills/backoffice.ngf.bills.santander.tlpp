	oPrint:Line ( nLinha + 65 + nOffset, nColuna + 315, nLinha + 88 + nOffset, nColuna + 315, CLR_BLACK ) // Divisor de Coluna

	oPrint:Say  ( nLinha + 75 + nOffset, nColuna + 320, STR0006,   oFont10 ) // CPF/CNPJ do Beneficiário
