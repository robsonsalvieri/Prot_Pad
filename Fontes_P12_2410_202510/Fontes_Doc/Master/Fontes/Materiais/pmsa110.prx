If (nPosOpc > 0 .Or. nPosMOpc > 0)
	lRet := SeleOpc(2,"PMSA110",M->AF3_PRODUT,,,,"M->AF3_MOPC",,aCols[n][nPosQuant],,,,)
EndIf

