			 	oTree:TreeSeek( "" ) 
			 	oTree:CurrentNodeId := ""			 	
				QUERY3->( dbSkip() ) 
			EndDo 
			QUERY3->( dbCloseArea() ) 
			dbSelectArea( "AB4" ) 
		EndIf 
		
	#ELSE

		AB3->( dbSetOrder( 1 ) ) 
