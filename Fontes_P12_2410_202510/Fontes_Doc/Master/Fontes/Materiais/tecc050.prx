		cQuery += "AB4_NUMOS<='"    + MV_PAR16 + "zz" + "' ) OR " 
		cQuery += "AB4_NUMOS='"     + Space( Len( AB4->AB4_NUMOS ) ) + "' ) AND "														
		
		cQuery += "AB4.D_E_L_E_T_=' ' AND "
		cQuery += "A1_FILIAL='"   + xFilial( "SA1" ) + "' AND "
		
		//Aplicao de filtro para o SIGACRM
		If lFiltroCRM
			cCondicao := CRMXFilEnt( "SA1", .T. )
