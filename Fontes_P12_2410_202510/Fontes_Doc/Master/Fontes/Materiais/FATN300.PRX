cRevisa	:= Eval(bCampo,"REVISA")

cCargoPai:= Pad("AD1ADC"+Eval(bCampo,"FILIAL")+cNrOpor,70)
aAdd(aTree,{aCmp[1],Eval(bCampo,"FILIAL")+cNrOpor+cRevisa,Eval(bCampo,"DESCRI")+" - "+STR0039+cRevisa,cCargoPai,StrZero(0,70),"N",.F.})//"Revisão "

