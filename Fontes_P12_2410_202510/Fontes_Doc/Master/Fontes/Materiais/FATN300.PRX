	EndIf
	(cAliasAIJ)->(DbSkip())
End

(cAliasAD2)->(DbCloseArea())
(cAliasAD3)->(DbCloseArea()) 
(cAliasAD4)->(DbCloseArea())
(cAliasAD9)->(DbCloseArea())
(cAliasADJ)->(DbCloseArea())
(cAliasAIJ)->(DbCloseArea())

FATPDUnLoad()
RestArea(aArea)	

Return(aTree)

