cQuery +=       "AD4.D_E_L_E_T_='' "
cQuery += "ORDER BY "+SqlOrder(AD4->(IndexKey()))

cQuery := ChangeQuery(cQuery)
	
DbUseArea(.T.,"TOPCONN",TcGenQry(,,cQuery),cAliasAD4,.T.,.T.)
	
For nStru := 1 To Len(aStru)
