While ( (cAlias)->(!Eof()) .AND. ( SX3->X3_ARQUIVO == cAlias ) )
	If X3Uso(X3_USADO) .AND. cNivel >= X3_NIVEL .AND. (!TRIM(SX3->X3_CAMPO) $ "_FILIAL") .AND.;
