		GetFieldDecimal("C6_QTDENT") } )
	oSelf:AddMapFields( "blockstatus"			, "C6_BLQ"			, .T., .F., { "C6_BLQ"			, 'C', GetFieldLength("C6_BLQ")		, 0 } )
