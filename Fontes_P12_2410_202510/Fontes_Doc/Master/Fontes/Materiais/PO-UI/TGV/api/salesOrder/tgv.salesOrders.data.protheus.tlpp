/*/{Protheus.doc} SalesOrdersProtheusData::GetInvoices(nPage as Numeric, nPageSize as Numeric, cOrderId as Character, aURLFilter as Array, cFields as Character,;
 cSort as Character, cOrderId as Character)
	Retorna todas as notas de um pedido
	@type		method
	@param		nPage		, Numeric	, Numero da pagina
	@param		nPageSize	, Numeric	, Tamanho da Pagina
	@param		aURLFilter	, Array		, Lista de Filtros no padrão do FWAdapterBaseV2
	@param		cFields		, Character	, Lista de campos que devem ser retornados
	@param		cSort		, Character	, Ordernação do Response
	@param		cOrderId	, Character	, Código do Pedido
	@author		Squad CRM & Faturamento
	@since		07/04/2024
	@version	12.2310
/*/
//------------------------------------------------------------------------------
Method GetInvoices(nPage as Numeric, nPageSize as Numeric, aURLFilter as Array, cFields as Character,;
 cSort as Character, cOrderId as Character) CLASS SalesOrdersProtheusData
	local aArea		:= GetArea() as Array
	local cWhere	as character

	addMapInvoice( self )
	cWhere := GetFilterInvoices(.T.)

	If !Empty( aURLFilter ) .And. Len( aURLFilter ) > 0 
		::SetUrlFilter( aURLFilter )
	Endif
	If !Empty( cSort )
		::SetOrderQuery( cSort )
	EndIf
	If !Empty( cFields )
		::SetFields( cFields )
	Endif

	::setPage( nPage )
	::setPageSize( nPageSize )
	::SetQuery( GetQueryInvoices(cOrderId))
	::SetWhere( cWhere )
	::SetOrder( "FILIAL, DOC" )

	If ::Execute()
		::FillGetResponse()
	EndIf
	
	RestArea( aArea )
	aSize( aArea, 0 )
Return Nil
//------------------------------------------------------------------------------
/*/{Protheus.doc} addMapInvoice
	Adiciona uma lista de campos da nota fiscal.
	@type		function
	@version	12.1.2310
	@author		Gabriel Oliveira dos Santos / Squad CRM & Faturamento
	@since		08/02/2024
	@param 		oSelf	, object	, Objeto herdado da classe FWAdapterBaseV2
/*/
//------------------------------------------------------------------------------
Function addMapInvoice( oSelf as Object)

	oSelf:AddMapFields( "branch"  	 	, "FILIAL"  	, .T., .F., { "FILIAL", 'C', GetFieldLength("F2_FILIAL") , GetFieldDecimal("F2_FILIAL") } )
	oSelf:AddMapFields( "invoice" 	 	, "DOC"     	, .T., .F.,	{ "DOC", 'C', GetFieldLength("F2_DOC") , GetFieldDecimal("F2_DOC") } )
	oSelf:AddMapFields( "amount"  	 	, "D2_TOTAL"    , .T., .F., { "D2_TOTAL", 'N', GetFieldLength("D2_TOTAL") , GetFieldDecimal("D2_TOTAL") } )
	oSelf:AddMapFields( "serie" 	 	, "SERIE"  		, .T., .F., { "SERIE", 'C', GetFieldLength("F2_SERIE") , GetFieldDecimal("F2_SERIE") } )
	oSelf:AddMapFields( "invoicetype"	, "TIPO"		, .T., .F., { "TIPO", 'C', GetFieldLength("F2_ESPECIE") , GetFieldDecimal("F2_ESPECIE") } )
	oSelf:AddMapFields( "invoicecele"	, "ELETRONICA"  , .T., .F., { "ELETRONICA", 'C', GetFieldLength("F2_NFELETR") , GetFieldDecimal("F2_NFELETR") } )
	oSelf:AddMapFields( "invoicekey" 	, "CHAVE"  		, .T., .F., { "CHAVE", 'C', GetFieldLength("F2_CHVNFE") , GetFieldDecimal("F2_CHVNFE") } )
	oSelf:AddMapFields( "customerid" 	, "CODCLI"  	, .T., .F., { "CODCLI", 'C', GetFieldLength("A1_COD") , GetFieldDecimal("A1_COD") } )
	oSelf:AddMapFields( "customerstore" , "LOJA"		, .T., .F., { "LOJA", 'C', GetFieldLength("A1_LOJA") , GetFieldDecimal("A1_LOJA") } )
	oSelf:AddMapFields( "customer" 		, "NOME" 		, .T., .F., { "NOME", 'C', GetFieldLength("A1_NREDUZ") , GetFieldDecimal("A1_NREDUZ") } )

Return Nil

//------------------------------------------------------------------------------
/*/{Protheus.doc} GetQueryInvoices
	Monta a Expressão SQL para consulta das notas
	@type		function
	@version	12.2310
	@since		07/04/2024
	@param		Queryfields		, Character	, itens para o select
	@param		cOrderId		, Character	, Pedido
	@return		character, Expressao SQL para consulta de Pedidos ou Itens do Pedido
/*/
//------------------------------------------------------------------------------
Function GetQueryInvoices( cOrderId as Character ) as Character
	Local cQuery   := ""    as Character
	Default cOrderId := ""

	cQuery := " SELECT #QueryFields# "
	cQuery += " FROM "
	cQuery += " (SELECT SF2.F2_FILIAL FILIAL, "
	cQuery += " SF2.F2_DOC DOC, "
	cQuery += " SUM(SD2.D2_TOTAL) D2_TOTAL, "
	cQuery += " SF2.F2_SERIE SERIE, "
    cQuery += " SF2.F2_CHVNFE CHAVE, "
    cQuery += " SF2.F2_NFELETR ELETRONICA, "
    cQuery += " SF2.F2_ESPECIE TIPO, "
	cQuery += " SA1.A1_COD CODCLI, "
	cQuery += " SA1.A1_LOJA LOJA, "
	cQuery += " SA1.A1_NREDUZ NOME "
	cQuery += " FROM " + RetSqlName("SC5") + " SC5 "
    cQuery += "  INNER JOIN " + RetSqlName("SC6") + " SC6 "
    cQuery += "    ON "
    cQuery += "         SC5.C5_FILIAL = SC6.C6_FILIAL "
    cQuery += "             AND "
    cQuery += "         SC5.C5_NUM = SC6.C6_NUM "
    cQuery += "             AND "
    cQuery += "         SC5.D_E_L_E_T_ = SC6.D_E_L_E_T_ "
    cQuery += " INNER JOIN " + RetSqlName("SD2") + " SD2 "
    cQuery += "     ON "
    cQuery += "         SC6.C6_FILIAL = '" + FwXFilial("SC6") + "'  "
	cQuery += "             AND "
	cQuery += "         SD2.D2_FILIAL = '" + FwXFilial("SD2") + "'  "
    cQuery += "             AND "
    cQuery += "         SD2.D2_PEDIDO = SC6.C6_NUM "
    cQuery += "             AND "
    cQuery += "         SD2.D2_ITEMPV = SC6.C6_ITEM "
    cQuery += "             AND "
    cQuery += "         SD2.D_E_L_E_T_ = SC6.D_E_L_E_T_ "
    cQuery += " LEFT JOIN " + RetSqlName("SFT") + " SFT "
    cQuery += "     ON "
    cQuery += "         SD2.D2_FILIAL = '" + FwXFilial("SD2") + "'  "
	cQuery += "             AND "
	cQuery += "         SFT.FT_FILIAL = '" + FwXFilial("SFT") + "'  "
    cQuery += "             AND "
    cQuery += "         SD2.D2_SERIE = SFT.FT_SERIE "
    cQuery += "             AND "
    cQuery += "         SD2.D2_DOC = SFT.FT_NFISCAL "
    cQuery += "             AND "
    cQuery += "         SD2.D2_ITEM = SFT.FT_ITEM "
    cQuery += "             AND "
    cQuery += "         SD2.D_E_L_E_T_ = SFT.D_E_L_E_T_ "
    cQuery += " INNER JOIN " + RetSqlName("SF2") + " SF2 "
    cQuery += "     ON "
    cQuery += "         SD2.D2_FILIAL = SF2.F2_FILIAL "
    cQuery += "             AND "
    cQuery += "         SD2.D2_DOC = SF2.F2_DOC "
    cQuery += "             AND "
    cQuery += "         SD2.D2_SERIE = SF2.F2_SERIE "
    cQuery += "             AND "
    cQuery += "         SD2.D_E_L_E_T_ = SF2.D_E_L_E_T_ "
	cQuery += " INNER JOIN " + RetSqlName("SA1") + " SA1 "
    cQuery += "     ON "
    cQuery += "         SA1.A1_FILIAL = '" + FwXFilial("SA1") + "'  "
    cQuery += "             AND "
    cQuery += "         SF2.F2_CLIENTE = SA1.A1_COD "
    cQuery += "             AND "
    cQuery += "         SF2.F2_LOJA = SA1.A1_LOJA "
    cQuery += "             AND "
    cQuery += "         SF2.D_E_L_E_T_ = SA1.D_E_L_E_T_ "
	cQuery += " WHERE SC5.C5_FILIAL = '" + FwXFilial("SC5") + "' AND SC5.C5_NUM = '" + cOrderId + "' AND SC5.D_E_L_E_T_ = ' ' "
	cQuery += " GROUP BY F2_FILIAL, F2_DOC, F2_SERIE, F2_ESPECIE, SF2.F2_CHVNFE, "
    cQuery += " SF2.F2_NFELETR, "
    cQuery += " SF2.F2_ESPECIE, "
	cQuery += " SA1.A1_COD, "
	cQuery += " SA1.A1_LOJA, "
	cQuery += " SA1.A1_NREDUZ "
	cQuery += " ) TRB_TOT " 
	cQuery += " WHERE #QueryWhere#"

Return cQuery

//------------------------------------------------------------------------------
/*/{Protheus.doc} GetFilterInvoices
	Obtem o filtro para notas fiscais.
	@type		function
	@since		08/02/2024
	@version	12.1.2310
	@author		Gabriel Oliveira dos Santos / Squad CRM & Faturamento
	@param		lFilterInvoices		, Logical	, Verifica se é filtro de Notas Fiscais
	@return		Character			, Expressão utilizada na consulta	
/*/
//------------------------------------------------------------------------------
Function GetFilterInvoices( lFilterInvoice as Logical ) as Character
	Local cWhere	as Character

	If lFilterInvoice
		cWhere := " 1 = 1 "
	EndIf

Return cWhere

