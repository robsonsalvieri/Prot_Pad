    static __instance As Object
    
    If ValType(__instance) == "U"
        __instance := QueueUsersService():new()
    EndIf
return

//-------------------------------------------------------------------
/*/{Protheus.doc} getAllQueueUsers
Responsável por chamar a consulta e parsear o retorno no formato JSON

@author Totvs
/*/
//-------------------------------------------------------------------
method getAllQueueUsers(nPage as Numeric, nPageSize as Numeric) class QueueUsersService
    Local oSettings := QueueUsersProtheusData():getData() As Object
    Local jResponse := JsonObject():new() As Json

    oSettings:getAll(nPage, nPageSize)

    IIf(oSettings:lOk,; 
            jResponse := oSettings:getJSONResponse(),; 
            jResponse := SetRestFault(oSettings:GetCode(), oSettings:getMessage()))
    
    oSettings:DeActivate()
    FreeObj(oSettings)
return jResponse
