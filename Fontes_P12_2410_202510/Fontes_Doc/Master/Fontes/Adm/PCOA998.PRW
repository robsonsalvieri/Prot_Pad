Function FVldCodCon(nOpc)
	Local llRet	:= .T.
	Local Area	:= AK5->(GetArea())
	If nOpc == 1
		If llRet:= NaoVazio(M->AMV_PROJOR)
			If llRet:= ExistCpo('AMX')
				DbSelectArea("AMV")
				AMV->(DbSetOrder(1))
				If AMV->(Dbseek(xFilial("AMV")+M->AMV_PROJOR+M->AMV_CODCON))
					Aviso(STR0007,STR0009,{STR0008}) //Aten็ใo#"Conta jแ se encontra com Limite no projeto em questใo"#Ok
					llRet :=.F.
				EndIf
			EndIf
		EndIf
	ElseIf nOpc == 2
		If llRet:= NaoVazio(M->AMV_CODCON)
			If llRet:= ExistCpo("AK5")
				DbSelectArea("AMV")
				AMV->(DbSetOrder(1))
				If AMV->(Dbseek(xFilial("AMV")+M->AMV_PROJOR+M->AMV_CODCON))
					Aviso(STR0007,STR0009,{STR0008}) //Aten็ใo#"Conta jแ se encontra com Limite no projeto em questใo"#Ok
					llRet :=.F.
				Else		
					DbSelectArea("AK5")
					CTT->(DbSetOrder(1))
					If AK5->(DbSeek(xFilial("AK5")+M->AMV_CODCON))
						If AK5->AK5_TIPO == '1' //Conta Sintetica
							Aviso(STR0007,STR0010,{STR0008})  //Aten็ใo#"Nใo pode ser definido valor para Conta Sint้tica"#Ok
							llRet	:= .F.
						EndIf
					EndIf
				EndIf
			EndIf
		EndIf
	EndIf
	RestArea(Area)
Return llRet


