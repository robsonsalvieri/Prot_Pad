TRCell():New(oSection2,"GRUPO"		,"SB1",STR0016				,cB1_GRUPO	,nB1_GRUPO	,/*lPixel*/,{||SB1->B1_GRUPO})
TRCell():New(oSection2,"UM"			,"SB1",STR0017				,cB1_UM		,nB1_UM		,/*lPixel*/,{||SB1->B1_UM})
