If GetRpoRelease() >= "12.1.2410"
	cExpData := "20260331"
	lRetMsg  := PCPExpSV(cExpData,"MATR400", "PCPR400")
EndIf

If lRetMsg  
	If TRepInUse()
		//Ŀ
		//Interface de impressao                                                  
		//
		oReport := ReportDef()
		oReport:PrintDialog()
	Else
		MATR400R3()
	EndIf
EndIf

