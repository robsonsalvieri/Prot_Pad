			If Self:oAdapter:getPageBeneficiaries()
				lSucess := .T.
				Self:nCodeStatus := 200
				Self:jResult := Self:oAdapter:getJsonResult()
			EndIf
		Endif
	EndIf

Return lSucess

/*/{Protheus.doc} getSupplementaryHealth
