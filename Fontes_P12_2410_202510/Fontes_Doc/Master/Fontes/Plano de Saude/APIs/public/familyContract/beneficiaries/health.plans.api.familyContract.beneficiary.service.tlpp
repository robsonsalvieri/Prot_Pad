		// Verificação dos query parameters informado na requisição
		aAdd(aFields, {"field" : "subscriberId", "required" : .f., "type" : "C", "size" : nSizeSubscriberId})

		If Self:checkBodyFields(aFields, "E002", self:jParams)

			Self:oAdapter := BeneficiaryAdapter():New()
