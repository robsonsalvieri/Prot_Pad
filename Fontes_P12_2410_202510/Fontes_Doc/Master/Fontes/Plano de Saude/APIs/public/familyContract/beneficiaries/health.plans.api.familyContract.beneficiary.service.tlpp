/*/{Protheus.doc} getBeneficiaryId
Método responsavel por retornar os dados do beneficiário

@type method
@author vincius.queiros
@since 13/10/2023
@version 12.1.2410
/*/
method getBeneficiaryId() as logical class BeneficiaryService

	local lSucess := .f. as logical
	local aKeys := {} as array
	local cSubscriberId := "" as character
	local nSizeKey := tamSX3("BA1_CODINT")[1]+tamSX3("BA1_CODEMP")[1]+tamSX3("BA1_MATRIC")[1]+tamSX3("BA1_TIPREG")[1]+tamSX3("BA1_DIGITO")[1] as numeric

	aAdd(aKeys, {"type" : "pathParams", "key" : "subscriberId"})

	if self:checkRequiredKeys(aKeys, "E001") // Not Acceptable
		cSubscriberId := padr(self:jPath["subscriberId"], nSizeKey)

		BA1->(dbSetOrder(2))
		if BA1->(msSeek(xFilial("BA1")+cSubscriberId))
			self:setAttributeJson({"attribute" : "subscriberId", "value" : BA1->(BA1_CODINT+BA1_CODEMP+BA1_MATRIC+BA1_TIPREG+BA1_DIGITO), "type" : "C"})
			self:setAttributeJson({"attribute" : "name", "value" : BA1->BA1_NOMUSR, "type" : "C"})
			self:setAttributeJson({"attribute" : "socialName", "value" : BA1->BA1_NOMSOC, "type" : "C"})
			self:setAttributeJson({"attribute" : "birthDate", "value" : BA1->BA1_DATNAS, "type" : "D"})
			self:setAttributeJson({"attribute" : "effectiveDate", "value" : BA1->BA1_DATINC, "type" : "D"})
			self:setAttributeJson({"attribute" : "beneficiaryType", "value" : BA1->BA1_TIPUSU, "type" : "C"})
			self:setAttributeJson({"attribute" : "blockDate", "value" : BA1->BA1_DATBLO, "type" : "D"})
			self:setAttributeJson({"attribute" : "email", "value" : BA1->BA1_EMAIL, "type" : "C"})
			self:setAttributeJson({"attribute" : "telephone", "value" : BA1->(BA1_DDD+BA1_TELEFO), "type" : "C"})
			self:setAttributeJson({"attribute" : "cityCode", "value" : BA1->BA1_CODMUN, "type" : "C"})
			self:setAttributeJson({"attribute" : "cityDescription", "value" : BA1->BA1_MUNICI, "type" : "C"})
			self:setAttributeJson({"attribute" : "stateAbbreviation", "value" : BA1->BA1_ESTADO, "type" : "C"})
			self:setAttributeJson({"attribute" : "district", "value" : BA1->BA1_BAIRRO, "type" : "C"})
			self:setAttributeJson({"attribute" : "address", "value" : BA1->BA1_ENDERE, "type" : "C"})
			self:setAttributeJson({"attribute" : "addressNumber", "value" : BA1->BA1_NR_END, "type" : "C"})
			self:setAttributeJson({"attribute" : "zipCode", "value" : BA1->BA1_CEPUSR, "type" : "C"})

			self:setBeneficiaryPlan()

			lSucess := .T.
			self:nCodeStatus := 200 // Ok
		else
			self:setError("E002", "Nenhum beneficiário foi encontrada",;
				"Não foi encontrado nenhum beneficiário para o identificar "+cSubscriberId+" na tabela BA1 (BA1_CODINT+BA1_CODEMP+BA1_MATRIC+BA1_TIPREG+BA1_DIGITO).",;
				404) // Not found
		endif
	endif

return lSucess

/*/{Protheus.doc} processSupplementaryHealth
