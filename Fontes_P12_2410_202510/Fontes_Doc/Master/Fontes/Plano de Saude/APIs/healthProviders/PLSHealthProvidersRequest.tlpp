//------------------------------------------------------------------- 
Method getRda() class PLSHealthProvidersRequest

    Local aRet := self:oService:getJsonRda()
   
    self:cResponse := aRet[1]:toJson()
    self:nStatus   := aRet[2]

Return

Method getCbos() class PLSHealthProvidersRequest

    Local aRet := {}

    self:oService:setCollectionParams(self:oRest:healthProviderId, self:oRest:page, self:oRest:pageSize)
    
    aRet := self:oService:getSpecialty(self:oRest:locationCode, .T., self:oRest:filter)
      if aRet[1]
        self:cResponse := aRet[2,1]:toJson()
        self:nStatus   := aRet[2,2]
    else
        self:getError()
    endIf

Return self:lSuccess
