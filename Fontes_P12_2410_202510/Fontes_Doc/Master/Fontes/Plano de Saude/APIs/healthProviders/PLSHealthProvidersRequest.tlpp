class PLSHealthProvidersRequest from CenRequest 

    Data oRest as Object
    Data oService as Object
    
    Public Method New()
    Public Method valida()
    Public Method getError()
    Public Method getRda()
    Public Method getSpecialty()
    Public Method procCollection()
    Public Method getCbos()
    Public Method applyFilter()

endClass

Method New(oRest) class PLSHealthProvidersRequest

    _Super:New(oRest)
    self:oService  := PLSHealthProvidersSvc():New(oRest:healthProviderCode)
Return self

Method applyFilter(oRest) class PLSHealthProvidersRequest
    self:oService:applyFilter(oRest)
Return self


//-------------------------------------------------------------------
/*/{Protheus.doc} Valida se pode gerar o json de resposta

@author  sakai
@version P12
@since   06/09/22
/*/
//------------------------------------------------------------------- 
Method valida() class PLSHealthProvidersRequest
    
    self:lSuccess := self:oService:vldExiRda()
    
    if !self:lSuccess
        self:getError()
    endIf

Return self:lSuccess


Method procCollection() class PLSHealthProvidersRequest

    Local aRet := {}

    self:oService:setCollectionParams(self:oRest:healthProviderId, self:oRest:page, self:oRest:pageSize)
    aRet := self:oService:procCollection()
    
    if aRet[1]
        self:cResponse := aRet[2,1]:toJson()
        self:nStatus   := aRet[2,2]
    else
        self:getError()
    endIf

Return self:lSuccess

/*-------------------------------------------------------------------
{Protheus.doc} getSpecialty
---------------------------------------------------------------------*/ 
Method getSpecialty() class PLSHealthProvidersRequest

    Local aRet := {}

    self:oService:setCollectionParams(self:oRest:healthProviderId, self:oRest:page, self:oRest:pageSize)
    
    aRet := self:oService:getSpecialty(self:oRest:attendanceLocation)
      if aRet[1]
        self:cResponse := aRet[2,1]:toJson()
        self:nStatus   := aRet[2,2]
    else
        self:getError()
    endIf

Return self:lSuccess


Method getError() class PLSHealthProvidersRequest
    
    Local oErrorAux   := self:oService:getError()

    self:lSuccess     := .F.
    self:nFault       := oErrorAux['status']
    self:nStatus      := oErrorAux['status']
    self:cFaultDesc   := oErrorAux['message']
    self:cFaultDetail := oErrorAux['detailedMessage']

Return self:lSuccess


