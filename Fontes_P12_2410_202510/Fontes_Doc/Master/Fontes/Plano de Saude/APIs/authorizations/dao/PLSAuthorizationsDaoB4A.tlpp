Method vldReenvioHAT(cMatric, cCodRda) class PLSAuthorizationsDaoB4A

    Local cQuery := ""
    Local lFound := .F.
    Local lRet   := .T.

    cQuery += " SELECT "
    cQuery += self:getCampos()

    cQuery += " FROM " + RetSqlName("B4A")+" B4A "
    cQuery += " LEFT JOIN " + RetSqlName("BEA") + " BEA"
	cQuery += "   ON BEA_FILIAL = '"  + xFilial("BEA")+ "' "
