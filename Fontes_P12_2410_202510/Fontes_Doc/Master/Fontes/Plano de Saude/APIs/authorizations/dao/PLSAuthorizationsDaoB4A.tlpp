    cQuery += "   AND B4A.D_E_L_E_T_ = ' ' "
   
    self:setQuery(cQuery)
	lFound := self:executaQuery()
    
   //Se achou a guia, retorna falso pois nao podera realizar o reenvio
    if lFound
        lRet := .F.
        
        cAliTrb := self:getAliasTemp()
        while !self:isEof()
            aadd(self:aGuiasPrest,(cAliTrb)->(B4A_OPEMOV+B4A_ANOAUT+B4A_MESAUT+B4A_NUMAUT))
            self:dbSkip()
        endDo

    endIf

Return lRet

Method buscaGuiasRelacionadas() class PLSAuthorizationsDaoB4A

    Local cQuery  := ""
    Local cAliTrb := ""
    Local lFound  := .F.

    cQuery += " SELECT "
    cQuery += " B4A_OPEMOV, B4A_ANOAUT, B4A_MESAUT, B4A_NUMAUT "

    cQuery += " FROM " + RetSqlName("B4A")+" B4A "
    cQuery += " LEFT JOIN " + RetSqlName("BEA") + " BEA"
	cQuery += "   ON BEA_FILIAL = '"  + xFilial("BEA")+ "' "
	cQuery += "   AND BEA_OPEMOV = "+self:cSubstrChar+"(B4A_GUIREF,01,04) "
	cQuery += "   AND BEA_ANOAUT = "+self:cSubstrChar+"(B4A_GUIREF,05,04) "
	cQuery += "   AND BEA_MESAUT = "+self:cSubstrChar+"(B4A_GUIREF,09,02) "
	cQuery += "   AND BEA_NUMAUT = "+self:cSubstrChar+"(B4A_GUIREF,11,08) "
	cQuery += "   AND BEA.D_E_L_E_T_ = ' ' "

    cQuery += " WHERE B4A_FILIAL = '" + xFilial("B4A") +"' "
    cQuery += "   AND B4A_GUIREF = '" + self:cGuia + "' "
    cQuery += "   AND B4A.D_E_L_E_T_ = ' ' "
    
    cQuery += " ORDER BY "
    cQuery += "    B4A_OPEMOV, "
    cQuery += "    B4A_ANOAUT, "
    cQuery += "    B4A_MESAUT, "
    cQuery += "    B4A_NUMAUT "
    cQuery += self:getQryPage()

    self:setQuery(cQuery)
	lFound := self:executaQuery()

    if lFound

        cAliTrb := self:getAliasTemp()
        while !self:isEof()
            aadd(self:aGuiasPrest,(cAliTrb)->(B4A_OPEMOV+B4A_ANOAUT+B4A_MESAUT+B4A_NUMAUT))
            self:dbSkip()
        endDo

    endIf

Return lFound
