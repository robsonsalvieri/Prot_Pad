Function PLSA395
//Ŀ
// Pedir a RolxTabela Padrao                                                
//
PRIVATE aRotina   := MenuDef()
PRIVATE cCadastro := Fundesc() //"Rol x Tabela Padrao"
PRIVATE cFiltro
//Ŀ
// Chama a funcao de browse dos dados...                                    
//
cFiltro := "@BR8_FILIAL = '"+xFilial("BR8")+"' AND BR8_CODROL <> ' ' AND D_E_L_E_T_ = ' '"
BR8->(DbSetOrder(1))
DBSelectArea("BR8")
SET FILTER TO &cFiltro
BR8->(DBSeek(xFilial("BR8")))

BR8->(mBrowse(06,01,22,75,"BR8",,,,,,,,,,, .T. ))
BR8->(DbClearFilter())    
//Ŀ
// Fim da Rotina Principal...                                               
//
Return             

