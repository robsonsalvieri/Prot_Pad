			Else
				CREATE SCOPE aScopeCount FOR (;
												IsMark( "RE7_CHK" , "1" );
												.and.;
												IF( !( "ALL_ALS" $ aFiltroCpos[ 01 , 02 ] ) , RE7_ALS $ aFiltroCpos[ 01 , 02 ] , .T. );
