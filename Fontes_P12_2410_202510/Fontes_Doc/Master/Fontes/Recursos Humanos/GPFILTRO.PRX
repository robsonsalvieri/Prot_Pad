Local bAscan	:= { || NIL }

Local lValidArq := .T.

Local nPosArq	:= 0

DEFAULT aListBox	:= {}	
DEFAULT cAliasPesq	:= ""

IF ( ValType( oListBox ) == "O" )
	IF !Empty( cAliasPesq )
