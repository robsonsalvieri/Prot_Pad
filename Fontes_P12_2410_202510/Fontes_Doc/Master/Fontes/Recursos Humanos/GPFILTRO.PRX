												.and.;
												IF( !( "ALL_ALS" $ aFiltroCpos[ 01 , 02 ] ) , FILTRO_ALS $ aFiltroCpos[ 01 , 02 ] , .T. );
												.and.;
												IF( !( "ALL_PRG" $ aFiltroCpos[ 02 , 02 ] ) , FILTRO_PRG $ aFiltroCpos[ 02 , 02 ] , .T. );
