Static Function MyBuildTxt(	cAlias			,;
							uExpFil			,;
							cExpFil			,;
							aHeader			,;
							nPosHeader		,;
							nOper	 		,;
							nMaxSize		;
						  )

Local aOper 	:= GetOper()[1]

Local lStringOk		:= .T.
DEFAULT nMaxSize	:= 2000
cTxtFil := ""

Begin Sequence

	IF !( lStringOk := MyBuildExp(	cAlias					,;
									uExpFil					,;
									@cExpFil				,;
									aHeader[ nPosHeader ]	,;
									aOper			 		,;
									nOper	 		 		,;
									nMaxSize				;
						  		 );
		)							  		 
		Break
	EndIF

	cTxtFil := GpFltBldDesc( cExpFil , aHeader , cAlias )

End Sequence

Return( cTxtFil )

