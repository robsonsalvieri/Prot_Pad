Static Function GpRmvAndOr( cAlias , cAndOr , oLBoxTarget )

Local cCnt
Local cOption

Begin Sequence

	IF Empty( oLBoxTarget:aArray )
		Break
	EndIF

	cAndOr		:= Upper( AllTrim( cAndor ) )
	cCnt		:= Upper( AllTrim( oLBoxTarget:aArray[ oLBoxTarget:nAt , 04 ] ) )
	cOption		:= IF( ( cAndOr == "AND" ) , " .and. " , " .or. "  )

	IF !(;
