Function gp240PERCHI(cAlias, nIndex, cKey, cRetorno, cFiltro)

	Local aArea		:= GetArea()
	Local xConteudo := ""

	dbSelectArea( cAlias )
	dbSetOrder(nIndex)
	dbSeek(cKey)
	cFiltro += " .AND. RCH->RCH_PERSEL=='1' .AND. RCH->RCH_ROTEIR== '"+ fGetRotOrdinar()  +"' "
	While !Eof()
		If Empty(cFiltro)
			xConteudo := &(cAlias + "->" + cRetorno)
			Exit
		ElseIf (&(cFiltro) == .T.)
			xConteudo := &(cAlias + "->" + cRetorno)
			Exit
		EndIf
		dbSkip()
	EndDo

	If ( ValType("xConteudo") == "U" )
		xConteudo := ""
	EndIf

	RestArea( aArea )

Return(xConteudo)
