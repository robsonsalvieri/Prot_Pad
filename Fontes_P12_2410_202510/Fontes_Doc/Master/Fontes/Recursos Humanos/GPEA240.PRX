/*/{Protheus.doc} fAhgoraAf
Processo para enviar os dados de inclusão/alteração/deleção para integração com Ahgora
@since 10/09/2024
@autor	Bruno Costa
@version 1.0
/*/
Static Function fAhgoraAf(oModel)
	Local oGrid 	  := oModel:GetModel("GPEA240_SR8")
	Local dDtIni	  := CTOD("//")
	Local dDtAte	  := CTOD("//")
	Local cTipoAfa	  := ""
	Local cSeq	      := ""
	Local cTpOper	  := ""
	Local cVldPonto   := SuperGetMv("MV_INTEGPW",, "1")
	Local nLinha	  := 0
	Local aChave      := {}
	Local aCodInterno := {}

	If cVldPonto <> "1"
		If !GPEAhGora():fAhgoraPW(cVldPonto)
			Return
		EndIf
	EndIf

	For nLinha := 1 to oGrid:Length()
		oGrid:GoLine(nLinha)
		dDtIni	 := oGrid:GetValue("R8_DATAINI")
		cTipoAfa := oGrid:GetValue("R8_TIPOAFA")
		cSeq	 := oGrid:GetValue("R8_SEQ")
		dDtAte	 := oGrid:GetValue("R8_DATAFIM")
		cTpOper  := If(oGrid:IsDeleted(), "E", If(oGrid:IsInserted(), "I", If(oGrid:IsUpdated(), "A", "")))
		If !Empty(cTpOper)
			aAdd(aChave, {cEmpAnt + "|" + SRA->RA_FILIAL + "|" + SRA->RA_MAT + "|" + cSeq + "|" + cTipoAfa + "|" + dToS(dDtIni) + If(Empty(dDtAte), "", "|" + dToS(dDtAte))})
			aAdd(aCodInterno, {SRA->RA_FILIAL, SRA->RA_MAT, cEmpAnt+SRA->RA_FILIAL+SRA->RA_MAT+cSeq, cSeq, dDtIni, cTpOper})
		EndIf
	Next nLinha

	GPEAhGora():gravaRUM("I", "SR8",, aCodInterno, "2",,,,, aChave)

Return .T.

/*/{Protheus.doc} fNewDiasEmp
Nova Função para calcular os dias pagos pela empresa
@since 28/01/2025
@autor	martins.marcio
@version 1.0
/*/
Static Function fNewDiasEmp(oGrid, nLinAtual, cContAfa, dDtIni, cTipo, nDiasEmp, nDiasTot)
	Local nLinha := 0
	Local nLenGrid	:= oGrid:Length()
	Local lBenefPrev := .F.
	Local nDiasReinc  := If(cPaisLoc == "BRA", gp240RetCont("RCM", 1, "RCM_FILIAL =  '" + xFilial("RCM") + "' AND RCM_TIPO = '" + oGrid:GetValue("R8_TIPOAFA") + "'", "RCM_REINCI",,.T.), 0)
	Local lReinicDEmp := .F. //Indica se o primeiro afastamento da sequencia iniciou há mais de 60 dias em relação ao afastamento atual
	Local dDtMater	:= STOD("")
	Local nPosMater	:= 0
	Local nDiasAbat	:= 0

	Default oGrid		:= Nil
	Default nLinAtual	:= 0
	Default cContAfa	:= ""
	Default dDtIni		:= CToD("")
	Default cTipo		:= ""
	Default nDiasEmp	:= 0
	Default nDiasTot	:= 0

	For nLinha := nLenGrid to 1 step -1
		If nLinha == nLinAtual
			Loop
		EndIf
		oGrid:GoLine(nLinha)
		If !oGrid:IsDeleted()
			If oGrid:GetValue("R8_SEQ") == cContAfa
				If oGrid:GetValue("R8_DURACAO") > oGrid:GetValue("R8_DIASEMP")
					lBenefPrev	:= .T.
					nDiasEmp := 0
					Exit
				EndIf
				If dDtIni >= (oGrid:GetValue("R8_DATAINI") + nDiasReinc )
					If Empty(oGrid:GetValue("R8_CONTAFA")) .Or. oGrid:GetValue("R8_DIASEMP") == 15
						lReinicDEmp := .T.
					EndIf
					//Verifica se o afastamento foi interrompido por licenca maternidade
					If cTipo $ "006|007|008"
						dDtMater := oGrid:GetValue("R8_DATAFIM")+1
						For nPosMater := 1 to nLenGrid
							oGrid:GoLine(nPosMater)
							If !oGrid:IsDeleted()
								nDiasEmp := IIf(oGrid:GetValue("R8_DATAINI")  == dDtMater .And. oGrid:GetValue("R8_DATAFIM") + 1 == dDtIni, 0, nDiasEmp)
							EndIf
						Next nPosMater
					EndIf
				Else
					nDiasAbat	+= oGrid:GetValue("R8_DURACAO")//Dias a serem abatidos dos dias a serem pagos pela empresa
					nDiasTot 	+= oGrid:GetValue("R8_DURACAO")
				EndIf
				cContAfa	:= oGrid:GetValue("R8_CONTAFA")
				If Empty(cContAfa) .Or. nDiasEmp == 0 .Or. oGrid:GetValue("R8_DIASEMP") == 15
					Exit
				EndIf
			EndIf
		EndIf
	Next nLinha
	If !lReinicDEmp
		nDiasEmp	:= max(0, nDiasEmp - nDiasAbat)
	EndIf

Return
