Static Function Gp240Commit(oModel)

	Local aArea			:= GetArea()
	Local aSR8ID		:= {}
	Local aGridInsert   := {}
	Local aGridDelet    := {}
	Local aGridTab      := {}
	Local cNumId		:= ""
	Local cNumIdAux		:= ""
	Local nOperation	:= oModel:GetOperation()
	Local nLinha	 	:= 0
	Local nLenGrid		:= 0
	Local nLinAtual 	:= 0
	Local nX            := 0
	Local oGrid 	 	:= oModel:GetModel("GPEA240_SR8")
	Local oGridSRA		:= oModel:GetModel("GPEA240_SRA")
	Local dDataIni
	Local dDataFim
