Function ResIncBox( lValid , lRetDesc , cOpcDesc )

	Local cOpcBox

	DEFAULT lValid		:= .F.
	DEFAULT lRetDesc	:= .F.

	If !( lValid )

		If !( lRetDesc )

			cOpcBox := ( "0=" + STR0029 + ";" )		//"Ninguna
			cOpcBox += ( "1=" + STR0030 + ";" )		//"Incapacidad Temporal"
			cOpcBox += ( "2=" + STR0031 + ";" )		//"Valuacion Inicial Provisional"
			cOpcBox += ( "3=" + STR0032 + ";" )		//"Valuacion Inicial Definitiva"
