Static Function Gp240Sr8Null()
	Local aArea := GetArea()
	Local nRet	:= 1

	DbSelectArea("SR8")

	If DbSeek(xFilial("SRA")+SRA->RA_MAT)
		nRet := 0
		While SR8->(!Eof() .and. R8_FILIAL == xFilial("SRA") .and. R8_MAT == SRA->RA_MAT)
			If R8_STATUS == "C" .and. R8_DPAGOS > 0
