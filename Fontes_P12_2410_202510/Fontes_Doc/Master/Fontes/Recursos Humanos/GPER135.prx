Function GPER135()

	Local aArea 	:= GetArea()
	Local oReport   := Nil

	Private cPerg	:= "GPER135"
	Private cUltFil := ""
	Private aCodFol := {}
	Private aInfo   := {}
	Private aOrd    := {	OemToAnsi(STR0016),; //"Filial + Matricula",
						  	OemToAnsi(STR0017),; //"Filial + Centro de Custos"
							OemToAnsi(STR0018) } //"Filial + Departamento"

