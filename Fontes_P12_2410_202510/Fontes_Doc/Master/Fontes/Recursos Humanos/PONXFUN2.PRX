/*/{Protheus.doc} fParFrtLog
Gera um array com os parâmetros da pergunta utilizada
@type Function
@author Marco Nakazawa
@since 07/11/2024
@return NIL
/*/
Function fParFrtLog(cPerg)
Local aPerg		:= {}
Local aObjSx1	:= {}
Local nI		:= 0
Local nLenPerg	:= 0
Local nPos		:= 0
Local oSX1		:= Nil

Default cPerg := ""

If !Empty(cPerg)
	oSX1 := FWSX1Util():New()
	oSX1:AddGroup(cPerg)
	oSX1:SearchGroup()

	If Len(oSX1:aGrupo) >= 1 .And. (nLenPerg := Len(oSX1:aGrupo[1][2])) >= 1
		For nI := 1 To nLenPerg
			aObjSx1 := ClassDataArr(oSX1:aGrupo[1 ,2, nI])
			
			If !Empty(AllTrim(aObjSx1[1,2]))
				If (nPos := aScan(aObjSx1, {|x| x[1] == "CX1_DEF0" + cValToChar(&("MV_PAR" + PadL(cValToChar(nI), 2, "0")))})) > 0
					aAdd(aPerg, PadR(oSX1:aGrupo[1 ,2, nI]:CX1_PERGUNT,30," ") + cValToChar(&("MV_PAR" + PadL(cValToChar(nI), 2, "0"))) +  " - " + AllTrim(aObjSx1[nPos, 2]))
				EndIf
			Else
				If (nPos := aScan(aObjSx1, {|x| x[1] == "CX1_TIPO"})) > 0
					If aObjSx1[nPos, 2] == "D"
						aAdd(aPerg, PadR(oSX1:aGrupo[1 ,2, nI]:CX1_PERGUNT,30," ") + dToC(&("MV_PAR" + PadL(cValToChar(nI), 2, "0"))))
					ElseIf aObjSx1[nPos, 2] == "C"
						aAdd(aPerg, PadR(oSX1:aGrupo[1 ,2, nI]:CX1_PERGUNT,30," ") + &("MV_PAR" + PadL(cValToChar(nI), 2, "0")))
					EndIf
				EndIf
			EndIf
		Next

	EndIf
EndIf

Return aPerg