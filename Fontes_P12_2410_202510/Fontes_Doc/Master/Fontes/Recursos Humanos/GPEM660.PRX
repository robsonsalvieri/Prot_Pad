Function fExcRC1()
Local aSays			:= {}
Local aButtons		:= {}

Private lAbortPrint := .F.

nOpca := 0
Pergunte("GPM660",.F.)

AADD(aSays,OemToAnsi(STR0011) )  //"Exclusao de titulos nao liberados, liberados e inconsistentes."

AADD(aButtons, { 5,.T.,{|| Pergunte("GPM660",.T. ) } } )
AADD(aButtons, { 1,.T.,{|o| nOpca := 1,IF(GPM660OK(),FechaBatch(),nOpca:=0) }} )
AADD(aButtons, { 2,.T.,{|o| FechaBatch() }} )

//Ŀ
// Inicializa a gravacao dos lancamentos do SIGAPCO        
//
PcoIniLan("000092")
FormBatch( STR0012, aSays, aButtons ) //"Exclusao de Titulos"

//Ŀ
// Variaveis utilizadas para parametros                         
//
If nOpca == 1
	ProcGpe({|lEnd| fProcExc()},,,.T.)  // Chamada do Processamento
Endif
//Ŀ
// Finaliza a gravacao dos lancamentos do SIGAPCO          
//
PcoFinLan("000092")

Return Nil

/*

Ŀ
Funo     fExcRC1   Autor  Emerson Rosa de Souza  Data  05.08.01 
Ĵ
Descrio  Permite excluir titulos do arquivo RC1                     
Ĵ
Parametros 								                                     
Ĵ
 Uso      Generico                                                    
ٱ

*/
Function fProcExc()
Local cInicio
Local cFim
Local cPrefixo := "GPE"
Local cDelete  := ""
Local cPrefix	  := ""
Local lRetBx	  := .T.
Local lExclui	  := .T.
Local nX		  := 0
Local cArqSE2
local lRotinaEai:=  .F.
Local lMsgHelp	:= .F.
Local aRet		:= {}
Local lRet		:= .T.
Local lFilCent  := RC1->( ColumnPos("RC1_FILCEN") ) > 0
Local cChvAuxE2	:= "" // Campos complementares para posicionar na SE2: E2_PARCELA+E2_TIPO+E2_FORNECE+E2_LOJA
Local oSX1	:= FWSX1Util():New()
Local lNewPerg	:= .F.

Private pRetEAI := .F.

cDel := "D_E_L_E_T_ = '*'"

oSX1:AddGroup("GPM660")
oSX1:SearchGroup()

//Ŀ
// Carregando as Perguntas                                      
//
cFilDe     :=  mv_par01 //Filial De
cFilAte    :=  mv_par02	//Filial Ate
cCodTitDe  :=  mv_par03	//Cod. do Titulo De
cCodTitAte :=  mv_par04 //Cod. do Titulo Ate
cNumTitDe  :=  mv_par05	//Nro do Titulo De
cNumTitAte :=  mv_par06	//Nro do Titulo Ate
dDtEmisDe  :=  mv_par07	//Data Emissao De
dDtEmisAte :=  mv_par08	//Data Emissao Ate
dDtVencDe  :=  mv_par09	//Data Vencimento De
dDtVencAte :=  mv_par10	//Data Vencimento Ate
cTipTit    :=  Str(mv_par11,1) //Tipo de Titulo    1-Nao Liberado, 2-Liberados, 3-Inconsistentes, 4-Todos

lNewPerg := Len(oSX1:GetGroup("GPM660")[2]) >= 23
If lNewPerg
	cTipoDe     :=  PADR( AllTrim(mv_par12), GetSx3Cache("RC1_TIPO", "X3_TAMANHO") ) //Tipo Titulo De
	cTipoAte    :=  PADR( AllTrim(mv_par13), GetSx3Cache("RC1_TIPO", "X3_TAMANHO") ) //Tipo Titulo Ate ?
	cNaturDe	:=  PADR( AllTrim(mv_par14), GetSx3Cache("RC1_NATURE", "X3_TAMANHO") ) //Natureza De ?
	cNaturAte	:=  PADR( AllTrim(mv_par15), GetSx3Cache("RC1_NATURE", "X3_TAMANHO") ) //Natureza Ate ?
	cForneDe	:=  PADR( AllTrim(mv_par16), GetSx3Cache("RC1_FORNEC", "X3_TAMANHO") ) //Fornecedor De ?
	cLojaDe		:=  PADR( AllTrim(mv_par17), GetSx3Cache("RC1_LOJA", "X3_TAMANHO") ) //Loja De ?
	cForneAte	:=  PADR( AllTrim(mv_par18), GetSx3Cache("RC1_FORNEC", "X3_TAMANHO") ) //Fornecedor Ate ?
	cLojaAte	:=  PADR( AllTrim(mv_par19), GetSx3Cache("RC1_LOJA", "X3_TAMANHO") ) //Loja Ate ?
	cPrefixDe	:=  PADR( AllTrim(mv_par20), GetSx3Cache("RC1_PREFIX", "X3_TAMANHO") ) //Prefixo De ?
	cPrefixAte	:=  PADR( AllTrim(mv_par21), GetSx3Cache("RC1_PREFIX", "X3_TAMANHO") ) //Prefixo Ate ?
	cParcDe		:=  PADR( AllTrim(mv_par22), GetSx3Cache("RC1_PARC", "X3_TAMANHO") ) //Parcela De ?
	cParcAte	:=  PADR( AllTrim(mv_par23), GetSx3Cache("RC1_PARC", "X3_TAMANHO") ) //Parcela Ate ?
EndIf

dbSelectArea( "RC1" )

//Ŀ
// Carrega Regua Processamento	                                  
//
GpProcRegua(RC1->(RecCount()))

dbSetOrder(1)
dbSeek(cInicio :=(xFilial("RC1",cFilDe)+cFilDe+cCodTitDe), .T. )
cInicio := "RC1->RC1_FILIAL+RC1->RC1_FILTIT+RC1->RC1_CODTIT"
cFim := xFilial("RC1",cFilAte)+cFilAte+cCodTitAte
lRotinaEai := FWHasEAI("GPEM660",.T.) //VERIFICA SE A INTEGRACAO DE TITULOS COM SISTEMAS EXTERNOS ESTA HABILITADO

While !Eof() .And. ( &cInicio <= cFim )

	lRet := .T.

	IF lAbortPrint
		Break
	EndIF

	//Ŀ
	// Consiste parametrizacao					                        
	//
	If (RC1->RC1_CODTIT < cCodTitDe) .Or. (RC1->RC1_CODTIT > cCodTitAte) .Or.;
	   (RC1->RC1_NUMTIT < cNumTitDe) .Or. (RC1->RC1_NUMTIT > cNumTitAte) .Or.;
 	   (RC1->RC1_VENCTO < dDtVencDe) .Or. (RC1->RC1_VENCTO > dDtVencAte) .Or.;
   	   (RC1->RC1_EMISSA < dDtEmisDe) .Or. (RC1->RC1_EMISSA > dDtEmisAte) .Or.;
  	   (RC1->RC1_INTEGR == "0" .And. cTipTit $ "2*3") .Or.;
   	   (RC1->RC1_INTEGR == "1" .And. cTipTit $ "1*3") .Or.;
   	   (RC1->RC1_INTEGR == "2" .And. cTipTit $ "1*2") .Or.;
	   (lNewPerg .And. (;
	   		( (RC1->RC1_TIPO < cTipoDe)		.Or. (RC1->RC1_TIPO > cTipoAte)) .Or.;
			( (RC1->RC1_NATURE < cNaturDe)	.Or. (RC1->RC1_NATURE > cNaturAte)) .Or.;
			( (RC1->RC1_FORNEC + RC1->RC1_LOJA < cForneDe + cLojaDe) .Or. (RC1->RC1_FORNEC + RC1->RC1_LOJA > cForneAte + cLojaAte)) .Or.;
			( (RC1->RC1_PREFIX < cPrefixDe)	.Or. (RC1->RC1_PREFIX > cPrefixAte)) .Or.;
			( (RC1->RC1_PARC < cParcDe)		.Or. (RC1->RC1_PARC > cParcAte)) ;
	   )) 
   	   dbSelectArea( "RC1" )
   	   RC1->(dbSkip())
   	   Loop
	EndIf

	//Consiste acesso do usuario a filiais
	If ! ( RC1->RC1_FILTIT $ fValidFil() )
		RC1->(dbSkip())
		Loop
	EndIf

	//Ŀ
	// Movimenta barra de processamento				                  
	//
	GpIncProc(STR0013 + RC1->RC1_FILTIT + " - "  + STR0014 +;         //"Titulo: "
					    RC1->RC1_NUMTIT +  " - "  + RC1->RC1_DESCRI )  //"Filial: "

	cPrefix:= RC1->RC1_PREFIX

	If TCCanOpen(RetSqlname("RJ1"))
		fDelDetRes(RC1->RC1_FILTIT,	RC1->RC1_CODTIT, RC1->RC1_PREFIX, RC1->RC1_NUMTIT)
	EndIf

   //Ŀ
	// Ponto de Entrada na Exclusao do Titulo.                
	//
	IF ExistBlock("GPM060EX")
		Begin Transaction
			If ExecBlock("GPM060EX",.F.,.F.)
				RecLock("RC1",.F.,.F.)
				dbDelete()
				MsUnLock()
				//integracao com modulo SIGAPCO
				PcoDetLan("000092","01","GPEM660", .T.)
			EndIf
		End Transaction
	Else
		//-- Titulos 0-Nao liberados ou 2-Inconsistente nao constam no financeiro apenas no nGPE
		//-- Logo apenas eliminanos da Folha
		If  RC1->RC1_INTEGR $"0.2"
			Begin Transaction
				RecLock("RC1",.F.,.F.)
				dbDelete()
				MsUnLock()

				//integracao com modulo SIGAPCO
				PcoDetLan("000092","01","GPEM660", .T.)
			End Transaction
		Else
            //QUANDO HA INTEGRACAO DE TITULOS COM SISTEMAS EXTERNO, NAO EH GERADO O TITULO NO SIGAFIN
			If !lRotinaEai

				//Verifica se os titulos ja foram integrados e exclui do SIGAFIN
				dbSelectArea("SE2")

				//Criado indice temporario para exclusao apenas pelo prefixo (GPE) + numero do titulo.
				//Na exclusao, nao podemos veriricar a filial, pois ela pode ser diferente entre a RC1 e SE2 (financeiro)
				cArqSE2 := criatrab("",.F.)
				IndRegua("SE2",cArqSE2,"E2_PREFIXO+E2_NUM+E2_FILORIG+E2_PARCELA+E2_TIPO+E2_FORNECE+E2_LOJA",,,"Selecionando Registros") //"Selecionando Registros..."
				nIndex 	:= RetIndex("SE2")
				SE2->( dbSetOrder(nIndex+1))
				cChvAuxE2 := PADR( AllTrim(RC1->RC1_PARC), Len(SE2->E2_PARCELA) ) + RC1->RC1_TIPO + RC1->RC1_FORNEC + If(Empty( RC1->RC1_LOJA) , "00", RC1->RC1_LOJA  )

		  		If DbSeek(cPrefix+RC1->RC1_NUMTIT+IIf(lFilCent,RC1->RC1_FILCEN,RC1->RC1_FILTIT) + cChvAuxE2, .F.)
					While !Eof() .And. SE2->E2_FILORIG = IIf(lFilCent,RC1->RC1_FILCEN,RC1->RC1_FILTIT) .AND. SE2->E2_NUM == RC1->RC1_NUMTIT .And. cPrefix == SE2->E2_PREFIXO;
						.And. SE2->(E2_PARCELA+E2_TIPO+E2_FORNECE+E2_LOJA) == cChvAuxE2
						lRetBx	:= .T.
						//Titulo Principal ou Titulo Filho ja baixado no SIGAFIN nao pode ser excluido
						If	( !Empty(E2_BAIXA) .And. ( E2_VALOR # E2_SALDO ) ) .AND. AllTrim(E2_ORIGEM) == 'GPEM670'
							MsgAlert( OemToAnsi( STR0021 +  RC1->RC1_NUMTIT + STR0022), OemToAnsi(STR0017) ) //"O ttulo "##" nao pode ser excluido pois j foi baixado no Mdulo Financeiro" ##"Atencao"
							lRetBx:= .F.
							Exit
						Endif
						dbSkip()
					Enddo

					If lRetBx

						Begin Transaction

							//Exclui o titulo do SE2
							dbSelectArea("SE2")
					 		dbSeek(cPrefix+RC1->RC1_NUMTIT+IIf(lFilCent,RC1->RC1_FILCEN,RC1->RC1_FILTIT) + cChvAuxE2, .F.)
							lExclui	:=	.T.
							While  SE2-> ( !Eof() ) .AND. SE2->E2_FILORIG = IIf(lFilCent,RC1->RC1_FILCEN,RC1->RC1_FILTIT) .And. SE2->E2_NUM = RC1->RC1_NUMTIT .And. cPrefix == SE2->E2_PREFIXO;
								.And. SE2->(E2_PARCELA+E2_TIPO+E2_FORNECE+E2_LOJA) == cChvAuxE2
								//Ŀ
								// Verifica se o titulo nao esta em bordero (Rotina Prov: FINA050)   
								//

								If lExclui .AND. !Empty(SE2->E2_NUMBOR)
									lExclui	:= .F.
								Else
									// Caso seja o titulo principal, verifica se existe titulo de impostos
									// gerado, e confirma se estes estao ou nao em um outro bordero.
									aTitImp := ImpCtaPg()
									For nX := 1 To Len(aTitImp)
										If !Empty(aTitImp[nX][8]) .and. (aTitImp[nX][7] == aTitImp[nX][6])
											lExclui	:= .F.
										Endif
									Next
								EndIf

								If ( !lExclui )
									lMsgHelp	:= .T.
								Else
									RecLock("SE2",.F.,.F.)
									dbDelete()
									MsUnLock()
									SE2->( FKCOMMIT() )
								EndIf
								SE2-> ( dbSkip() )
							Enddo

					 		//Exclui o titulo do GPE
					 		If ( lExclui )
								RecLock("RC1",.F.,.F.)
								dbDelete()
								MsUnLock()
								//integracao com modulo SIGAPCO
								PcoDetLan("000092","01","GPEM660", .T.)
							EndIf

						End Transaction

						If lMsgHelp
							Help("",1,"FA050BORD")
							lMsgHelp := .F.
						EndIf

					Endif
				Endif
			else

				Begin Transaction
	 	  			aRet := FwIntegDef("GPEM660")
					If aRet <> nil .And. !Empty(aRet)
						lRet := aRet[1]
						If !lRet
							Help( ,, OemToAnsi(STR0017),, aRet[2], 1, 0 ) // Ateno
						EndIf
					EndIf
					If lRet
						RecLock("RC1",.F.,.F.)
						If pRetEAI = .T.
							dbDelete()
							MsUnLock()
					 	endif
						//integracao com modulo SIGAPCO
						PcoDetLan("000092","01","GPEM660", .T.)
					EndIf
				End Transaction
			endif
		Endif
	Endif

	//Exclui registros dos valores por Item do titulo presentes na SQF
	If Deleted()//se RC1->(RC1_FILTIT + RC1_NUMTIT) deletado
		SX3->(DbSetOrder(2))
		//ColumnPos - Retirar na 12.1.18
		If SX3->( DbSeek("QF_FILTIT") ) //se campo existe realiza gravacao
			Begin Transaction
				DbSelectArea("SQF")
				If DbSeek(xFilial("SQF",RC1->RC1_FILTIT)+RC1->RC1_FILTIT+RC1->RC1_NUMTIT)
					While SQF->( !Eof() ) .AND. SQF->(QF_FILTIT + QF_NUMTIT) == RC1->(RC1_FILTIT + RC1_NUMTIT)
						RecLock("SQF",.F.,.F.)
							DbDelete()
						SQF->( MsUnLock() )
						SQF->( DbSkip() )
					EndDo
				EndIf
			End Transaction
		EndIf
	EndIf

	dbSelectArea( "RC1" )
	dbSkip()
Enddo

Return Nil

