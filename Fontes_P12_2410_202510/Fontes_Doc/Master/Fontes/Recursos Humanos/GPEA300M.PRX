Function Gpea300M()

Local aArea			:= GetArea()
Local aAreaRCA		:= RCA->( GetArea() )

Private lImpMnemo		:= .F.
Private lManutRCA		:= .T.

Begin Sequence 
    
	// Gerar as formulas padroes atraves do programa GpexINI.PRX //
	IF ( lImpMnemo := MsgNoYes(	OemToAnsi(	STR0002 + ;	//"O Sistema ira Atualizar todas os Mnemonicos Padroes de sua Base de Dados."
											CRLF	+ ;
											STR0003 + ;	//"Faca um Backup (RCA) antes de Iniciar o Processo de Atualizacao."
											CRLF	+ ;
											CRLF	+ ;
											STR0004   ;	//"Confirma a Atualizacao dos Mnemonicos?"
					   					 ),;
				 				OemToAnsi( STR0001 ) ;	//"Ateno"
							);
		)

		MsAguarde( { || Gpea300MDel() } )

	EndIf
	
	Gpea300()
	
End Sequence

/*/
Ŀ
 Restaura os Dados de Entrada 											 
/*/
RestArea( aAreaRCA )
RestArea( aArea )

Return( NIL )

/*
Ŀ
Funo    Gpea300MDel  AutorEquipe Advanced RH     Data 18/11/2004
Ĵ
Descrio Deletar os Mnemonicos Padroes                               
Ĵ
Sintaxe   Gpea300MDel()											    
Ĵ
ParametrosNIL															
Ĵ
Uso       GPEA300M()	                                                
*/
Static Function Gpea300MDel()

RCA->( DbGoTop() )
While RCA->( !Eof() )
	If Left(RCA->RCA_MNEMON,2) <> "M_"
		IF RCA->( RecLock( "RCA" , .F. , .F. ) )
			RCA->( dbDelete() )
			RCA->( MsUnLock() )
		EndIF
	EndIF
	RCA->( DbSkip() )
EndDo

Return( NIL )

