#INCLUDE "PROTHEUS.CH"
#INCLUDE "FWLIBVERSION.CH"
#include "gpersv946.ch"

//-------------------------------------------------------------------
/*/{Protheus.doc} GPERSV946

Chamada do objeto de negócios rh.sv.gper946, para abrir o relátorio e a visão de dados no Smart View pela função totvs.framework.treports.callTReports  

@author  Bruno Costa
@since   13/05/2024
@version 1.0
/*/

Function GPERSV946()

    Local lSuccess  As Logical
    local oSmartView as object

    If( lCfgSV() )
        
        oSmartView := totvs.framework.smartview.callSmartView():new("rh.sv.gpe.gper946")
        oSmartView:setParam("MV_MOTIVO", 1)
        oSmartView:setParam("MV_PERDE", FwTimeStamp( 5, FirstDate(Date()), "00:00:00" ))
        oSmartView:setParam("MV_PERATE",FwTimeStamp( 5, LastDate(Date()), "00:00:00" ))

        lSuccess := oSmartView:executeSmartView(.T.)
        If !lSuccess
            Conout(oSmartView:getError())
        EndIf  
 
        oSmartView:destroy()
    EndIf    

Return

//---------------------------------------------------------------------
/*/{Protheus.doc} lCfgSV
@author			Bruno Costa
@since			13/05/2024
@version		1.0
/*/
//---------------------------------------------------------------------
Static Function lCfgSV()

    Local nOpc  	as numeric
    Local lSuccess  As Logical
	Local lRet	    as logical
    Local lRUE := ChkFile("RUE") as logical
	
	If GetRpoRelease() >= "12.1.2310" .AND. FWLibVersion() >= "20240226" .And. lRUE
        lSuccess := totvs.framework.smartview.util.isConfig()
        If lSuccess
			lRet := .T.
        Else
            nOpc := Aviso( STR0003, STR0004 + CRLF + CRLF +; //##"Smart View!" ##"Não existe configuração do Smart View."
								STR0005 + CRLF + CRLF +; //"Para atualização dessa funcionalidade, será necessário instalar e configurar o Smart View."
								STR0006, { STR0007, STR0008 }, 3 ) //##"Siga as instruções da documentação." ##"Sair" ##"Abrir"

			If nOpc == 2 //Doc
				ShellExecute( "Open", "https://tdn.totvs.com/pages/releaseview.action?pageId=626636542", "", "", 1 ) 
			EndIf
        EndIf           
	Else
		Aviso( STR0001, Iif(lRUE, STR0002, STR0009), { STR0007 }, 2 ) //##"Rotina indisponível" ##"Esta funcionalidade está disponível apenas para a versão igual ou superior a 12.1.2310 e LIB igual ou superior a 20240226." ##Tabela RUE não encontrada. Execute o UPDDISTR - Atualizador de dicionário e base de dados. ##"Sair"
	EndIf

Return lRet
