If dDataAte == NIL .Or. dDataAte < dDataDe  //Caso a Data Ate nao seja definida
   dDataAte := dDataDe                      // a funcao retornara somente o ultimo 
   lRetTotal:= .F.                          // aumento Salarial.
EndIf	
