	cQuery += "JOIN "+RetSqlName("SR7")+" SR7 ON "
	cQuery += "SR3.R3_FILIAL = SR7.R7_FILIAL AND "
	cQuery += "SR3.R3_MAT = SR7.R7_MAT AND "
	cQuery += "SR3.R3_TIPO = SR7.R7_TIPO AND "
	cQuery += "SR3.R3_DATA = SR7.R7_DATA AND "
	cQuery += "SR3.R3_SEQ = SR7.R7_SEQ "
