Local lDtCDiss  := SR3->(ColumnPos("R3_DTCDISS")) > 0
Local cUltAtu	:= "!!"
Local cUltDis	:= "!!"
Local nP
//--Variaveis para Query SRD             
Local cAliasSR3 := "SR3" 	//Alias da Query
Local cQuery    := "" 		//Expressao da Query
Local nCont
Local cCateg	:= ""
