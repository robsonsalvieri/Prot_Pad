	cQuery += "SR3.R3_MAT= ? AND "
	cQuery += "SR3.D_E_L_E_T_ = ' ' AND "
	cQuery += "SR7.D_E_L_E_T_ = ' ' "
	cQuery += "ORDER BY R3_FILIAL,R3_MAT,R3_DATA,R3_SEQ "

