Function fStructArq( aStruct_1 , cAliasComp , cNomeArqMov , aOrdBag , lProcessa , lDisplay )

Local aStruct_2 	:= {}
Local aOrigStru 	:= {}
Local aFieldPos1    := {}
Local aFieldPos2	:= {}
Local bSort			:= { |x,y| x[ 1 ] < y[ 1 ] }
Local cArqTemp		:= ""
Local cArqShow		:= ""
Local cObtemCpo 	:= ""
