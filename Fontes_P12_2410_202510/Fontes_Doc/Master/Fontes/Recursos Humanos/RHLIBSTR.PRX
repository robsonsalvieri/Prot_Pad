Function ChkAsc( cVar , lChkFirst )

Local lChkAsc

Local nAsc
Local nChar
Local nChars

DEFAULT lChkFirst := .T.

Begin Sequence

	IF ( lChkFirst )
		IF !( lChkAsc := ChkFirstAsc( cVar ) )
			Break
		EndIF
	EndIF

	nChar	:= 0
	nChars	:= Len( cVar )
	While ( ( ++nChar ) <= nChars )
		nAsc		:= Asc( SubStr( cVar , nChar , 1 ) )
		lChkAsc		:= (;
							( ( nAsc >= 48 ) .and. ( nAsc <= 57 ) );	//0123456789
							.or.;
							( ( nAsc >= 65 ) .and. ( nAsc <= 90 ) );	//ABCDEFGHIJKLMNOPQRSTUVWXYZ
							.or.;
							( nAsc == 95 );								//_
							.or.;
							( ( nAsc >= 97 ) .and. ( nAsc <= 122 ) );	//abcdefghijklmnopqrstuvwxyz
						)	
		IF !( lChkAsc )
			Break
		EndIF
	End While

End Sequence

Return( lChkAsc )

