Function RetPictVal( nVal )

Local cPict
Local uInt
Local uDec

IF ( ValType( nVal ) == "N" )
	uInt	:= Int( nVal )
	uDec	:= ( nVal - uInt )
	uDec	:= AllTrim( Str( uDec ) )
	uDec	:= SubStr( uDec , At( "." , uDec ) + 1 )
	uDec	:= Len( uDec )
	uInt	:= Len( AllTrim( Str( uInt ) ) )
	cPict	:= ( Replicate( "9" , uInt ) + "." + Replicate( "9" , uDec ) )
EndIF

Return( cPict )

