Function GetStrSeq( cStr , lSeq )

Local aSeqStr	:= { "1" , "2" , "3" , "4" , "5" , "6" , "7" , "8" , "9" , "0" }
Local cSeqStr	:= ""
Local cMult		:= ""

Local nStr
Local nMult
Local nSeqStr
Local nSeqsStr

DEFAULT lSeq := .T.

nStr 		:= Len( cStr )
nSeqsStr	:= IF( lSeq , 10 , 9 )
nMult		:= 1
While ( Len( cSeqStr ) < nStr )
	nSeqStr := 0
	IF !( lSeq )
		nMult *= 10
		IF ( nMult > 1000000000 )
			Exit
		EndIF
	EndIF
	While ( ++nSeqStr <= nSeqsStr )
		IF ( lSeq )
			cSeqStr += aSeqStr[ nSeqStr ]
		ElseIF ( Len( cSeqStr ) < nStr )
			cMult	:= AllTrim( Str( ( Val( aSeqStr[ nSeqStr ] ) * nMult ) ) )
			cMult	:= PadL( cMult , 10 )
			cSeqStr += cMult
		EndIF	
	End While
End While

Return( cSeqStr )

