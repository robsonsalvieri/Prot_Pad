	cQueryWhere := " RC_PERIODO=='" + RcPeriodoInit() + "'"
	cQueryWhere += " .AND. "
	cQueryWhere += "RC_SEMANA=='" + RcNumPgInit() + "'"
	cQueryWhere += " .AND. "
	cQueryWhere += "RC_ROTEIR=='" + RcRoteirInit() + "'"
#ENDIF

Return( cQueryWhere )


