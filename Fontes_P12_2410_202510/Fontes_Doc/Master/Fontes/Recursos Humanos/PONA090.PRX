@see (links_or_references)
/*/
Function fSitFuncF3()
	
	Local cOpcoes	:= "NAF"
	Local aSitFunc	:= {"Situação Normal", "Afastado temp.", "Férias"}
	
	Local cSitFunc 	:= &(ReadVar())
	
	f_Opcoes(	@cSitFunc	,;	//Variavel de Retorno
				"Situações"	,;	//Titulo da Coluna com as opcoes # "Dias da semana"
				aSitFunc	,;	//Opcoes de Escolha (Array de Opcoes)
				cOpcoes		,;	//String de Opcoes para Retorno
				NIL			,;	//Nao Utilizado
				NIL			,;	//Nao Utilizado
				.F.			,;	//Se a Selecao sera de apenas 1 Elemento por vez
				1			,;	//Tamanho da Chave
				3			,;	//No maximo de elementos na variavel de retorno
				.T.			,;	//Inclui Botoes para Selecao de Multiplos Itens
				.F.			,;	//Se as opcoes serao montadas a partir de ComboBox de Campo ( X3_CBOX )
				NIL			,;	//Qual o Campo para a Montagem do aOpcoes
				.T.			,;	//Nao Permite a Ordenacao
				.T.			,;	//Nao Permite a Pesquisa
				.F.   		,;	//Forca o Retorno Como Array
				NIL	 ;	//Consulta F3
		)
	
	&(ReadVar()) := cSitFunc
	
Return .T.

/*/{Protheus.doc} fVldSitFun
Validação do campo P2_SITFUN
@type  Function
@author Cícero Alves
@since 28/11/2024
@return lRet, logical, Verdadeiro se o conteúdo do campo for válido
@see (links_or_references)
/*/
Function fVldSitFun()
	
	Local lRet		:= .T.
	Local nI		:= 0
	Local cSitFunc 	:= &(ReadVar())
	
	For nI := 1 To Len(cSitFunc)
		If !(SubStr(cSitFunc, nI, 1) $ "NAF*")
			lRet := .F.
			Help(, , "SITFUNC", , "A situação informada não é válida.", 1, 0,,,,,, {"Informe ou selecione as Situações dos funcionários."})
			EXIT
		EndIf
	Next nI
	
	&(ReadVar()) := cSitFunc
	
Return lRet
