cQuery += "SC9.C9_IDENTB6=B6_IDENT AND "
cQuery += "SC9.D_E_L_E_T_=' ' AND "
cQuery += "SC6.C6_FILIAL='"+xFilial("SC6")+"' AND "
cQuery += "SC6.C6_NUM=SC9.C9_PEDIDO AND "
