	dbSelectArea(cAliasSD2)
	dbCloseArea()
	dbSelectArea("SD2")
EndIf    
If !lBat .And. !IsBlind()
	oObj:IncRegua2(STR0007) //"Atualizando poder de/em terceiro"
EndIf
