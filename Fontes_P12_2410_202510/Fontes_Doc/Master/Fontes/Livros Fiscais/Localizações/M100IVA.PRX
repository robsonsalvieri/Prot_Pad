Function M100iva(cCalc,nIt,aInf)

	LOCAL cFunct
	LOCAL aRet,lXFis
	LOCAL aCountry // Array de Paises nesta forma : // { { "BRA" , "Brasil", "BR" } , { "ARG" , "Argentina","AR"} ,
	LOCAL aArea := GetArea()

	lXFis:=(MafisFound() .And. ProcName(1)!="EXECBLOCK")

	aCountry := GetCountryList()
