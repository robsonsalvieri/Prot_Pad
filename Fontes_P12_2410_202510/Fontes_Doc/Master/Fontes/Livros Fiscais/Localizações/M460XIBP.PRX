		ElseIf cCalculo == "V"
			If lCalcTot
				If SM0->M0_ESTENT == "TU" .and. cRadic <> "TU" .and. nAliqSFH <> 0  
					nBase := MaRetBasT(aInfo[2],nItem,(nAliqSFH * nAliqSFF) * _nReducir)
