					nBase := MaRatBasT(val(aInfo[2]),nItem,nAliqAux,nBase,MsDecimais(_nMoeda),nBaseAux)
				Endif
			EndIf 
			Return {nBase,nAliqAux,0}//Iif(nAliqSFH <> 0,{nBase,nAliqSFH,0},{nBase,nAliqSFF,0})
		ElseIf cCalculo == "A"
