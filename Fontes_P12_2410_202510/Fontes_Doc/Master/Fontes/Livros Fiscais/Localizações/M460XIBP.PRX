If cTipo $ ("NCC|NCP")
	DbSelectArea("CCO")
	DbSetOrder(1) //CCO_FILIAL+CCO_CODPRO
	If CCO->(MsSeek(xFilial("CCO")+cZonCCO))
		If !(CCO->CCO_CPERNC $ "1|6") .and. !lExisteNF
			_lCalcular := .F.
		ElseIf (CCO->CCO_CPERNC=="5")
			_lCalcular := .F.
		Endif
	EndIf
