					aImposto[_IMPUESTO] := Round(aBaseAc[1][1] * (aImposto[_ALIQUOTA] / 100) * _nReducir, MsDecimais(_nMoeda))
					aImposto[_IMPUESTO] := aImposto[_IMPUESTO] - ((aImposto[_IMPUESTO] * aImposto[_ALIQDESG]) / 100) 
