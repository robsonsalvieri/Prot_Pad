					nCFOPos    := Ascan(aHeader, {|x| AllTrim(x[2]) == "D2_CF" } )
				EndIf
				
				_cTES      := aCols[nPosCol][nTESPos]  // TES de la Operacion
				_cCFO      := aCols[nPosCol][nCFOPos]  // CFO de la Operacion
