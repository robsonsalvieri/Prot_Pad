	cQuery := "select F2_VALMERC,F2_DESPESA,F2_SEGURO,F2_FRETE,F2_MOEDA,F2_TXMOEDA,F2_TIPO"
	cQuery += " from " + RetSqlName("SF2")
	cQuery += " where F2_FILIAL = '" + xFilial("SF2") + "'"
