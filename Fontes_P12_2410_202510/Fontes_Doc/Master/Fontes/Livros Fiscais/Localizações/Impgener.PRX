Function ImpGenInci(aImposto,aItemInfo)
Local	cImpIncid	:=	aImposto[_IMPINCID]
Local aItemTmp		:=	{}
Local nX	:= 0
Local nI	:=	0
Local nE	:=	0
Local nBase 	:=	0
Local nPosImp	:=	0

cImpIncid	:=	aImposto[_IMPINCID]
nI:=At(";",cImpIncid )
