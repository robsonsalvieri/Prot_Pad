Function Mata995
//Ŀ
// Define o cabealho da tela de atualizaes                   
//

Local aRotAdic     := {} 
PRIVATE cCadastro  := STR0001 //"Atualizao de Impostos"
PRIVATE aCpoAltSFB := {} // Vetor usado na gravacao do historico de alteracoes
PRIVATE aCmps	   := {}
STATIC lHistFiscal := HistFiscal()

If lHistFiscal
	Aadd(aRotAdic,{ STR0011,"A995Hist", 0 , 0 })	//Historico
EndIf

If cPaisLoc <> "BRA"
	CriaSFB(.T.)
	CriaSF4(.T.)
	CriaSFC(.T.)
EndIf      


If cPaisloc == "ARG"
	dbSelectArea("SFB")
	dbSetOrder(1)
	//Ŀ
	//Corrigindo a funcao de calculo do IB3
	//
	If SFB->(DbSeek(xFilial("SFB")+"IB3"))
		RecLock("SFB",.F.)                
		If Empty(SFB->FB_FORMENT)
			SFB->FB_FORMENT := "M100XIBP"
		Endif
		If Alltrim(Upper(SFB->FB_FORMSAI)) == "M460XIB3"
			SFB->FB_FORMSAI := "M460XIBP"
		Endif
		MsUnLock()
	Endif
	If !dbSeek(xFilial("SFB")+"IB4")
		UpdIB4Arg("TU")
	EndIf

	If !dbSeek(xFilial("SFB")+"IB5")
		UpdIB4Arg("CA")
		UpdIB4Arg("CB") 
		UpdIB4Arg("CH") 
		UpdIB4Arg("CO") 
		UpdIB4Arg("ER") 
		UpdIB4Arg("FO") 
		UpdIB4Arg("JU") 
		UpdIB4Arg("LP") 
		UpdIB4Arg("LR") 
		UpdIB4Arg("ME") 
		UpdIB4Arg("MI") 
		UpdIB4Arg("NE") 
		UpdIB4Arg("SA") 
		UpdIB4Arg("SC") 
		UpdIB4Arg("SF") 
		UpdIB4Arg("RN")
	    UpdIB4Arg("SE")
	    UpdIB4Arg("SJ")
		UpdIB4Arg("TF")
	EndIf
ElseIf cPaisLoc == "BOL"

		If SFF->(RecCount()) == 0
			SFFBOL()
		EndIf

	If !SFB->(DbSeek(xFilial("SFB")+"ICE"))
		UPDICEBOL(.T.)
	EndIf
EndIf

//Ŀ
// Chama a Funcao de Cadastro                                   
//
If lHistFiscal
	axCadastro("SFB",cCadastro,"ma995delok()","ma995TdOk()",aRotAdic,,, {|| ma995TTs()}) 
ElseIf cPaisLoc == "RUS"
	RU09D08()
Else
	axCadastro("SFB",cCadastro,"ma995delok()","ma995TdOk()") 
EndIf

Return

