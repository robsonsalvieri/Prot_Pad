/*/{Protheus.doc} M906ENCSN1

Função que realizara a busca do registros do ativo caso a tabela SN1
esteja compartilhada

@author Adilson Roberto/ Erich Mostoco
@since 10/12/2020
/*/
//-------------------------------------------------------------------
Static Function M906ENCSN1(cSF9Cod, cSF9Fil, nRecSN1, cOrig, cGrup)
Local aArea 	 := GetArea()
Local cAlias	 := GetNextAlias()

nRecSN1 := 0
cOrig 	:= ""
cGrup 	:= ""

BeginSql alias cAlias 
	SELECT SN1.R_E_C_N_O_ AS RECNO, SN1.N1_ORIGEM, SN1.N1_GRUPO FROM %table:SN1% SN1
		INNER JOIN %table:SN3% SN3 ON 
		SN1.N1_FILIAL= SN3.N3_FILIAL AND 
		SN1.N1_CBASE = SN3.N3_CBASE	 AND 
		SN1.N1_ITEM	 = SN3.N3_ITEM
	WHERE 
		SN1.N1_CODCIAP = %exp:cSF9Cod% AND 
		(SN3.N3_FILORIG = %exp:cSF9Fil% OR SN3.N3_FILIAL = %exp:cSF9Fil%) AND 
		SN1.D_E_L_E_T_ = ' ' AND 
		SN3.D_E_L_E_T_ = ' '
EndSql 

If (cAlias)->(!Eof())
	nRecSN1 := (cAlias)->RECNO
	cOrig 	:= (cAlias)->N1_ORIGEM
	cGrup	:= (cAlias)->N1_GRUPO
EndIf
(cAlias)->(DbCloseArea())
RestArea(aArea)
Return 

/*/{Protheus.doc} getSaidApurado

Função com a finalidade de retornar os valores de saídas apuradas para o CIAP
	
	@type  Static Function
	@author Rafael Oliveira
	@since 07/02/2025
	@version 12.1.2410
	@param dDataDe, data inicial para a busca
	@param dDataAte, data final para a busca
	@return aResumo[1] == Periodo
			aResumo[2] == Total Tributado
			aResumo[3] == Total
			aResumo[4] == Fator

/*/
Static Function getSaidApurado(dDataDe, dDataAte)
	Local aResumo        := {}
	Local cAlias 	   	 := ""

	cAlias := GetSaidSFA(dDataDe, dDataAte)

	While !(cAlias)->(Eof())
		aAdd(aResumo, { Substring((cAlias)->FA_DATA, 1,6), (cAlias)->FA_TOTTRIB, (cAlias)->FA_TOTSAI, (cAlias)->FA_FATOR })
		(cAlias)->(DbSkip())
	EndDo

	(cAlias)->(DbCloseArea())	

Return aResumo

/*/{Protheus.doc} GetSaidQuery

Função com a finalidade de retornar a query dos dados apurados para saída do CIAP
	
	@type  Static Function
	@author Rafael Oliveira
	@since 07/02/2025
	@version 12.1.2410
	@param dDataDe, date, data inicial para a busca
	@param dDataAte, date, data final para a busca	
	@return cAlias, character, alias da tabela	
/*/
Static Function GetSaidSFA(dDataDe, dDataAte)
	Local cAlias         := ""
	Local cQuery         := ""
	Local oExecStatement := nil

	cQuery := " SELECT SFA.FA_DATA, SFA.FA_TOTTRIB, SFA.FA_TOTSAI, SFA.FA_FATOR "
	cQuery += " FROM " + RetSQLName("SFA") + " SFA "
	cQuery += " WHERE SFA.FA_FILIAL = ? And SFA.FA_DATA between ? And ? And SFA.FA_TIPO = ? And SFA.D_E_L_E_T_ = ?"
	cQuery += " GROUP BY SFA.FA_DATA, SFA.FA_TOTTRIB, SFA.FA_TOTSAI, SFA.FA_FATOR"

	oExecStatement := FwExecStatement():New(ChangeQuery(cQuery))
	oExecStatement:setString(1, xFilial("SFA"))
	oExecStatement:setDate(2, dDataDe) 
	oExecStatement:setDate(3, dDataAte)
	oExecStatement:setString(4, "1")
	oExecStatement:setString(5, " ")

	cAlias := oExecStatement:OpenAlias()

	oExecStatement:Destroy()	
	oExecStatement := nil 

Return cAlias

