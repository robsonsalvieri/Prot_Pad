	Local cNomFun := M->TZ2_FUNCAO
	Local aArea   := GetArea()

	If M->TZ2_TIPO == "2"
		cNomFun := "U_" + cNomFun
	Endif

	If FindFunction(cNomFun)
		aParFun := GetFuncPrm(cNomFun)
		nOrdTZ3 := Val(TZ3->TZ3_ORDEM)
		If nOrdTZ3 > 0 .and. Len(aParFun) >= nOrdTZ3
			cRet := Posicione("TZ4",2,xFilial("TZ4")+aParFun[nOrdTZ3],"TZ4_DESCRI")
		Endif
	Endif

	RestArea(aArea)

Return cRet

