					{ STR0018, "" }, 2,; // "Os prefixos 'MNTV', 'MDTV' e 'SGAV', s√£o reservados pelo sistema e n√£o pode ser utilizados."
					{ STR0019, "" }, 2 ) // "Altere o prefixo do c√≥digo da variavel."
			EndIf
		EndIf
	EndIf

Return lRet
