				cNomeTar := NGSEEK('TT9', cTarefa, 1, 'TT9->TT9_DESCRI')
				oTree:AddItem(Padr(Alltrim(cTarefa) + " - " + Alltrim(cNomeTar),90), Padr(cTarefa,7), "FOLDER7" ,"FOLDER8",,,1)

				//Carrega a Tree
