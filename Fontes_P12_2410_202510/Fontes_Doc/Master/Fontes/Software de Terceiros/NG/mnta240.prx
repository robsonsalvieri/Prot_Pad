/*/{Protheus.doc} Mnta240Vld
Validações dos campos da tarefa genérica.
@type function

@author Alexandre Santos
@since 27/07/2023

@param  cField , string, Campo que terá seu contaúdo validado.
@return boolean, Indica se o conteúdo foi validado.
/*/
//---------------------------------------------------------------------
Function Mnta240Vld( cField )

	Local cAlsTT9 := ''
	Local cQryTT9 := ''
	Local cCaract := ''
	Local oModel  := FWModelActive()
	Local lRet    := .T.

	If cField == 'TT9_CARACT'

		If oModel:GetOperation() == MODEL_OPERATION_UPDATE .And. !Empty( TT9->TT9_CARACT ) .And.;
			FWFldGet( 'TT9_CARACT' ) != TT9->TT9_CARACT .And. FWFldGet( 'TT9_CARACT' ) != '4'

			/*----------------------------------------------------------------+
			| Valid. se a tarefa possui relacionamento com alguma manutenção. |
			+----------------------------------------------------------------*/
			If TT9->TT9_CARACT == '1' .Or.;
				( TT9->TT9_CARACT == '4' .And. FWFldGet( 'TT9_CARACT' ) != '1' )

				cAlsTT9 := GetNextAlias()

				cQryTT9 := 	"SELECT " 
				cQryTT9 += 		"1 "
				cQryTT9 += 	"FROM " 
				cQryTT9 += 		RetSQLName( 'ST5' ) + " ST5 "
				cQryTT9 += 	"WHERE "
				cQryTT9 += 		"ST5.T5_FILIAL = " + ValToSQL( FWxFilial( 'ST5' ) ) + " AND "
				cQryTT9 += 		"ST5.T5_TAREFA = " + ValToSQL( TT9->TT9_TAREFA )    + " AND "
				cQryTT9 += 		"ST5.D_E_L_E_T_ = ' ' "

				cQryTT9 += 	"UNION " 

				cQryTT9 += 	"SELECT " 
				cQryTT9 += 		"1 "
				cQryTT9 += 	"FROM " 
				cQryTT9 += 		RetSQLName( 'TP5' ) + " TP5 "
				cQryTT9 += 	"WHERE "
				cQryTT9 += 		"TP5.TP5_FILIAL = " + ValToSQL( FWxFilial( 'TP5' ) ) + " AND "
				cQryTT9 += 		"TP5.TP5_TAREFA = " + ValToSQL( TT9->TT9_TAREFA )    + " AND "
				cQryTT9 += 		"TP5.D_E_L_E_T_ = ' ' "

