				@ 4,110 BUTTON OemToAnsi("Outros") SIZE 036,012 Pixel Of oPnlBott Action( IIf(lOutros := CONPAD1(Nil, Nil, Nil, "TPA", Nil, Nil, .F.), (cRet := TPA->TPA_ETAPA ,lOk := .T., oDlg:End()), (lOk := .F.,oTree:Enable(),cRet := "")))
			EndIf
