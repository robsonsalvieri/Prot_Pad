				oTree:EndTree()

		//Cria o Painel para a Tree
		oPnlBott := TPanel():New(0,0,,oPanel,,,,,RGB(67,70,87),20,20,.F.,.F.)
		oPnlBott:Align := CONTROL_ALIGN_BOTTOM

			/*Barra inferior com os botões OK/Cancelar*/
