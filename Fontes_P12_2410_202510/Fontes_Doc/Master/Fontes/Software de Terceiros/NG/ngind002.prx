Function NGIND2IC(cAlias, nRecno, nOpcx)
Local _oldRel := nil
Local __nOpca := nil
Local _aChoice:= nil
Local _oldGrv := nil
Local _Inclui := Inclui
Local _Altera := Altera

If Type("aChoice") == "A"
	_aChoice := aClone(aChoice)
Endif
If Type("aRelac") == "A"
	_oldRel := aClone(aRelac)
Endif
If Type("nOpca") == "N"
	__nOpca := nOpca
Endif
If Type("bNGGRAVA") != "U"
	_oldGrv := bNGGRAVA
Endif

aRelac := {}
aADD( aRelac , { "TZ1_MODULO" , "Str(nModulo,2)" } )

//Abre tela
aChoice := nil
bNGGRAVA := nil
If nOpcx == 3
	Inclui := .t.
	Altera := .f.
Endif
nRetCad := NGCAD01(cAlias, nRecno, nOpcx)

aRelac := aClone(_oldRel)
nOpca  := __nOpca
aChoice:= aClone(_aChoice)
Inclui := _Inclui
Altera := _Altera
bNGGRAVA := _oldGrv

Return nRetCad