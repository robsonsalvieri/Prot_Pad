				EndIf
			Endif
		Elseif nOpc == 2
			If (cParAte == Replicate('Z',nSizeFil))
				Return .T.
			Else
				lRet := IIF(ATECODIGO('SM0',SM0->M0_CODIGO+cParDe,SM0->M0_CODIGO+cParAte,10),.T.,.F.)
				If !lRet
					Return .F.
				EndIf
			Endif
		EndIf
	EndIf
Return .T.

