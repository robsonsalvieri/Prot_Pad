      If Empty(M->TBE_CODOPC)
      	Help(" ",1,STR0007,,STR0009,3,1) //"Ateno"###"O contedo do campo Cdigo da Opo no pode ser vazio."
         Return .f.
		EndIf

      If M->TBE_TIPRES = "1" // MARCADA

      Else  //INFORMADA

         If !Empty(M->TBE_CONDOP) .And. !Empty(M->TBE_CONDIN)
            If M->TBE_TIPACA = "1"
               Help(" ",1,STR0007,,STR0010+CHR(10)+CHR(13)+STR0011,2,1)//"Ateno"###"O campo 'Tipo Ao' dever ser diferente de '1' "###"(No Gera NC) caso o tipo de resposta seja Informar."
               Return .f.
