	Private NOMEPROG := "MNTA815"
	Private TAMANHO  := "M"
	Private aRETURN  := {STR0019,1,STR0020,1,2,1,"",1}   //"Zebrado"###"Administracao"
	Private TITULO   := STR0021  //"Relatrio da Gerao de Documentos"
	Private nTIPO    := 0
	Private nLASTKEY := 0
	Private CABEC1,CABEC2
