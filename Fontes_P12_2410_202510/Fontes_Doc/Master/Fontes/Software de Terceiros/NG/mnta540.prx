/*/{Protheus.doc} MNTA540CHK
Consistência do botão OK.

@type function

@source MNTA540.prx

@author Marcos Wagner Junior
@since 03/03/08

@sample MNTA540CHK()

@return Logico, Indica se haverá gravação do sinistro.
/*/
//---------------------------------------------------------------------
Function MNTA540CHK()
	Local aArea 	:= GetArea()
	Local cQryAlias := ""
	Local cQuery	:= ""
	Local lMNTA5400 := ExistBlock( "MNTA5400" ) //Ponto de entrada para validar a inclusão
	Local lRet		:= .T.

	//Se Visualização ou Exclusão não deverá validar
	If !( nOpcao == 2 .OR. nOpcao == 5 )

		If !OBRIGATORIO(aSVAGETS1,aSVATELA1)
			RestArea(aArea)
			oFolder:nOption := 1
			lRet := .F.
		Endif

		If lRet .And. ( !MNTA545OBR() .OR. !MNTA545GUI() .OR. !MNTA545VLD() )
			oFolder:nOption := 1
			lRet := .F.
		Endif
		If lRet
			MNTASINGRA()

			cQryAlias := GetNextAlias()
			cQuery := " SELECT COUNT(*) AS TOTAL FROM " + RetSqlName("TRH")
			cQuery += " WHERE  TRH_FILIAL = '"+xFilial("TRH")+"' AND TRH_CODBEM = '"+M->TRH_CODBEM+"'""
			cQuery += "    AND TRH_DTACID = '"+DtoS(M->TRH_DTACID)+"'  AND TRH_HRACID = '"+M->TRH_HRACID+"'"
			cQuery += "    AND D_E_L_E_T_ = ' ' "
			cQuery := ChangeQuery(cQuery)
			dbUseArea( .T., "TOPCONN", TCGenQry(,,cQuery), cQryAlias, .F., .T.)

			If (cQryAlias)->TOTAL > 0
				MsgInfo(STR0019 + Chr(13) +; //"Não é possível cadastrar um sinistro para um bem com hora"
						STR0020, STR0006) //"e data já cadastrados."###"Atenção"
				lRet := .F.
			EndIf

			(cQryAlias)->(dbCloseArea())
		EndIf
		If lRet .And. lMNTA5400
			lRet := ExecBlock( "MNTA5400", .F., .F. )
		EndIf
	EndIf
	RestArea(aArea)

Return lRet

