/*/
Function Sg240Simu()
Local nOrdem
Local nFreq := 0
Local dPrev := 0

Private dData,dReal
DbSelectArea("TBB")
DbSetOrder(1)
DbSeek(xFilial("TBB")+TBM->TBM_PLAINI,.t.)
nOrdem := 0
While !Eof()                          .And.;
   TBB->TBB_FILIAL == xFILIAL("TBB")  .And.;
   TBB->TBB_CODPLA >= TBM->TBM_PLAINI   .And.;
   TBB->TBB_CODPLA <= TBM->TBM_PLAFIM
   nRecno   := Recno()

   DbSelectArea("TBF")
   DbSetOrder(1)
   DbSeek(xFILIAL("TBF")+TBB->TBB_CODPLA)
	ProcRegua(RecCount())
   While !Eof() .And. TBF->TBF_FILIAL == xFILIAL('TBF')  .And.;
         TBF->TBF_CODPLA == TBB->TBB_CODPLA
			
		   dReal := TBF->TBF_DATPLA
		   nInc  := TBF->TBF_QUANTI
		   cFreq := TBF->TBF_FREQUE
		   cSeq  := TBF->TBF_SEQUEN

			If cFreq == '1'
				nFreq := nInc
			ElseIf cFreq == '2'
			   nFreq := nInc*30
			Else
			   nFreq := nInc*365
			EndIf
					   
		   dPrev := nFreq+dReal
		   
		   While dPrev < TBM->TBM_DATINI
		   	dPrev := nFreq+dPrev
		   End

 			While TBM->TBM_DATINI <= dPrev .and. TBM->TBM_DATFIM >= dPrev
 				IncProc(OemToAnsi(STR0007)) //"Gerando Ordem de Servico de Simulacao"
				Sg240GeraOs(dPrev)         						 
				dPrev := nFreq+dPrev
				nOrdem++
		   End
			DbSelectArea("TBF")			
			DbSkip()   
	End		   
	
	DbSelectArea("TBB")			
	DbSkip()   
End	                                                  

If nOrdem == 0
	MsgAlert(STR0008) //"No foram geradas Ordens de Simulao."
	dbSelectArea("TBM")//Deleta o registro que seria inserido.
	RecLock("TBM",.F.)
	dbDelete()
	MsUnlock("TBM")
Else
	If nOrdem > 1
		MsgAlert(STR0011+Str(nOrdem)+STR0012) //"Foram geradas "###" Ordens de Simulao."
	Else
		MsgAlert(STR0013+Str(nOrdem)+STR0014) //"Foi gerada "###" Ordem de Simulao."
	EndIf
EndIf                                       
Return .t.

