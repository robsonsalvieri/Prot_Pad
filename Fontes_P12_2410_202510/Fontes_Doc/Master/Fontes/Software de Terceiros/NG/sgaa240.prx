/*/
Function Sg240Seq()
Local cSeq := '000000'
Local aArea := TBM->(GetArea())

DbSelectArea("TBM")
DbSetOrder(1)
If Inclui
	DbSeek(xFilial('TBM'))
	While TBM->(!Eof()) .and. xFilial('TBM') == TBM->TBM_FILIAL 
			   
	  	cSeq := TBM->TBM_CODPLA
		TBM->(DbSkip())
	End	
	cSeq := StrZero(Val(cSeq)+1,6)
Else	                               
	cSeq := TBM->TBM_CODPLA
EndIf	 

RestArea(aArea)

Return cSeq

