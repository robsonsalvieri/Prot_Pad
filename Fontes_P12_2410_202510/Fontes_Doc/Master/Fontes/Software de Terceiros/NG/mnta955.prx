Function MNTA955SER(nOp)
Local aOldArea := GetArea()

If nOp = 1
	cServico := TS4->TS4_CODSDP
Else
	cServico := M->TSV_SERVIC
Endif

/*If !Empty(M->TSV_SERVIC) .And.  "'" $ AllTrim(M->TSV_SERVIC)
	MsgStop(STR0009,STR0008) //"Servio informado no est cadastrado para esse Fornecedor/Loja!"###"Ateno"
	Return .F.
EndIf     */
cAliasQry := GetNextAlias()
cQuery := " SELECT DISTINCT(TS6.TS6_SERVIC) "
cQuery += " FROM " + RetSqlName("TS6") + " TS6 "
cQuery += " WHERE TS6.TS6_SERVIC = "+VALTOSQL(cServico)
If !Empty(M->TSV_FORNEC)
	cQuery += " AND TS6.TS6_FORNEC = "+VALTOSQL(M->TSV_FORNEC)
Endif
If !Empty(M->TSV_LOJA)
	cQuery += " AND TS6.TS6_LOJA = "+VALTOSQL(M->TSV_LOJA)
Endif
cQuery += " AND TS6.D_E_L_E_T_ <> '*' "
cQuery := ChangeQuery(cQuery)
dbUseArea( .T., "TOPCONN", TCGENQRY(,,cQuery),cAliasQry,.F.,.T.)
dbGotop()

If nOp = 1
	If Eof()
		(cAliasQry)->(DbCloseArea())
		RestArea(aOldArea)
		Return .f.
	Else
		(cAliasQry)->(DbCloseArea())
		RestArea(aOldArea)
		Return .t.
	Endif
Else
	If Eof()
		RestArea(aOldArea)
		If !Empty(M->TSV_FORNEC) .AND. !Empty(M->TSV_LOJA)
			MsgStop(STR0009,STR0008) //"Servio informado no est cadastrado para esse Fornecedor/Loja!"###"Ateno"
		Else
			MsgStop(STR0010,STR0008)		 //"Servio informado no est cadastrado na rotina de Cadastro de Servicos por Fornecedor!"###"Ateno"
		Endif
		(cAliasQry)->(DbCloseArea())
		Return .f.
	Else
		(cAliasQry)->(DbCloseArea())
		RestArea(aOldArea)
		Return .t.
	Endif
Endif

