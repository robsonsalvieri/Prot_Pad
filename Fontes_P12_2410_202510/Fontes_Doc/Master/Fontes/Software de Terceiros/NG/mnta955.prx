	lRet := .t.
Else
	If !INCLUI
		lRet := !(nRecno != Recno())
	EndIf
Endif

If !lRet
	Help(" ",1,"JAGRAVADO")
EndIf

cMEMODES := M->TSV_OBSERV
RestArea(aArea)
