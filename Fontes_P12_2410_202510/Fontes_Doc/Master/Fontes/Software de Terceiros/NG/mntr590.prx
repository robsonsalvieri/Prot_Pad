Function MNTR590()  

	WNREL      := "MNTR590"
	LIMITE     := 80
	cDESC1     := STR0001 //"O relatorio apresentar a quantidade de eventos "
	cDESC2     := STR0002 //"por perodo, mostrando os totais por ms e a "
	cDESC3     := STR0003 //"porcentagem na relao ms/perodo."
	cSTRING    := "TRH" 

	Private NOMEPROG := "MNTR590"
	Private TAMANHO  := "P"
	Private aRETURN  := {STR0004,1,STR0005,1,2,1,"",1}   //"Zebrado"###"Administracao"
	Private TITULO   := STR0006  //"Relatrio de Quantidade de Eventos por Perodo"
	Private nTIPO    := 0
	Private nLASTKEY := 0
	Private CABEC1,CABEC2 
	Private aVETINR := {}    
	Private cPERG := "MNR590"   
	Private aPerg :={}

	SetKey( VK_F9, { | | NGVersao( "MNTR590" , 1 ) } )

	Pergunte(cPERG,.F.)
	//Ŀ
	// Envia controle para a funcao SETPRINT                        
	//
	WNREL:=SetPrint(cSTRING,WNREL,cPERG,TITULO,cDESC1,cDESC2,cDESC3,.F.,"")
	If nLASTKEY = 27
		Set Filter To
		DbSelectArea("TRH")
		Return
	EndIf
	SetDefault(aReturn,cSTRING)
	RptStatus({|lEND| MNTR590IMP(@lEND,WNREL,TITULO,TAMANHO)},STR0009,STR0010) //"Aguarde..."###"Processando Registros..."
	Dbselectarea("TRH")

Return .T.

