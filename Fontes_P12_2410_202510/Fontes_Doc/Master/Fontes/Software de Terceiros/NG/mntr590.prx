	If !Eof()
		While !Eof()	
			nAno := Val(SubStr((cAliasQry)->TRH_DTACID,1,4))
			nMes := Val(SubStr((cAliasQry)->TRH_DTACID,5,2))

			For nI := 1 to Len(aVetor)
