Function FS_INTVIH()

Local ixi    := 0
Local _CDFOR := Space(03)
Local _DESFO := Space(30)

Local nRegTrans := 0

DbSelectArea("VIH")                                                                           
dbSeek( xFilial("VIH") )

Begin Transaction

   While xFilial("VIH") == VIH->VIH_FILIAL .and. VIH->VIH_CODMAR == cCodMar .and. !Eof()

      For ixi := 1 to 5

         _FORNE := "VIH->VIH_CDFOR"+Str(ixi,1)
         _NOFOR := "VIH->VIH_DESFO"+Str(ixi,1)

         If Empty(&_FORNE)
            Loop
         EndIf

         dbSelectArea("VG7")
         dbSetOrder(1)
         dbSeek( xFilial("VG7")+cCodMar+&_FORNE)

         RecLock("VG7", !Found() )
         VG7_FILIAL := xFilial("VG7")
         VG7_CODMAR := cCodMar
         VG7_CODFOR := &_FORNE
         VG7_NOMFOR := &_NOFOR

      Next

      DbSelectArea("VIH")
      DbSkip()

   EndDo

End Transaction

FS_DELIAX100()

If lMsErroAuto
   MostraErro()
EndIf   

return

