	Aadd(aFields, {"NXF_LIM.NXF_COTAC1", "LIM_COTAC1"})
	Aadd(aFields, {"NXB.NXB_CESCR"     , Nil})
	Aadd(aFields, {"NXB.NXB_CFATUR"    , Nil})
	Aadd(aFields, {"NXB.NXB_CCONTR"    , Nil})
	Aadd(aFields, {"CTO_FAT.CTO_MOEDA" , "FAT_MOEDA"})
	Aadd(aFields, {"CTO_LIM.CTO_MOEDA" , "LIM_MOEDA"})
	Aadd(aFields, {"NXB.NXB_SLDANT"    , Nil})
	Aadd(aFields, {"NXB.NXB_SLDPRO"    , Nil})
	Aadd(aFields, {"NXB.NXB_VTS"       , Nil})

Return aFields
