				aAdd(aLacAnalitico, {aLacBkp[nContador][3],aLacBkp[nContador][4],aLacBkp[nContador][5],aLacBkp[nContador][2],;
									 aLacBkp[nContador][6],aLacBkp[nContador][7],aLacBkp[nContador][8],.F.})
