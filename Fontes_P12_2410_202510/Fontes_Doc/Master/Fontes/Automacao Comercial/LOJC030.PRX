						aCaixa[P_SANG_FINANCIADO] += SLT->LT_VLRDIG
					Case RTrim(SLT->LT_FORMPG) == "CD"
						aCaixa[P_SANG_DEBAUTO] += SLT->LT_VLRDIG
					Case RTrim(SLT->LT_FORMPG) == "PD"
						aCaixa[P_SANG_PAGDIG] += SLT->LT_VLRDIG
