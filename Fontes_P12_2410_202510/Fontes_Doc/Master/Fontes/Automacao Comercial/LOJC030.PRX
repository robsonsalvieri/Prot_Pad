			cQuery += " AND LT_OPERADO = '" + cCaixa + "'"
		EndIf
		
		cQuery += " AND D_E_L_E_T_ = ''"
		cQuery += " GROUP BY LT_FORMPG"
		
		cQuery := ChangeQuery(cQuery)
		dbUseArea( .T., "TOPCONN", TCGenQry(,,cQuery), "SLTTMP", .F., .T.)
		
		//Alimenta array de sangrias diferentes de dinheiro
		While SLTTMP->(!EOF())
			If SLTTMP->VALOR > 0						
				Do Case
