//-------------------------------------------------------------------
/*/{Protheus.doc} getReturn
Retorna json com resultado da consulta

@author  Rafael Tenorio da Costa
@since   08/12/2023
@version 12.1.2410
/*/
//-------------------------------------------------------------------
Method getReturn() as Character Class CreditoObj

    Local jRetorno  as Object 
    Local jAux      as Object 
    Local cRetorno  as Character
    Local nData     as Integer

    jRetorno := JsonObject():New()
    jRetorno:FromJson( _Super:GetReturn() )

    If self:lSuccess

        jAux := JsonObject():New()
        jAux["creditos"] := {}

        For nData:=1 To Len(jRetorno["data"])

            aAdd(jAux["creditos"], JsonObject():New() )

            jAux["creditos"][nData]["saldo"]                := jRetorno["data"][nData]["Saldo"]
            jAux["creditos"][nData]["idRetaguardaCredito"]  := ""
        Next nData

        jRetorno["data"] := jAux
    EndIf

    cRetorno := EncodeUtf8( jRetorno:toJson() )

    FwFreeObj(jRetorno)
    FwFreeObj(jAux)

Return cRetorno
