//"Layout para controle grแfico de cart๕es" ### "Selecione o tipo de arquivo que deseja configurar: " ### "&Enviar" ### "&Receber"
nOpc := Aviso( STR0001, STR0030, { STR0031, STR0032 } )

If nOpc == 1
	cFileGer := "ENVCART.CRD"
	cFileBk  := "ENVCART.OLD"

	If !Pergunte("CRDA31", .T.)
		Return
	EndIf
	
	CA035Man(Iif(mv_par01==1, .T., .F.))
ElseIf nOpc == 2
	cFileGer := "RECCART.CRD"
	cFileBk  := "RECCART.OLD"
	
	If !Pergunte("CRDA32", .T.)
		Return
	EndIf
	
	CA035Man(Iif(mv_par01==1, .T., .F.))
EndIf
                   
Return
