Static Function LA740POST( oModel )

Local nOperation	:= oModel:GetOperation()  
Local lRet   	    := .T.    

If nOperation == 3
	//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
	//ณVALIDAR TEXTO DE JUSTIFICATIVA ณ
	//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู		
	If Len(Trim(oModel:GetValue( 'MBRMASTER', 'MBR_JUSTIF'))) < 5 
		Help( ,, 'HELP',, STR0004, 1, 0)//'Texto de justificativa muito curto !'
		lRet := .F.    	
	EndIf	
	
	//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
	//ณVALIDAR AVISO DE DISPONIBILIDADE ณ
	//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู		
	If oModel:GetValue( 'MBRMASTER', 'MBR_AVDISP') .AND. oModel:GetValue( 'MBRMASTER', 'MBR_MOTIVO') != '002'
		MsgAlert(STR0005 + CHR(10)+CHR(13)+ STR0006) //"Aviso de disponibilidade do produto vแlido apenas para o motivo","002 - Produto indisponํvel no estoque."
		oModel:SetValue ('MBRMASTER', 'MBR_AVDISP',.F.)
	EndIf	
	
EndIf                                                                

Return lRet


