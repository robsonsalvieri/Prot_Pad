*/
Static Function FS_GrvA20(nReg)
Local aArea := GetArea()
Local lEspelhar := GetNewPar("MV_INTCID ",.F.)
Local LNovBA9 	:= .T.

DbSelectArea("GAS")
If nOpcE <> 3
	DbGoTo(nReg)
Endif




//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
//ณ Espelhamento GAS X BA9...                            ณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
If nOpcE == 3   //Inclusao
	//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
	//ณ Verifica se o Cid ja existe Tabela PLS                  ณ
	//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
	
		If lEspelhar

			If  ! Empty(M->GAS_CODIGO)
				DbSelectArea("BA9")		
				BA9->(DbSetOrder(1))
				lNovBA9 := (BA9->(MsSeek(xFilial("BA9")+M->GAS_CODIGO)))
			Endif
		Else
			lNovBA9 := .T.
		Endif
		
		//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
		//ณ Verifica se deve criar cid AnO pLANO DE sAUDE                    ณ
		//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
		If  ! LNovBA9 
			DbSelectArea("BBL")
			BBL->(DbSetOrder(2))
			If 	BBL->(MsSeek(xFilial("BBL")+"HSPAHA20  "+"GAS"+"BA9"))
					BA9->(RecLock("BA9",(nOpcE == 3)))
					BA9->BA9_FILIAL := xFilial("BA9")
					PlsSinc("HSPAHA20","GAS","BA9")
					BA9->BA9_ABREVI:=M->GAS_CODIGO + M->GAS_PATOLO
					BA9->(MsUnLock())
			Else
				If GetNewPar("MV_PLSMSGS","1") == "1"
				MsgAlert(OemtoAnsi(STR0010)) //"Arquivo de sincronismo entre BA9 x GAS nao esta integro. Verifique!"
				Endif
			Endif

		Endif
	
	RecLock("GAS", (nOpcE == 3))
	HS_GrvCpo("GAS")
	GAS->GAS_FILIAL:=xFilial("GAS")
	GAS->GAS_LOGARQ := HS_LOGARQ()
	MsUnlock()
	
	
ElseIf nOpcE == 4
		If lEspelhar 
			DbSelectArea("BA9")
			BA9->(DbSetOrder(1))
			If BA9->(MsSeek(xFilial("BA9")+M->GAS_CODIGO))
				DbSelectArea("BBL")
				BBL->(DbSetOrder(2))
				If BBL->(MsSeek(xFilial("BBL")+"HSPAHA20  "+"GAS"+"BA9"))
					BA9->(RecLock("BA9",.F.))
					BA9->BA9_FILIAL := xFilial("BA9")
					PlsSinc("HSPAHA20","GAS","BA9")
					BA9->(MsUnLock())
				Else
					If GetNewPar("MV_PLSMSGS","1") == "1"
					MsgAlert(OemtoAnsi(STR0010)) //"Arquivo de sincronismo entre BA9 x GAS nao esta integro. Verifique!"
					Endif
				Endif
			Endif
		Endif
	
	RecLock("GAS", .F.)
	HS_GrvCpo("GAS")
	GAS->GAS_FILIAL:=xFilial("GAS")	
	GAS->GAS_LOGARQ := HS_LOGARQ()
	MsUnlock()
	
ElseIf nOpcE == 5
	
		If lEspelhar
			DbSelectArea("BA9")
			BA9->(DbSetOrder(1))
			If BA9->(MsSeek(xFilial("BA9")+M->GAS_CODIGO))
				DbSelectArea("BBL")
				BBL->(DbSetOrder(2))
				If BBL->(MsSeek(xFilial("BBL")+"HSPAHA20  "+"GAS"+"BA9"))
					RecLock("BA9", .F.)
					DbDelete()
					MsUnlock() 
				Else
					If GetNewPar("MV_PLSMSGS","1") == "1"
					MsgAlert(OemtoAnsi(STR0010)) //"Arquivo de sincronismo entre BA9 x GAS nao esta integro. Verifique!"
					Endif
				Endif
			Endif
		Endif
	
	
	RecLock("GAS", .F.)
	DbDelete()
	MsUnlock()
	
Endif

RestArea(aArea)
Return()

