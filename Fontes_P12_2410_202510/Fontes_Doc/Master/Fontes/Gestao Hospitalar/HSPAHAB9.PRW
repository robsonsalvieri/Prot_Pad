 EndIf   

 If lRet .And. HS_CountTB("GE7", "GE7_CODVIA = '" + GE4->GE4_CODVIA + "'")  > 0
 	 HS_MsgInf(STR0015 + ". " + STR0013 , STR0008, STR0009) //"O registro possui relacionamento com despesas de Procedimentos(GE7)"###"Exclusใo nใo permitida"###"Aten็ใo"###"Valida็ใo de Exclusใo"
	  lRet := .F.	 
