Static Function FS_GrvAB9(nOpcE)

If nOpcE == 3 .Or. nOpcE == 4 //Incluir e Alterar
	RecLock("GE4", (nOpcE == 3))
	HS_GrvCpo("GE4")
	MsUnlock()	
ElseIf nOpcE == 5 //Excluir
	RecLock("GE4", .F.)
	DbDelete()
	MsUnlock()
EndIf

Return(nOpcE)



