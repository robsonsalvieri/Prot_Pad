*/
Static Function FS_GrvABN(nReg)
Local aArea := GetArea()

DbSelectArea("GH8")
If nOpcE <> 3
	DbGoTo(nReg)
Endif

If nOpcE == 3 .Or. nOpcE == 4 //Inclusao e Alterar
	RecLock("GH8", (nOpcE == 3))
	HS_GrvCpo("GH8")
	GH8->GH8_LOGARQ := HS_LOGARQ()
	MsUnlock()
	
ElseIf nOpcE == 5 //Exclusao
	RecLock("GH8", .F.)
	DbDelete()
	MsUnlock()
Endif

RestArea(aArea)
Return()


