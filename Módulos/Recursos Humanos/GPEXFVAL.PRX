/*/{Protheus.doc} GPS151CB
Consulta padro da tabela S151, campo CODBEN
@since	05/07/2023
@autor	Allyson Luiz Mesashi
/*/
Function GPS151CB()

Local cTipoBen  := aCols[n, 5]
Local cSXB		:= "RIS"
Local lRet 		:= .F.

VAR_IXB := {"", ""}

If cTipoBen == "1" .Or. cTipoBen == "2"
	cSXB := Iif( cTipoBen == "1", "RFO01", "RFO02" )
	lRet := ConPad1(,,,cSXB )
	If lRet
		VAR_IXB[1] := RFO->RFO_CODIGO
		VAR_IXB[2] := RFO->RFO_DESCR 
	EndIf
Else
	cSXB := "SRN"
	lRet := ConPad1(,,,cSXB )
	If lRet
		VAR_IXB[1] := SRN->RN_COD
		VAR_IXB[2] := SRN->RN_DESC  
	EndIf   
EndIf

Return lRet
