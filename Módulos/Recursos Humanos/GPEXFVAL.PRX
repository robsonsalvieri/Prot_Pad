/*/{Protheus.doc} GPS151TB
Consulta padro da tabela S151, campo TPBEN
@since	05/07/2023
@autor	Allyson Luiz Mesashi
/*/
Function GPS151TB()

Local cTitulo           := OemToAnsi(STR0232)//"Tipo do Benefcio"
Local MvPar             := &(ReadVar())
Local MvParDef          := ""
Local MvStrRet          := ""
Local lRet              := .T.
Local l1Elem            := .F.
Local nGrupo            := 0
Local aArea             := GetArea()

Private aOcor := {}

VAR_IXB := MvPar

aOcor := {;
				OemToAnsi(STR0233),;		//"0=Vale Transporte;"
				OemToAnsi(STR0234),;		//"1=Vale Refeio;"
				OemToAnsi(STR0235) }		//"2=Vale Alimentao"
MvParDef := "012"

If f_Opcoes(@MvPar,cTitulo,aOcor,MvParDef,,,l1Elem,1)
      For nGrupo := 1 To Len(MvPar)
            If (SubStr(MvPar, nGrupo, 2) # "*")
                  MvStrRet += SubStr(mvpar, nGrupo, 1)
            Else
                  MvStrRet += Space(2)
            Endif
      Next nGrupo
      VAR_IXB := AllTrim(MvStrRet)
EndIf

RestArea(aArea)
aSize(aOcor,0)
aOcor := Nil

Return lRet

