                        cDesVale := SRN->RN_DESC
                        nValUnAn := SRN->RN_VUNIANT
                        nValUnAt := SRN->RN_VUNIATU
                    EndIf
                    
                    If nDiasPro > 0
                        nQtdeVale := Iif( nMapDif == 1, nDiasPro * nQtdeDUte, (nDiasPro * nQtdeDUte) + nDiasDif )
                    EndIf

                    If ( nQtdeVale <> nDiasCal )
                        nQtdeVale := nDiasCal
                    EndIf

                    nValedif  := nDiasDif*nQtdeDUte
                    nValTot   := Iif(nMapDif == 1, (cAliasRel)->( &(cPrefCal + "_VALCAL") ), Iif(nMapDif == 2, (cAliasRel)->( &(cPrefCal + "_VALDIF") ), (cAliasRel)->( &(cPrefCal + "_VALCAL") ) + (cAliasRel)->( &(cPrefCal + "_VALDIF") )))

                    If nMapDif == 2
						If cAliasRel == "RG2"
							nValUnitario := ( nValUnAt - ( nValUnAt - nValUnAn ) )
							If nValUnitario = 0
								nValUnitario := nValUnAt
							EndIf
						Else
							nQtDInf := SR0->R0_QDIAINF						
							If ( nQtdeVale <> nDiasDif )
								nQtdeVale := If(nQtDInf > 0, nDiasDif * nQtDInf, nDiasDif)
							EndIf

							nValUnitario := ( nValUnAt - nValUnAn ) 
							If nValUnitario = 0
								nValUnitario := nValUnAt
							EndIf
						Endif	
                    Else
                        nValUnitario := nValUnAt
                    EndIf
                Else
                    RFO->( dbSelectArea( "RFO" ) )
                    If RFO->( dbSeek( xFilial("RFO", (cAliasQry)->RA_FILIAL) + cTipRel + (cAliasRel)->( &(cPrefCal + "_CODIGO") ) ) )
                        cDesVale := RFO->RFO_DESCR
                    EndIf
                    cCodVale     := (cAliasRel)->( &(cPrefCal + "_CODIGO") )
                    nValTot      := (cAliasRel)->( &(cPrefCal + "_VALCAL") )
                    nValUnitario := nValUni
                    nQtdeVale    := nDiasCal
                EndIf

                nQtValeAcu  += nQtdeVale
                nVlUnitAcu  += nValUnitario
                nVlTotAcu   += nValTot

                nValor6	    := nCustFun+(cAliasRel)->( &(cPrefCal + "_CFUNDF") )
                nValor7	    := nCustEmp+(cAliasRel)->( &(cPrefCal + "_CEMPDF") )
                nCusFunAcu  += nValor6
                nCusEmpAcu  += nValor7

                If nQtdeVale <= 0
                    PreparaLog( IIf(cAliasRel == "RG2", STR0061, STR0067) + " " + STR0073 + " " + (cAliasQry)->RA_FILIAL + (cAliasQry)->RA_MAT )//"Tabela RG2 - Verifique a quantidade do benefício!"##"Tabela SR0 - Verifique a quantidade do benefício! Matricula: "

                    (cAliasRel)->( dbSkip() )
                    Loop
                EndIf

                If lPass
                    lExibeLog := .F.
                    //Incializa impressao
                    oSection1:PrintLine()
                    lPass := .f.
                EndIf

                If lVerRecal .And. cAliasRel == "RG2" .And. fRecalDif( (cAliasQry)->RA_FILIAL, (cAliasQry)->RA_MAT, cTipRel, cCodVale, SomaMesAno(cPeriodo), cNumPag, cRoteir )
                    cTemDif := STR0088//"Sim"
                EndIf

                oSection2:PrintLine()

                If lVerRU3 .And. If(nTpVale == 0, nMapDif == 1 ,.T.)
                    cChaveRec := (cAliasQry)->RA_FILIAL+(cAliasQry)->RA_MAT+cTipRel+(cAliasRel)->( &(cPrefCal + "_PERIOD") )+(cAliasRel)->( &(cPrefCal + "_NROPGT") )+(cAliasRel)->( &(cPrefCal + "_CODIGO") )
                    fImpRec(cChaveRec, oSection3)            

                    If lVerRecal .And. lPerFech
                        cChaveRec := (cAliasQry)->RA_FILIAL+(cAliasQry)->RA_MAT+cTipRel+SomaMesAno( (cAliasRel)->( &(cPrefCal + "_PERIOD" ) ) )+(cAliasRel)->( &(cPrefCal + "_NROPGT") )+(cAliasRel)->( &(cPrefCal + "_CODIGO") )
                        fImpRec(cChaveRec, oSection3, .T., cAliasBkp) 
                    EndIf
                EndIf

                (cAliasRel)->( dbSkip() )
            EndDo

			dbSelectArea(cAliasQry)
			dbSkip()
			lPass := .t.
		Enddo

	EndIf

	PrintLog()

	//Termino do relatorio
	oSection1:Finish()
	oSection2:Finish()
	If lVerRU3
        oSection3:Finish()
    EndIf

	If cTipTotalG $ "2|3" // Total Geral Sintético ou Ambos
		fTotSintet(oReport)
	EndIf

Return( Nil )

