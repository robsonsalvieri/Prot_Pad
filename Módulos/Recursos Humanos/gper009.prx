Default lRecalc     := .F.

If (cAliasRec)->( DBSeek( cChaveRec ) )
    While (cAliasRec)->( !Eof() ) .And. (cAliasRec)->( &(cPrefRec + "_FILIAL") )+(cAliasRec)->( &(cPrefRec + "_MAT") )+(cAliasRec)->( &(cPrefRec + "_TPVALE") )+(cAliasRec)->( &(cPrefRec + "_PERIOD") )+(cAliasRec)->( &(cPrefRec + "_NROPGT") )+(cAliasRec)->( &(cPrefRec + "_CODIGO") ) == cChaveRec
        If Iif( !lRecalc, (cAliasRec)->( &(cPrefRec + "_RECALC") ) != "1", (cAliasRec)->( &(cPrefRec + "_RECALC") ) == "1" )
            dDataRec        := (cAliasRec)->( &(cPrefRec + "_DATA") )
            cTpDiaRec       := Iif( (cAliasRec)->( &(cPrefRec + "_TPDIA") ) == "S", STR0082, Iif( (cAliasRec)->( &(cPrefRec + "_TPDIA") ) == "C", STR0083, Iif( (cAliasRec)->( &(cPrefRec + "_TPDIA") ) == "D", STR0084, Iif( (cAliasRec)->( &(cPrefRec + "_TPDIA") ) == "N", STR0085, STR0086 ) ) ) )//"Trabalhado"##"Compensado"##"D.S.R"##"Não Trabalhado"##"Feriado"
            nValDiaRec      := (cAliasRec)->( &(cPrefRec + "_VALDIA") )
            nQtdeDiaRec     := (cAliasRec)->( &(cPrefRec + "_QTDDIA") )
            If lVerRecal
                cRecalc     := Iif( (cAliasRec)->( &(cPrefRec + "_RECALC") ) == "1", STR0080, STR0081 )//"Recálculo"##"Original"
            EndIf
            oSection:PrintLine()
        EndIf

        (cAliasRec)->( DBSkip() )
    End
ElseIf lRecalc .And. Valtype(cAliasBkp) != "U"
    cPrefRec    := "RU1"
    cAliasRec   := "RU1"
    fImpRec(cChaveRec, oSection, .T.)
    cAliasRec   := cAliasBkp
    cPrefRec    := cAliasBkp
EndIf

Return

/*/{Protheus.doc} fRecalDif
Função que verifica se o cálculo do período teve diferença recalculada no período posterior 
@author Allyson Luiz Mesashi
@since 25/04/2024
/*/
Static Function fRecalDif( cFilFun, cMatFun, cTpVale, cCod, cPer, cNroPgt, cRot )

Local cChavePesq    := cFilFun + SomaMesAno(cPeriodo) + cNroPgt + cRot + cMatFun + cTipRel + cCod 
Local lTemDif       := .F.
Local nRecnoRG2     := RG2->( Recno() )
Local nRecnoSR0     := 0

If RG2->( dbSeek( cChavePesq ) ) 
    If RG2->RG2_VALORI != RG2->RG2_VALCAL .Or. RG2->RG2_SLDANT != 0
        lTemDif := .T.
    EndIf
Else
    cChavePesq  := cFilFun + cMatFun + cTipRel + SomaMesAno(cPeriodo) + cNroPgt
    nRecnoSR0   := SR0->( Recno() )
    If SR0->( dbSeek( cChavePesq ) ) 
        While SR0->( !EoF() ) .And. SR0->R0_FILIAL+SR0->R0_MAT+SR0->R0_TPVALE+SR0->R0_PERIOD+SR0->R0_NROPGT == cChavePesq
            If SR0->R0_CODIGO == cCod
                If SR0->R0_VALORI != SR0->R0_VALCAL .Or. SR0->R0_SLDANT != 0
                    lTemDif := .T.
                EndIf
                Exit
            EndIf
            SR0->( DBSkip() )
        End
    EndIf
    SR0->( dbGoTo(nRecnoSR0) )
EndIf

RG2->( dbGoTo(nRecnoRG2) )

Return lTemDif
