±±³Descricao ³ Mapa de Beneficios                                           ³±±
±±ÃÄÄÄÄÄÄÄÄÄÄÅÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ´±±
±±³Uso       ³ GPER009                                                      ³±±
±±ÀÄÄÄÄÄÄÄÄÄÄÁÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ±±
±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
ßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßß*/
Static Function ReportDef()

	Local oReport
	Local cRepProc      := mv_par01
	Local cRepPer       := mv_par02
	Local cRepNmPg      := mv_par03

	Private aOrd        := {}

    DEFAULT P_RECALCVT  := .F.

	If cTipRel == "0"
	    cRoteir := fGetCalcRot('8') // Vale Transporte
	ElseIf cTipRel="1"
	    cRoteir := fGetCalcRot('D') // Vale Refeicao
	Else
	    cRoteir := fGetCalcRot('E') // Vale Alimentacao
	EndIf

	fPerBene(cRepProc, cRepPer, cRepNmpg, cRoteir)

	aOrd     := {OemToAnsi(STR0004),OemToAnsi(STR0005),OemToAnsi(STR0006),OemToAnsi(STR0007),OemToAnsi(STR0008)}
             //"Matricula","C.Custo","Nome","C.Custo + Nome","C.Custo + Turno + Nome"

    DEFINE REPORT oReport NAME "GPER009" PARAMETER cPerg ACTION {|oReport| GR009Imp(oReport)}
	
	// Remove a opção de Filtro de Gestão de Empresas
	oReport:SetUseGC(.F.)

    DEFINE SECTION oSRA OF oReport TITLE OemToAnsi(STR0039) ORDERS aOrd TABLES "SRA" TOTAL IN COLUMN//"Funcionário" 

    DEFINE CELL NAME "RA_FILIAL"  	OF oSRA ALIAS "SRA" BLOCK { || (cAliasQry)->RA_FILIAL }
    DEFINE CELL NAME "RA_TNOTRAB" 	OF oSRA ALIAS "SRA" BLOCK { || (cAliasQry)->RA_TNOTRAB }
    DEFINE CELL NAME "RA_CC"	  	OF oSRA ALIAS "SRA" BLOCK { || (cAliasQry)->RA_CC }
    DEFINE CELL NAME "RA_MAT"	  	OF oSRA ALIAS "SRA" BLOCK { || (cAliasQry)->RA_MAT }
    DEFINE CELL NAME "RA_NOME"	  	OF oSRA ALIAS "SRA"	SIZE 30	BLOCK { || (cAliasQry)->RA_NOME }
  
	DEFINE BREAK oBreakSRA OF oSRA WHEN { || (cAliasQry)->RA_FILIAL+(cAliasQry)->RA_MAT }  
	oSRA:SetHeaderBreak(.T.)

    DEFINE SECTION oRG2 OF oReport  TITLE OemToAnsi(STR0036) ORDERS aOrd TABLES cAliasRel TOTAL IN COLUMN//"CUSTO TOTAL"

    DEFINE CELL NAME "RA_FILIAL"  	OF oRG2 ALIAS "SRA" BLOCK { || (cAliasQry)->RA_FILIAL }
    DEFINE CELL NAME "RA_MAT"	  	OF oRG2 ALIAS "SRA" BLOCK { || (cAliasQry)->RA_MAT }    
    DEFINE CELL NAME "VALE"         OF oRG2 TITLE OemToAnsi(STR0035) BLOCK { || cCodVale + " - " + cDesVale } ALIGN LEFT//"CODIGO VALE"
    DEFINE CELL NAME "NQTDEVALE"	OF oRG2 TITLE STR0026 BLOCK { || nQtdeVale }     SIZE 6 PICTURE "999999"//"QTDE"
    If nTpVale == 0 //Vale Trasporte
        DEFINE CELL NAME "BARRA"	OF oRG2 BLOCK { || "/" }
        DEFINE CELL NAME "NVALEDIF"	OF oRG2 TITLE STR0033 BLOCK { || nValeDif }      PICTURE "999"//"VALE DIF."
    EndIf
    DEFINE CELL NAME "NVALUNITARIO"	OF oRG2 TITLE STR0027 BLOCK { || nValUnitario } SIZE 14 PICTURE "@E 999,999,999.99"//"CUSTO UNITÁRIO"
    DEFINE CELL NAME "NVALTOT"		OF oRG2 TITLE STR0028 BLOCK { || nValTot }		SIZE 14 PICTURE "@E 999,999,999.99"//"CUSTO TOTAL"
    DEFINE CELL NAME "NCUSTFUN"		OF oRG2 TITLE STR0029 BLOCK { || nValor6 }		SIZE 14 PICTURE "@E 999,999,999.99"//"CUSTO FUNC."
    DEFINE CELL NAME "NCUSTEMP"		OF oRG2 TITLE STR0030 BLOCK { || nValor7 }		SIZE 14 PICTURE "@E 999,999,999.99"//"CUSTO EMPR."
    If nTpVale == 0 //Vale Trasporte
        // Coluna de Total de Beneficiario SEM titulo. Apenas para gerar os totais.
        DEFINE CELL NAME "BENEFIC"	OF oRG2 TITLE OemToAnsi( "" )	                PICTURE "9999"//"TOTAL DE BENEFICIARIO"

        TRPosition():New(oRG2, "SRN", 1, { || RhFilial("SRN", SR0->R0_FILIAL)+SR0->R0_MEIO}, .T.)

        oRG2:Cell("BARRA"):Disable()
        oRG2:Cell("NVALEDIF"):Disable()
    EndIf
    If lTemRecalc .And. ( (nTpVale == 0 .And. P_RECALCVT) .Or. (nTpVale != 0 .And. lX6Recalc) )
        DEFINE CELL NAME "DIFREC"	OF oRG2 TITLE STR0089 BLOCK { || cTemDif }//"DIFERENÇA RECÁLCULO?"
    EndIf
    oRG2:Cell("RA_FILIAL"):Disable()
    oRG2:Cell("RA_MAT"):Disable()
	
	DEFINE BREAK oBreakRG2 OF oRG2 WHEN { || (cAliasQry)->RA_FILIAL+(cAliasQry)->RA_MAT+cCodVale }
	oRG2:SetHeaderBreak(.T.)

    If lTemRU3
        DEFINE SECTION oRU3 OF oReport  TITLE OemToAnsi(STR0074) ORDERS aOrd TABLES cAliasRec//"ANALÍTICO"

        DEFINE CELL NAME "RA_FILIAL"  	    OF oRU3 ALIAS "SRA" BLOCK { || (cAliasQry)->RA_FILIAL }
        DEFINE CELL NAME "RA_MAT"	  	    OF oRU3 ALIAS "SRA" BLOCK { || (cAliasQry)->RA_MAT }
        DEFINE CELL NAME "VALE"             OF oRU3 TITLE OemToAnsi(STR0035) BLOCK { || cCodVale + " - " + cDesVale } ALIGN LEFT//"CODIGO VALE"
        DEFINE CELL NAME "RU3_DATA"		    OF oRU3 TITLE STR0075 BLOCK { || dDataRec }//"DATA"
        DEFINE CELL NAME "RU3_TPDIA"	    OF oRU3 TITLE STR0076 BLOCK { || cTpDiaRec }//"TIPO DIA"
        DEFINE CELL NAME "RU3_VALDIA"	    OF oRU3 TITLE STR0077 BLOCK { || nValDiaRec }	PICTURE "@E 999,999.99"//"VALOR DIA"
        DEFINE CELL NAME "RU3_QTDDIA"	    OF oRU3 TITLE STR0078 BLOCK { || nQtdeDiaRec }//"QTDE DIA"
        If lTemRecalc .And. ( (nTpVale == 0 .And. P_RECALCVT) .Or. (nTpVale != 0 .And. lX6Recalc) )
            DEFINE CELL NAME "RU3_RECALC"	OF oRU3 TITLE STR0079 BLOCK { || cRecalc }//"RECÁLCULO?"
        EndIf

        oRU3:Cell("RA_FILIAL"):Disable()
        oRU3:Cell("RA_MAT"):Disable()
        oRU3:Cell("VALE"):Disable()

        DEFINE BREAK oBreakRU3 OF oRU3 WHEN { || (cAliasQry)->RA_FILIAL+(cAliasQry)->RA_MAT+cCodVale }
        oRU3:SetHeaderBreak(.T.)
    EndIf

	If nTpVale == 0 //Vale Trasporte
        oReport:SetTitle( OemToAnsi(STR0011) )//" MAPA VALE TRANSPORTE "
        oReport:SetDescription( OemToAnsi(STR0037) + OemToAnsi(STR0038) )//"Esta rotina gera um mapa que resume as informacoes de Vale transporte por "##//"funcionarios permitindo que o desconto seja gerado para a folha de pagamento."
	ElseIf nTpVale == 1 // Refeicao
        oReport:SetTitle( OemToAnsi(STR0009) )//" MAPA VALE REFEIÇÃO "
        oReport:SetDescription( OemToAnsi(STR0012) + OemToAnsi(STR0038) )//"Esta rotina gera um mapa que resume as informacoes de Vale refeição por "##//"funcionarios permitindo que o desconto seja gerado para a folha de pagamento."
	Else // Vale alimentacao
        oReport:SetTitle( OemToAnsi(STR0010) )//" MAPA VALE ALIMENTAÇÃO "
        oReport:SetDescription( OemToAnsi(STR0016) + OemToAnsi(STR0038) )//"Esta rotina gera um mapa que resume as informacoes de Vale alimentação por "##//"funcionarios permitindo que o desconto seja gerado para a folha de pagamento."
	EndIf

Return( oReport )

