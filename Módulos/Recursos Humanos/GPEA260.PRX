Local cTitulo			:= ""
Local cDet 			:= ""
Local nOpt1			:= 0
Local nHdl				:= 0
Local nAGrup			:= 0
Local n					:= 0
Local cFile  			:= "GpeFicha.fch"
Local aDicAgr			:= aClone(aLbxBkp)              // Agrupamentos
Local oFont3
Local oGroup2
Local oGroup0
Local oAtu
Local oDlg5
Local bInclui			:= {}
Local bEdita			:= {}
Local bExclui			:= {}
Local aButtons			:= {}

Local aAdvSize			:= {}
Local aInfoAdvSize	:= {}
Local aObjCoords		:= {}
Local aObjSize			:= {}

