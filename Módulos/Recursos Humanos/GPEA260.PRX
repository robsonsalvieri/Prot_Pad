    			If 	cEmpAnt  # aChave[nPos,1]
    				dbSelectArea( cAlias2)
        			dbSkip()
	        		Loop
	    	    EndIF

				// Se o registro que estiver posicionado já foi adicionado no grid, não adiciono novamente pra evitar que os registros sejam adicionados novamente.
				If Valtype(aCols[1,1]) <> "U" .and. ( aScan(aCols, {|x| x[nPosPer] + x[nPosCC] == (cAlias2)->RD_PERIODO + (cAlias2)->RD_CC}) ) > 0
					dbSelectArea(cAlias2)
        			dbSkip()
	        		Loop
	        	EndIf
				nCnt++

