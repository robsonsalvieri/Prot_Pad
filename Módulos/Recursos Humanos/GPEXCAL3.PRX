Function FCarPDAdiant()

	Local nX 		:= 1
	Local nTamApd   := Len(aPd)

	While nTamApd >= nX
		//--Deleta do aPd tudo que nao for informado (RGB)
		If !(aPd[nX,7] $ "I*E*G*F*V")
			aDel(aPd,nX)
			aSize(aPd,Len(aPd)-1)
			nTamApd--
			nX-- //--Volta o valor de nX pois como aPd[N] foi deletado, aPd[N+1] passa a ser aPd[N]
		EndIf
		nX++
	EndDo

Return Nil

