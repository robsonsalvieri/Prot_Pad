Function fPropor(nValor,nHoras,cTip1,nValInteg,nDiasCalc,cCodPd)

	Local nDiasTAux     := DiasTrab

	DEFAULT nValor 		:= 0 
	DEFAULT nHoras 		:= 0
	DEFAULT cTip1 		:= ""
	DEFAULT cCodPd      := ""
	DEFAULT nValInteg 	:= 0
	DEFAULT nDiasCalc	:= 0

	//Se for horista e estiver proporcionalizando verba de insalubridade em mês diferente de 30 dias. Ajusta diastrab para calcular sempre por 30
	If SRA->RA_CATFUNC == "H" .and. nDiasCalc <> 30 .and. cCodPd $ aCodFol[37,1] + "/" + aCodFol[38,1] + "/" + aCodFol[39,1] + "/" + aCodFol[1282,1]  .and. AnoMes(SRA->RA_ADMISSA) <> cPeriodo .and. cTipoRot <> "4" .and. cBCalIns $ "1*4*5*7"
		DiasTrab  := 30 - ( nDiasCalc - DiasTrab)
		nDiasCalc := 30
	EndIf

	If cTip1 $ "D*H" .And. nHoras > 0
		If SRA->RA_TIPOPGT == "S" .and. SRA->RA_CATFUNC == "S"
			nHoras := ( (nHoras / nDiasCalc ) * Min(( DiasTrab + DiasDSR + nDiasPG - nDiasMat - nDPrgSalMa ),nDiasCalc) )
		Else
			nHoras := ( (nHoras / nDiasCalc ) * Min(( DiasTrab + nDiasPg - nDiasMat - nDPrgSalMa ),nDiasCalc))
		EndIf
	Else
		nHoras := Min((DiasTrab + nDiasPg - nDiasMat - nDPrgSalMa),nDiasCalc)
	Endif 

	nValInteg := nValor

	If SRA->RA_TIPOPGT == "S" .and. SRA->RA_CATFUNC == "S"
		nValor := Round( ( ( nValor / nDiasCalc ) * Min(( DiasTrab + DiasDSR + nDiasPg - nDiasMat - nDPrgSalMa ),nDiasCalc) ), MsDecimais(1) )
	Else
		nValor := Round( ( ( nValor / nDiasCalc ) * Min(( DiasTrab + nDiasPg - nDiasMat - nDPrgSalMa),nDiasCalc) ), MsDecimais(1) )
	EndIf

	DiasTrab := nDiasTAux

Return()

