Function IncorpSal(nVlPd,nValor,lDesconto,nPosV)

	Local nValAux := 0

	DEFAULT nVlPd  := 0
	DEFAULT nValor := 0
	DEFAULT lDesconto := .F.
	DEFAULT nPosV  := 0

	nValAux := nVlPd

	If nValor > 0
		If nValor > nValAux
			nValAux := nValor - nValAux
		ElseIf nValor < nValAux 
			nValAux := nValAux - nValor	
		EndIf
	EndIf

	//Se lDesconto significa que o tipo da verba é de desconto portanto deverá ser subtraído o valor e não somado.
	If !lDesconto
		If nPosV > 0 .And. SRA->RA_CATFUNC == "H" .And. SRA->RA_TPCONTR == "3" .And. cTipoRot $ "1|4" .And. aPdv[nPosV,2] <> 100
			SalHora 	+= (SalHora * (aPdv[nPosV,2] / 100 ))  			    
		Else 
			SalHora 	+= (nValAux / nHrsCal) 
		EndIf   
		SalMes  	+= nValAux
		SalHora30 	+= (nValAux / nHrsCal30)    
		SalDia  	+= (nValAux / nDiasC)
		SalDia30	+= (nValAux / 30)
	Else
		SalMes  	-= nValAux
		SalHora 	-= (nValAux / nHrsCal)    
		SalHora30 	-= (nValAux / nHrsCal30)    
		SalDia  	-= (nValAux / nDiasC)
		SalDia30  	-= (nValAux / 30)
	Endif

Return()     


