Local cCampo	:= ""
Local oStructRI0
Local oStructRI9
Local oModel
Local cFiltro := "RI9_STATUS = '1'"

oModel:= MpFormModel():New("GPEA021",/*Pre-Validacao*/,  /*Pos-Validacao*/, /*Commit*/, /*Cancel*/)
