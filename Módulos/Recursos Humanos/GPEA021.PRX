oStructRI9 := FWFormStruct(1,"RI9")
oModel:AddGrid("GPEA021_RI9", "GPEA021_RI0"/*cOwner*/, oStructRI9 , /*bLinePre*/,  /*bLinePost*/, /*bPre*/,  /*bPost*/,/*bLoad*/)
