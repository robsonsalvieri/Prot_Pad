Function Pona140Atu(cAlias,nReg,nOpcx)

Local aAdvSize		:= {}
Local aInfoAdvSize	:= {}
Local aObjSize		:= {}
Local aObjCoords	:= {}
Local aButtons		:= {}
Local aGdAltera		:= {}
Local aSeleFolders	:= SeleFolder("SP2")
Local aFolders		:= {}
Local aOfusca		:= If(FindFunction('ChkOfusca'), ChkOfusca(), {.T.,.F.}) //[1] Acesso; [2]Ofusca
Local bSet15		:= { || NIL }
Local bSet24		:= { || NIL }
Local cCC        	:= SRA->RA_CC
Local cMat       	:= SRA->RA_MAT
Local cNome      	:= SRA->RA_NOME
Local cTnoTrab   	:= SRA->RA_TNOTRAB
Local cFolder		:= ""
Local a140Field  	:= { 'P2_FILIAL', 'P2_MAT', 'P2_CC', 'P2_TURNO', 'P2_DATAATE', 'P2_SITFUN' }
Local dDtIni     	:= CtoD('  /  /  ')
Local dDtFim     	:= CtoD('  /  /  ')
Local dDtBkp     	:= CtoD('  /  /  ')
Local nElementos 	:= 0.00
Local nOpcNewGd		:= IF( ( nOpcx == 2 ) , 0 , GD_INSERT + GD_UPDATE + GD_DELETE )
Local lOfuscaNom	:= .F.
Local lOfuscaAdm	:= .F.

Local aFldRot 		:= {'RA_NOME', 'RA_ADMISSA'}
