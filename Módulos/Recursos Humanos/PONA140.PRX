	dbSelectArea('SP2')
	dbSetOrder(1)

	/*
	ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
	³ Inicializa o filtro utilizando a funcao FilBrowse                      ³
	ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ*/
	cFiltraRh := ChkRh("PONA140","SRA","1")
	bFiltraBrw 	:= {|| FilBrowse("SRA",@aIndexSRA,@cFiltraRH) }
	Eval(bFiltraBrw)
	
	If lAutoExec
		// Posiciona no funcionário
		nPosFil := Ascan(aAutoCab, {|x| Alltrim(x[1]) == "P2_FILIAL"})
		nPosMat := Ascan(aAutoCab, {|x| Alltrim(x[1]) == "P2_MAT"})

		SRA->(DbSetOrder(1))

		If nPosFil > 0 .And. nPosMat > 0 .And. SRA->(dbSeek(aAutoCab[nPosFil][2] + aAutoCab[nPosMat][2]))
			MBrowseAuto(nOpcAuto, aAutoCab, 'SP2', .F., .T.)
