		ElseIf lBlqTemp //Temporario
			Help( ,, 'Help',, OemtoAnsi(STR0057), 1, 0 ) //"Funcionário não é temporário."
		Else
			FWExecView(OemToAnsi(STR0045), "GPEA927", MODEL_OPERATION_VIEW,,{||.T.}) 	//"Func. Temporário"
		EndIf
	ElseIf (nFuncOpc == 5 )
		If lBlqDemit //Demissao
