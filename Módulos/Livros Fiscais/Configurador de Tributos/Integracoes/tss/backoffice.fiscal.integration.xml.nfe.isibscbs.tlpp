	cXml +=     self:getXmlgRed(oStateTax)
	cXml +=     '<vIBSUF>' + ltrim(str(nValorTributo,16,2)) + '</vIBSUF>'
	cXml += '</gIBSUF>'

	nTotalIbs += nValorTributo

return cXml

