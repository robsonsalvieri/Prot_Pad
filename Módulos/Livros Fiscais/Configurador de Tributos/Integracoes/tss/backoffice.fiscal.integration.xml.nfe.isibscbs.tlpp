/*/{Protheus.doc} IBSCBSBPE::GeraIS
Gera tags do imposto IS.
@type method
@version  P12 V1.2410
@author Carlos Eduardo Boy
@since 21/05/2025/*/
Method getXmlIS(cDocumentItemId as character) as character class TaxInformation
	Local oJsImpSel as json
	Local cXmlImpSel as character
	Local cAliasDoc as character
	Local cAlsField as character
	Local cClassTrib as character
	Local aDadosItem  as array

	self:setDocumentItemId(cDocumentItemId)

	if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IMPOSTO_SELETIVO)

		oJsImpSel := ::oTaxByTotvsId[cDocumentItemId][IMPOSTO_SELETIVO]

		//Tratamento temporário, posteriormente a classe TciWritten deve retornar esses valores para seram passados para o XML
		cAliasDoc   := GetAdvFVal('F2D', 'F2D_TABELA', xFilial('F2D')+cDocumentItemId+oJsImpSel['dados_escriturados']['codigo_tributo'], 2 )
		cAlsField   := substr(cAliasDoc,2,2)
		aDadosItem  := GetAdvFVal(cAliasDoc, {cAlsField+'_UM',cAlsField+'_QUANT'}, xFilial(cAliasDoc)+cDocumentItemId, 18 )

		//Proteção para o caso de não existir o campo CJ3_CCT
		if lExistCJ3_CCT
			cClassTrib := oJsImpSel['dados_escriturados']['cclasstrib']
		endif

		cXmlImpSel += '<imposto>'
		cXmlImpSel +=     '<codigo>IS</codigo>'
		cXmlImpSel += 	'<Tributo>'
		cXmlImpSel +=         '<CSTIS>' + oJsImpSel['dados_escriturados']['cst'] + '</CSTIS>'
		cXmlImpSel +=         '<cClassTribIS>' + cClassTrib + '</cClassTribIS>'
		cXmlImpSel +=         '<vBCIS>' + ltrim(str(oJsImpSel['base_tributo'],13,2)) + '</vBCIS>'
		cXmlImpSel +=         '<pIS>' + ltrim(str(oJsImpSel['aliquota_tributo'],8,4)) + '</pIS>'
		cXmlImpSel +=         '<pISEspec>' + lTrim(str(0, 8, 4)) + '</pISEspec>'
		cXmlImpSel +=         '<uTrib>' + aDadosItem[1] + '</uTrib>'
		cXmlImpSel +=         '<qTrib>' + lTrim(str(aDadosItem[2],16,4)) + '</qTrib>'
		cXmlImpSel +=         '<vIS>' + ltrim(str(oJsImpSel['valor_tributo'],13 ,2)) + '</vIS>'
		cXmlImpSel += 	'</Tributo>'
		cXmlImpSel += '</imposto>''
	endif

Return cXmlImpSel

/*/{Protheus.doc} IBSCBSBPE::GeraIBSCBS
Gera tags dos imposto IBS e CBS.
@type method
@version  P12 V1.2410
@author Carlos Eduardo Boy
@since 21/05/2025
/*/
Method getXmlIBSCBS(cDocumentItemId) as character class TaxInformation
	Local lGeraXml as logical
	Local cXmlCbsIbs as character
	Local cCst as character
	Local cClassTrib as character
	Local nBaseIbsCbs as numeric
	Private oJsCbs as json
	Private oJsIbsEstadual  as json
	Private oJsIbsMunicipal as json
	Private oJsIbsCreditoPresumido as json
	Private oJsCbsCreditoPresumido as json
	Private oJsIbsMonofasico as json
	Private oJsCbsMonofasico as json
	Private oJsIbsEstadualRegular as json
	Private oJsIbsMunicipalRegular as json
	Private oJsCbsRegular as json

	self:setDocumentItemId(cDocumentItemId)

	if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_ESTADUAL) .or. ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_MUNICIPAL)

		oJsIbsEstadual  := ::oTaxByTotvsId[cDocumentItemId][IBS_ESTADUAL]
		oJsIbsMunicipal := ::oTaxByTotvsId[cDocumentItemId][IBS_MUNICIPAL]

		//Pego do estadual pois sempre existIrão os dois tributos(Estadual e municipal)
		nBaseIbsCbs := iif(oJsIbsEstadual != nil, oJsIbsEstadual['base_tributo'], oJsIbsMunicipal['base_tributo'])
		self:setTotalBaseIbsCbs(nBaseIbsCbs)

		cCst := iif(oJsIbsEstadual != nil, oJsIbsEstadual['dados_escriturados']['cst'], oJsIbsMunicipal['dados_escriturados']['cst'])

		//Proteção para o caso de não existir o campo CJ3_CCT
		if lExistCJ3_CCT
			cClassTrib := iif(oJsIbsEstadual != nil, oJsIbsEstadual['dados_escriturados']['cclasstrib'], oJsIbsMunicipal['dados_escriturados']['cclasstrib'])
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_CRED_PRESUMIDO)
			oJsIbsCreditoPresumido := ::oTaxByTotvsId[cDocumentItemId][IBS_CRED_PRESUMIDO]
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_EST_REGULAR)
			oJsIbsEstadualRegular := ::oTaxByTotvsId[cDocumentItemId][IBS_EST_REGULAR]
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_MUN_REGULAR)
			oJsIbsMunicipalRegular := ::oTaxByTotvsId[cDocumentItemId][IBS_MUN_REGULAR]
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(IBS_MONOFASICO)
			oJsIbsMonofasico := ::oTaxByTotvsId[cDocumentItemId][IBS_MONOFASICO]
		endif

		lGeraXml := .t.
	endif

	if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(CBS_FEDERAL)

		oJsCbs := ::oTaxByTotvsId[cDocumentItemId][CBS_FEDERAL]

		if nBaseIbsCbs = 0
			nBaseIbsCbs := oJsCbs['base_tributo']
			self:setTotalBaseIbsCbs(nBaseIbsCbs)
		endif

		if empty(cCst) .and. empty(cClassTrib)
			cCst := oJsCbs['dados_escriturados']['cst']

			//Proteção para o caso de não existir o campo CJ3_CCT
			if lExistCJ3_CCT
				cClassTrib := oJsCbs['dados_escriturados']['cclasstrib']
			endif
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(CBS_CRED_PRESUMIDO)
			oJsCbsCreditoPresumido := ::oTaxByTotvsId[cDocumentItemId][CBS_CRED_PRESUMIDO]
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(CBS_REGULAR)
			oJsCbsRegular := ::oTaxByTotvsId[cDocumentItemId][CBS_REGULAR]
		endif

		if ::oTaxByTotvsId[cDocumentItemId]:HasProperty(CBS_MONOFASICO)
			oJsCbsMonofasico := ::oTaxByTotvsId[cDocumentItemId][CBS_MONOFASICO]
		endif

		lGeraXml := .t.
	endif

	if lGeraXml
		cXmlCbsIbs := '<imposto>'
		cXmlCbsIbs += 	'<codigo>IBSCBS</codigo>'
		cXmlCbsIbs += 	'<Tributo>'
		cXmlCbsIbs +=         '<CST>' + cCst + '</CST>'
		cXmlCbsIbs +=         '<cClassTrib>' + cClassTrib + '</cClassTrib>'
		cXmlCbsIbs +=         self:getXmlgIBSCBS(nBaseIbsCbs)
		//cXmlCbsIbs +=         self:getXmlgIBSCBSMono(oJsIbsMonofasico, oJsCbsMonofasico)
		//cXmlCbsIbs +=         self:getXmlgTransfCred()
		//cXmlCbsIbs +=         self:getXmlgCredPresIBSZFM()
		cXmlCbsIbs += 	'</Tributo>'
		cXmlCbsIbs += '</imposto>'
	endif

	//Verificar se os Jsons criados devem ser liberados da memória

Return cXmlCbsIbs

/*/{Protheus.doc} 
Gera tags do subgrupo gIBSCBS do grupo IBSCBS
@type method
@version  P12 V1.2410
@author Carlos Eduardo Boy
@since 21/05/2025
/*/
Method getXmlgIBSCBS(nBaseIbsCbs as numeric) as character class TaxInformation
	Local cXml as character
	Local nTotalIbsItem as numeric

	cXml += '<gIBSCBS>'
	cXml +=     '<vBC>' + ltrim(str(nBaseIbsCbs,13,2)) + '</vBC>'
	cXml +=     self:getXmlgIBSUF(oJsIbsEstadual, @nTotalIbsItem)
	cXml +=     self:getXmlgIBSMun(oJsIbsMunicipal, @nTotalIbsItem)
	cXml +=     '<vIBS>' + lTrim(str(nTotalIbsItem,13,2)) + '</vIBS>'
	cXml +=     self:getXmlgCBS(oJsCbs)
	cXml +=     self:getXmlgTribRegular(oJsIbsEstadualRegular, oJsIbsMunicipalRegular, oJsCbsRegular)
	cXml +=     self:getXmlgIBSCredPres(oJsIbsCreditoPresumido)
	cXml +=     self:getXmlgCBSCredPres(oJsCbsCreditoPresumido)
	//cXml +=     self:getXmlgTribCompraGov()

	cXml += '</gIBSCBS>'
return cXml

