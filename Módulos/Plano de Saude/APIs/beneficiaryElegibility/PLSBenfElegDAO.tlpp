/*/{Protheus.doc} fingers
Dedos da biometria

@author    Lucas Nonato
@version   V12
@since     11/09/2019
/*/
method fingers(lBio) class PLSBenefElegDao

    local oJson     := jsonObject():New()
    local cSql      := ''
        
    oJson['finger01']   := ''
    oJson['finger02']   := ''
    oJson['finger03']   := ''
    oJson['finger04']   := ''
    oJson['finger05']   := ''
    oJson['finger06']   := ''
    oJson['finger07']   := ''
    oJson['finger08']   := ''
    oJson['finger09']   := ''
    oJson['finger10']   := ''

    cSql += " SELECT BIO_DIG,BIO_DIG1,BIO_DIG3,BIO_DIG5,BIO_DIG7,BIO_DIG9 "
    cSql += " FROM " + RetSqlName("BIO")
	cSql += " WHERE BIO_FILIAL = '" + xFilial("BIO") + "' "
	cSql += " AND BIO_ALIAS = 'BTS' "
	cSql += " AND BIO_ID = '" + alltrim(BA1->BA1_MATVID) + "' "
	cSql += " AND D_E_L_E_T_ = ' ' "
	dbUseArea(.T.,"TOPCONN",TCGENQRY(,,cSql),'TMPBIO',.F.,.T.)    

    while !TMPBIO->(eof())
        oJson['finger'+strzero(val(cvaltochar(TMPBIO->BIO_DIG)),2)] := AllTrim(TMPBIO->BIO_DIG1)+AllTrim(TMPBIO->BIO_DIG3)+AllTrim(TMPBIO->BIO_DIG5)+AllTrim(TMPBIO->BIO_DIG7)+AllTrim(TMPBIO->BIO_DIG9)
        TMPBIO->(dbskip())
    enddo

    TMPBIO->(dbclosearea())
    
return(oJson)

method setEligibilityType(cEligibilityType) class PLSBenefElegDao
    self:lPetEligibility := iif(cEligibilityType == "pet", .T., .F.)
return 

method searchPhotoByCpfOrCardNumber() class PLSBenefElegDao

	Local cBmpPict := ""
	Local cPathPict:= GetSrvProfString("Startpath","")
	Local cBitMap  := ""
	Local cLeitura := ""
	Local cExtensao:= ".BMP"
	Local nHandle  := 0
	Local aFiles := {} // O array receberá os nomes dos arquivos e do diretório
	Local aSizes := {} // O array receberá os tamanhos dos arquivos e do diretorio

	BTS->( dbSetOrder(1) )
	if BTS->( msSeek( xFilial("BTS") + BA1->BA1_MATVID ) )
		If !Empty( cBmpPict := Upper( AllTrim( BTS->BTS_BITMAP ) ) )
			If RepExtract(cBmpPict,cPathPict+cBmpPict)
				nHandle := FOpen(cPathPict+cBmpPict+cExtensao)
				If nHandle <> 0
					cLeitura := ""
					ADir(cPathPict+cBmpPict+cExtensao, aFiles, aSizes)
					Fread(nHandle,@cLeitura,aSizes[1])
					cBitMap := Encode64(cLeitura)
				EndIf
				FClose(nHandle)
				Ferase(cPathPict+cBmpPict+cExtensao)
			EndIf
		endIf
	endif

return(cBitMap)
