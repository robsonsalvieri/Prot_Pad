/*/{Protheus.doc} searchByCpfOrCardNumber
    return data user from database

    @type  class
    @author PLSTEAM
    @since 29/03/2022
/*/
//------------------------------------------------------------------------------------------
method searchByCpfOrCardNumber(cCardNumberOrCpf, cAuthType) class PLSBenefElegDao

    local nI            := 0
    local aMatric       := {}
    local cQuery        := ""
    local cError        := ''
    local nBenefPlans   := 0

    //busca por cpf -- mas podem ter casos especificos que o matric tem 11 digitos
    if len(cCardNumberOrCpf) == 11

        cQuery := " SELECT BA1_CODINT, BA1_CODEMP, BA1_MATRIC, BA1_TIPREG, BA1_DIGITO "
        cQuery += " FROM " + ::cTable
        cQuery += " WHERE BA1_FILIAL = '" + xFilial("BA1") + "' "
        cQuery += " AND ( " + iif(self:lPetEligibility, " BA1_CPFTIT ", " BA1_CPFUSR ") + " = '" + cCardNumberOrCpf + "' OR BA1_MATANT = '" + cCardNumberOrCpf + "')"
        cQuery += " AND D_E_L_E_T_ = ' ' "
        cQuery += " ORDER BY BA1_DATBLO ASC "

        dbUseArea(.T.,"TOPCONN",TCGENQRY(,,cQuery),"TrbBEDAO",.F.,.T.)

        if !TrbBEDAO->(eof())

            while !TrbBEDAO->(eof())

                aadd(aMatric, TrbBEDAO->(BA1_CODINT + BA1_CODEMP + BA1_MATRIC + BA1_TIPREG + BA1_DIGITO))

                TrbBEDAO->(dbSkip())
            endDo

        else
            cError := 'CPF nao encontrado [' + cCardNumberOrCpf + ']!'
        endIf

        TrbBEDAO->(dbclosearea())

    else
        aadd(aMatric, cCardNumberOrCpf)
    endIf

    if empty(cError)

        //fazer busca pela funcao padrao do beneficiario
        for nI := 1 to len(aMatric)

            if len(cCardNumberOrCpf) == 11
                coNout('matricula [' + aMatric[nI] + '] encontrada para o cpf [' + cCardNumberOrCpf + ']')
            endIf

            ::elegibility( PLVLDUSRP( aMatric[nI],,,"1",,,,,,,, .t., .T., cAuthType) )

        next

    else
        ::elegibility(nil, cError)
    endIf

    if existBlock("PBENEAPI")
		self:aBeneficiaries 	:= execBlock("PBENEAPI",.f.,.f.,{self:aBeneficiaries})
	endIf

    for nI := 1 to len(self:aBeneficiaries)
        nBenefPlans++
    next

    ::oElegibility['beneficiaries']     := self:aBeneficiaries
    ::oElegibility['numberofplans']     := nBenefPlans
    ::oElegibility['serviceResponse']   := .t.
    ::oElegibility['authorizationType'] := nil
    ::oElegibility['journey']           := nil
    
    //Só busca foto p/ elegibilidade pet que tenha encontrado registro
    if self:lPetEligibility .AND. empty(cError)    
        ::oElegibility['base64BenefImage'] := self:searchPhotoByCpfOrCardNumber()
    endif 

return(::oElegibility)

