/*/{Protheus.doc} waitingPeriod

    @type  Class
    @author PLSTEAM
    @since 29/03/2023
/*/
//------------------------------------------------------------------------------------------
method waitingPeriod(cMatric) class PLSBenefElegDao

    local oJson             := JsonObject():New()
    local aCar              := {}
    default cMatric         := ""

    if !Empty(cMatric)
        //Carências do beneficiário (ambulatorial, hospitalar, parto, odontológica)
        aCar := PLSA271(cMatric) 
        if len(aCar) >= 1 .And. len(aCar[1]) >= 24
            oJson['timeOutpatientProcedures']   := iif(Empty(aCar[1,24]),"Carência Cumprida",aCar[1,24])
            oJson['waitingHospitalProcedures']  := iif(Empty(aCar[1,25]),"Carência Cumprida",aCar[1,25])
            oJson['termDeliveryProcedures']     := iif(Empty(aCar[1,26]),"Carência Cumprida",aCar[1,26])
            oJson['deficiencyDentalProcedures'] := iif(Empty(aCar[1,27]),"Carência Cumprida",aCar[1,27])
        endIf
    endIf

return(oJson)

method waitingPeriodComplement(cMatric) class PLSBenefElegDao

    local oJson             := JsonObject():New()
    local aRetCarenc        := {}
    local aCarenciasPLSA271 := {}
    local cFilialBDL        := xFilial('BDL')
    local cCodInt           := AllTrim(BA1->BA1_CODINT)
    local nI                := 0
    default cMatric         := ""

    oJson := {}

    if !Empty(cMatric)
        //Demais carências 
        BA1->(DbSetOrder(2))
        if BA1->(MsSeek(xFilial('BA1')+cMatric))

            AAdd( aCarenciasPLSA271, cFilialBDL + cCodInt + AllTrim( GetNewPar( "MV_PLCLAMB" , "XXX" ) ) )
            AAdd( aCarenciasPLSA271, cFilialBDL + cCodInt + AllTrim( GetNewPar( "MV_PLCLHOS" , "XXX" ) ) )
            AAdd( aCarenciasPLSA271, cFilialBDL + cCodInt + AllTrim( GetNewPar( "MV_PLCLPAT" , "XXX" ) ) )
            AAdd( aCarenciasPLSA271, cFilialBDL + cCodInt + AllTrim( GetNewPar( "MV_PLCLODO" , "XXX" ) ) )

            aRetCarenc := PLSCLACAR(BA1->BA1_CODINT,cMatric,BA1->BA1_DATCAR,,.T.,aCarenciasPLSA271)

            if Len(aRetCarenc) > 0 .And. aRetCarenc[1] 
                for nI := 1 to len(aRetCarenc)
                    AAdd( oJson, JsonObject():New() )
                    oJson[nI]['code']        := aRetCarenc[2,nI,1]
                    oJson[nI]['description'] := Alltrim(aRetCarenc[2,nI,2])
                    oJson[nI]['endDate']     := FWDateTo8601(aRetCarenc[2,nI,3])
                next
            endif 
        endif
    endIf

return(oJson)

