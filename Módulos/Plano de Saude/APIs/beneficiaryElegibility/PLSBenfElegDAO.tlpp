method healthInsurance(aDad,lOwnerAtribute) class PLSBenefElegDao

    local oJson := jsonObject():New()
    Default lOwnerAtribute := .F.

    oJson['code']             := aDad[1]
    oJson['description']      := aDad[2]
    oJson['roomType']         := aDad[3]
    
    //Tag do titular nao precisa de descricao (tem que considerar a do dependente)
    if !lOwnerAtribute .And. len(aDad) > 3
        oJson['roomDescription']  := aDad[4]
    endif

return(oJson)

