method procExcBXX() class PLPegTransferSvc
local cSql      := ''
local cAlias    := GetNextAlias()
local lRet      := .f.

cSql := " SELECT R_E_C_N_O_ Recno FROM "+RetSqlName("BXX")
cSql += " WHERE BXX_FILIAL	= '" + xFilial("BXX") + "' "
cSql += " AND BXX_CODINT	= '" + BCI->BCI_CODOPE + "' "
cSql += " AND BXX_CODRDA	= '" + BCI->BCI_CODRDA + "' "
cSql += " AND BXX_CODPEG	= '" + BCI->BCI_CODPEG + "' "
cSql += " AND D_E_L_E_T_ = ' ' "

dbUseArea(.T.,"TOPCONN",TCGENQRY(,,cSql),cAlias,.F.,.T.)

if (cAlias)->(!eof())
    BXX->(dbgoto((cAlias)->Recno))
    lRet := PLSMANBXX(/*cCodRda*/,/*cNomArq*/,/*cTipGui*/,/*cLotGui*/,/*nTotEve*/,/*nTotGui*/,/*nVlrTot*/,5/*K_Excluir*/,(cAlias)->Recno,/*lProcOk*/,/*aRet*/)
endif
(cAlias)->(dbclosearea())

return lRet
