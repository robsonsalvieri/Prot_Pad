Function FS_OK220() // Acontece ao confirmar
Local lRet := .t.

If ! Inclui
	Return .t.
EndIf
DbSelectArea("VVR")
DbSetOrder(2)
If DbSeek( xFilial("VVR")+M->VVR_CODMAR+M->VVR_GRUMOD )
	Help(" ",1,"JAGRAVADO")
	lRet := .f.
Endif
Return(lRet)

