Function FILTROVE2()
Local lRet,nI
Local aPosOri := {{"SB1",SB1->(IndexOrd()),SB1->(Recno())},;
                   {"SBM",SBM->(IndexOrd()),SBM->(Recno())},;
                   {Alias(),IndexOrd(),Recno()}}

SB1->(DbSetOrder(1))
SB1->(DbSeek(xFilial("SB1")+M->B5_COD))
lRet := (VE2->VE2_CODMAR == POSICIONE("SBM",1,XFILIAL("SBM")+SB1->B1_GRUPO,"BM_CODMAR"))
if Type("M->VEM_CODMAR") # "U"
   if !Empty(M->VEM_CODMAR)
      lRet := VE2->VE2_CODMAR == M->VEM_CODMAR
   Endif
Endif
For nI := 1 to Len(aPosOri)
   DbSelectArea(aPosOri[nI,1])
   DbSetOrder(aPosOri[nI,2])
   DbGoto(aPosOri[nI,3])
Next
Return lRet

