			lRet := IIF(ATECODIGO('SM0',SM0->M0_CODIGO+Mv_par11,SM0->M0_CODIGO+Mv_Par12,02),.T.,.F.)
			If !lRet
				Return .F.
			EndIf
		EndIf
	EndIf

Return .T.

