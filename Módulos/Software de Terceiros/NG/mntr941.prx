Function MNR941FL(nOpc)
	Local cVERFL

	cVERFL := Mv_Par11

	If Empty(mv_par11)
		Return .T.
	Else
		If nOpc == 1
			lRet := IIf(Empty(Mv_Par11),.T.,ExistCpo('SM0',SM0->M0_CODIGO+Mv_par11))
			If !lRet
				Return .F.
