/*/
Function Sg250Proc()
	Local nCntSit := 0

	Dbselectarea(cTrbTBN)
	Dbgotop()

	ProcRegua(LastRec())

	While !Eof()

	IncProc()
	lCont := If((lMarca .And. !Empty(TBN_OK)) .Or. (!lMarca .And. Empty(TBN_OK)),.t.,.f.)

	If lCont

			Dbselectarea("TBN")
			Dbsetorder(1)
			Dbseek(xFilial('TBN')+(cTrbTBN)->TBN_CODORD)

			RecLock('TBN',.f.)
			TBN->TBN_SITUAC := '3'
			MsUnLock('TBN')

		EndIf
		DbSelectArea(cTrbTBN)
		Dbskip()
	End

	Dbselectarea("TBN")
	Dbsetorder(2)
	Dbseek(xFILIAL('TBN')+TBM->TBM_CODPLA)
	While !Eof() .And. TBN->TBN_FILIAL == xFILIAL('TBN') .And.;
				TBN->TBN_CODPLA == TBM->TBM_CODPLA
		If TBN->TBN_SITUAC == '2'
			nCntSit++
		EndIf
	DbSkip()
	End

	If nCntSit = 0
		RecLock("TBM",.f.)
		TBM->TBM_SITUAC := '2'
		MsUnLock("TBM")
	EndIf

Return .T.

