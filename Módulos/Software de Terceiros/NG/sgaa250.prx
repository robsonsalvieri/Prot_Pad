/*/
Function A250Total(cALIAS,nREG,nOPCX)
	Local aArea := GetArea()

	RecLock("TBM",.f.)
	TBM->TBM_SITUAC := '2'
	MsUnLock("TBM")

	Dbselectarea("TBN")
	Dbsetorder(2)
	Dbseek(xFILIAL('TBN')+TBM->TBM_CODPLA)
	While !Eof() .And. TBN->TBN_FILIAL == xFILIAL('TBN') .And.;
			TBN->TBN_CODPLA == TBM->TBM_CODPLA

			RecLock('TBN',.f.)
			TBN->TBN_SITUAC := '3'
			MsUnLock('TBN')
			TBN->(Dbskip())
	End
	RestArea(aArea)

Return NIL

