				EndIf
			EndIf
			If !Empty((cTRB)->RG)
				cStrREL += " RG "+(cTRB)->RG //"O Sr(a)"###"matrícula"##
			EndIf
			cStrREL += " "+STR0031 //"fica neste ato, ADVERTIDO que não deverá mais praticar o seguinte ato ou omissão:"
		EndIf

		nLinhas := MlCount(cStrREL, 95)

