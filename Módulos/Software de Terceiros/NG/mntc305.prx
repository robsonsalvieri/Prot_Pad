			EndIf
			If !Empty(cSeriectps)
				cStrREL += 	" "+STR0030+" "+cSeriectps //"Série"
			EndIf
			cStrREL += 	" "+STR0031 //"fica neste ato, ADVERTIDO que não deverá mais praticar o seguinte ato ou omissão:"
		Else
			cStrREL := 	STR0027+". "+cMONome+" "+STR0028+" "+AllTrim(cMOMatric)+","
			If !Empty((cTRB)->CGC)
				If Len(AllTrim(cValToChar((cTRB)->CGC))) == 14
