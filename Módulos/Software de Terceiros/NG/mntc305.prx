Function MNTC305()

	Local aNGBeginPrm := {}
	Local aPesq       := {}
	Local nSizeFil    := 0
	Local nSizeMul    := 0 
	Local oTempTable
	
	If MNTAmIIn( 95 )

		aNGBEGINPRM := NGBeginPrm()
