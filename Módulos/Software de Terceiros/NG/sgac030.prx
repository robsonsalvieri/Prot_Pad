Function Sg030Move(cCod)
Local nRec3
nIdent := 0
nAspec := 0
nImpac := 0
nAval  := 0
nRes	 := 0

cCod := SubStr( cCod, 1, 3 )
TRBSGB->(DbSetOrder(2))
dbSelectArea("TRBSGB")
DbSetOrder(2)
If Dbseek('001'+cCod)
   If QAA->(Dbseek(xFilial('QAA')+TRBSGB->RESPONS))
   	cRespLab := STR0005  //"Responsavel"
    	cResp01  := TRBSGB->RESPONS+' - '+QAA->QAA_NOME
   Else
   	cRespLab := ''
   	cResp01  := ''
   Endif
Endif

dbSelectArea("TRBSGB")
DbSetOrder(1)
Dbseek('001'+cCod)
While !Eof() .And. TRBSGB->NIVSUP == cCod


      nRec3    := Recno()
      cComp   := TRBSGB->CODPRO
		cCargo  := TRBSGB->CARGO
      DbSelectArea("TRBSGB")
      DbSetOrder(1)
      If DbSeek(cCodEst+cComp)
         Sgc030CnId(cComp,cCargo)
      Else
			If Empty( cCargo )
				nIdent += 1
			ElseIf cCargo == 'ASP   '
				nAspec += 1
			ElseIf cCargo == 'IMP   '
				nImpac += 1
			ElseIf cCargo == 'AVA   '
				nAval += 1
			ElseIf cCargo == 'RES   '
				nRes += 1
			EndIf
      Endif

      DbGoto(nRec3)
      DbSkip()
End

oIdent:Refresh()
oAspec:Refresh()
oImpac:Refresh()
oAval:Refresh()
oRes:Refresh()
oResp01:Refresh()
oRespLab:Refresh()

Return NIL

Function Sgc030CnId(cPai,cCargo)

Local nRec4

If Empty( cCargo )
	nIdent += 1
ElseIf cCargo == 'ASP   '
	nAspec += 1
ElseIf cCargo == 'IMP   '
	nImpac += 1
ElseIf cCargo == 'AVA   '
	nAval += 1
ElseIf cCargo == 'RES   '
	nRes += 1
EndIf

While !Eof() .And. TRBSGB->NIVSUP == cPai

      nRec4    := Recno()
      cComp   := TRBSGB->CODPRO
		cCargo  := TRBSGB->CARGO

      DbSelectArea("TRBSGB")
      DbSetOrder(1)
      If DbSeek(cCodEst+cComp)
         Sgc030CnId(cComp,cCargo)
      Else
			If Empty( cCargo )
				nIdent += 1
			ElseIf cCargo == 'ASP   '
				nAspec += 1
			ElseIf cCargo == 'IMP   '
				nImpac += 1
			ElseIf cCargo == 'AVA   '
				nAval += 1
			ElseIf cCargo == 'RES   '
				nRes += 1
			EndIf
      Endif

      DbGoto(nRec4)
      DbSkip()
End

Return Nil

