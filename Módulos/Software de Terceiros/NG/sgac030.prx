TRBSGB->DESCRI  := cDescri
TRBSGB->NIVSUP  := cNivSup
TRBSGB->RESPONS := cMat
TRBSGB->TIPO    := cIndCon
TRBSGB->CODTIPO := cCodCon
TRBSGB->CC      := cCC
TRBSGB->CENTRAB := cCT
TRBSGB->DOCFIL  := cFilDoc
TRBSGB->MODSGA  := 'X'
TRBSGB->ORDEM   := cOrdem
TRBSGB->FOLDERA := cFolderA
TRBSGB->FOLDERB := cFolderB
TRBSGB->CARGO   := cCargo
MsUnlock("TRBSGB")

Return .T.

