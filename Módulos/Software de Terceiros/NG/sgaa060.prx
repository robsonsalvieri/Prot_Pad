/*/{Protheus.doc} SGA060VDEL
Valida se pode deletar a opo

@return Lgico - Retorn verdadeiro se a pode deletar

@sample
SGA060VDEL()

@author Jackson Machado
@since 22/03/2013
@version 1.0
/*/
//---------------------------------------------------------------------
Function SGA060VDEL()

	Local nRec, nAt
	Local lRet		:= .T.
	Local lReturn 	:= .F.
	Local aOld		:= {}

	If Type( "aChkSql" )  == "A"
		lReturn := .T.
		aOld 	:= aClone( aChkSql )
		aChkSql := NGRETSX9( "TA7" )
	EndIf

	If Type( "aCols" ) == "A" .AND. Len( aCols ) > 0
		If lValDel//Necessria esta verificacao pois a GetDados valida duas vezes o cDel
			lValDel := .F.
			nAt 	:= n
			//Se inclusao ou estiver reativando a linha
			If !Inclui .And. !aCols[ nAt , Len( aCols[ nAt ] ) ]
				nRec := aCols[ nAt , Len( aCols[ nAt ] ) - 1 ]
				If nRec > 0
					dbSelectArea( "TA7" )
					dbGoTo( nRec )
					If !NGVALSX9( "TA7" , , .T. )
						lRet := .F.
					EndIf
				Endif
			Endif
		Else
			lValDel := .T.
		Endif
	Endif

	If lReturn
		aChkSql := aClone( aOld )
	EndIf

Return lRet

