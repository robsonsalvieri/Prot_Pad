/*/
Function CHK060GRV(cAlias,lFim)
Local f, nQtd  := 0
Local cMemo    := ""
Local cMens    := ""
Local nPosCod := 1, nAt := n
Local aOldArea := GetArea() // Guarda variaveis de alias e indice
Local aColsOk  := {}, aHeadOk := {}
Default lFim   := .F.

If cAlias == "TA7"
	aColsOk := aClone(aCols)
	aHeadOk := aClone(aHeader)
	nPosCod := aScan( aHeader,{|x| Trim(Upper(x[2])) == "TA7_CODOPC"})
Endif

//Percorre aCols
For f:= 1 to Len(aColsOk)
	If !aColsOk[f][Len(aColsOk[f])]
		nQtd++
		If f == nAt
			//VerIfica se os campos obrigatrios esto preenchidos
			If Empty(aColsOk[f][nPosCod])
				//Mostra mensagem de Help
				Help(1," ","OBRIGAT2",,aHeadOk[nPosCod][1],3,0)
				Return .F.
			Endif
		Endif
		//Verifica se  somente LinhaOk
		If f <> nAt .and. !aColsOk[nAt][Len(aColsOk[nAt])]
			If aColsOk[f][nPosCod] == aColsOk[nAt][nPosCod]
				Help(" ",1,"JAEXISTINF",,aHeadOk[nPosCod][1])
				Return .F.
			Endif
		Endif
	Endif
Next f

If nQtd == 0 .and. lFim
	Help(1," ","OBRIGAT2",,aHeadOk[nPosCod][1],3,0)
	Return .F.
Endif

If ALTERA
	If M->TA6_DESCRI <> TA6->TA6_DESCRI .And. TA6->TA6_PESO  > 0
		DbSelectArea("TA3")
		DbSetOrder(1)
		DbSeek(xFilial("TA3"))
		While !Eof() .and. xFilial("TA3") == TA3->TA3_FILIAL
			cMemo := TA3->TA3_FORMUL
			If "#"+AllTrim(TA6->TA6_DESCRI)+"#" $ cMemo
				cMens := STR0009+AllTrim(TA6->TA6_DESCRI)+chr(13) //"A descrio do critrio de avaliao "
				cMens += STR0010+chr(13) //"no poder ser alterada pois a mesma esta sendo"
				cMens += STR0011+AllTrim(TA3->TA3_DESCRI) //"usada na frmula "
				MsgStop(cMens)
				RestArea(aOldArea)
				Return .f.
			EndIf
			DbSelectArea("TA3")
			DbSkip()
		End
	Elseif M->TA6_TIPO == "1" .and. M->TA6_TIPO <> TA6->TA6_TIPO
		DbSelectArea("TA3")
		DbSetOrder(1)
		DbSeek(xFilial("TA3"))
		While !Eof() .and. xFilial("TA3") == TA3->TA3_FILIAL
			cMemo := TA3->TA3_FORMUL
			If "#"+AllTrim(TA6->TA6_DESCRI)+"#" $ cMemo
				cMens := STR0016+" '"+STR0015+"'"+chr(13) //"O tipo de avaliao"
				cMens += STR0017+chr(13) //"no poder ser alterado pois o mesmo esta sendo"
				cMens += STR0018+" "+AllTrim(TA3->TA3_DESCRI) //"usado na frmula "

				MsgStop(cMens)
				RestArea(aOldArea)
				Return .f.
			EndIf
			DbSelectArea("TA3")
			DbSkip()
		End
	EndIf
EndIf

RestArea(aOldArea)
PutFileInEof("TA7")

Return .T.

