Function MNT625VALID()
Local lErro := .f.
Local aArea := GetArea()
 	
DbSelectArea("TQK")
DbSetOrder(1)
DBSeek(xFilial("TQK")+M->TQK_POSTO+M->TQK_LOJA+M->TQK_TANQUE) 	
While !Eof() .And. TQK->TQK_FILIAL = xFILIAL("TQK") .And. M->TQK_POSTO == TQK->TQK_POSTO;
                .And. M->TQK_LOJA == TQK->TQK_LOJA .And. M->TQK_TANQUE == TQK->TQK_TANQUE 	   	
 
	IF M->TQK_DTMEDI < TQK->TQK_DTMEDI
		lErro := .t.			
	ElseIf M->TQK_DTMEDI == TQK->TQK_DTMEDI .and. M->TQK_HRMEDI <= TQK->TQK_HRMEDI
		lErro := .t.
	EndIf	
        
	If lErro
		Help(" ",1,STR0007,,STR0011+Chr(10)+Chr(13)+STR0012,3,1) //"ATENO"###"Data e Hora da medio no pode ser menor que o ltima cadastrada." //"Data e Hora inferior a ltima medio ou"###"data com hora ja cadastrada."
		Return .f.
	EndIf	                                                                                                                                          
  
DbSelectArea("TQK")                            
dbskip()
End		
RestArea(aArea)   

Return .t. 			
