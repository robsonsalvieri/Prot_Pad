	lNgMdtPs := .t.
Endif

PRIVATE aRotina := MenuDef()

PRIVATE cCadastro := STR0004 //"Geracao de Exames para Funcionarios Admitidos"
PRIVATE cAlias    := "TM5"
PRIVATE cNUMFIC   := space(09)
PRIVATE cPrograma := "MDTA275"
Private nSizeSI3
nSizeSI3 := If((TAMSX3("I3_CUSTO")[1]) < 1,9,(TAMSX3("I3_CUSTO")[1]))
