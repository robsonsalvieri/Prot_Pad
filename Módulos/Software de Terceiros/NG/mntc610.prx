/*


Ŀ
Funo     MNTC610   Autor  Inacio Luiz Kolling    Data  02/08/97 
Ĵ
Descrio  Consulta Geral das ordens de  Manutencao                   
Ĵ
 Uso       Generico                                                   
ٱ


*/
FUNCTION MNTC610() 
//Ŀ
// Armazena variaveis p/ devolucao (NGRIGHTCLICK) 				  		  	  
//
Local aNGBEGINPRM := NGBEGINPRM(_nVERSAO)

LOCAL aALIAS:={},i
PRIVATE aRotina := MenuDef()

cCADASTRO := OEMTOANSI(STR0004) //"Consulta de Manutencoes dos Servico"
PRIVATE lMOSTRA := .T.
PRIVATE cONSHISTO := .T.
PRIVATE cONSPROGR := 'MNTC610'

MBROWSE(6,1,22,75,"ST4")
//Ŀ
// Desativa tecla F12                                             
//
SET KEY VK_F12  TO
DBSELECTAREA("ST4")
DBSETORDER(1)

//Ŀ
// Recupera a Integridade dos dados e posiciona os arquivos uti-
// lizados na Ordem 1                                           
//
aALIAS:={"ST4"}
//Ŀ
// Retorna os Indices dos arquivos na ordem 1                   
//
FOR i:=1 TO LEN(aALIAS)
    DBSELECTAREA(aALIAS[i])
    DBSETORDER(1)
NEXT i   

//Ŀ
// Devolve variaveis armazenadas (NGRIGHTCLICK)                          
//
NGRETURNPRM(aNGBEGINPRM)

RETURN .T.

