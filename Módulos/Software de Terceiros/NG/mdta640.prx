		Else //CID Principal
			oModel 	  := FWModelActive()
			oModelTNC := oModel:GetModel( "TNCMASTER" )
			cCid	  := Alltrim(Posicione("TMR",1,xFilial("TMR")+oModelTNC:GetValue( "TNC_CID" ), "TMR_DOENCA") )
