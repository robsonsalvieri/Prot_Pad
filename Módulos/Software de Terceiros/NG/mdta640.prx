		oModel:LoadValue( "TNCMASTER" , "TNC_TESTE1"  , SubSTR( SRA->RA_NOME		, 1 , TAMSX3( "TNC_TESTE1" )[1] ) )
		oModel:LoadValue( "TNCMASTER" , "TNC_ENDTE1"  , SubSTR( SRA->RA_ENDEREC		, 1 , TAMSX3( "TNC_ENDTE1" )[1] ) )
