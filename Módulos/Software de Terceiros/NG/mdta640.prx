Function A640FILFUN( cNumFic )

	Local aArea		:= GetArea()
	Local oModel

	Default cNumFic	:= ""

	If !IsInCallStack("MDTA410") .And. !IsInCallStack("MDTA675")

		oModel 	:= FWModelActive() //Ativa o modelo utilizado.

		If Type( "M->TNC_NUMFIC" ) != "U" .and. Empty( cNumFic )
