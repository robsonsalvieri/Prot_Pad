Method AbrirArq() Class LJAAbstrataArquivos
	
	Local lRetorno 	:= .F.						//Variavel de retorno do metodo

	//Cria o diretorio se necessario
	lRetorno := ::CriarDir()

	If lRetorno
		//Verifica se o arquivo ja existe	
		If ::Arquivo():Existe()
			//Abre o arquivo
			lRetorno := ::Arquivo():Abrir()
		Else
			//Cria o arquivo
			lRetorno := ::Arquivo():Criar()	
		EndIf
	EndIf
			
Return lRetorno

