*/
Function ConverteValor(nTipo, Valor)

	Local Retorno := Nil						//Retorno da funcao 	   
	
	if ValType(nTipo) <> "N"
		nTipo = Val(nTipo)
	EndIf
	
	If nTipo = 3
		Retorno := "'" + AllTrim(Valor) + "'"
	ElseIf nTipo = 4           
		Retorno := "'" + AllTrim(Valor) + "'"
	ElseIf nTipo = 5 
		If ValType(Valor) = "N"
			Retorno := AllTrim(Str(Valor))
		Else			
			Retorno := AllTrim(Str(Val(Valor)))
		EndIf
	ElseIf nTipo = 2 
		Retorno := "'" + AllTrim(Valor) + "'"
	Else                       
		If ValType(Valor) = "C"                    
			Retorno := AllTrim(Valor)
		Else                     
			Retorno := AllTrim(STR(Valor))
		EndIf
	EndIf

Return Retorno

