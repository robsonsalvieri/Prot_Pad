Function IntVerifErro(e)

	Local lRet 	:= .F.								//Retorno da funcao 
	Local oLog	:= Nil  							//Objeto do tipo LJCLogIntegracao
		
	If e:gencode > 0  
	                               
		oLog := LJCLogIntegracao():New()
		
		oLog:Gravar( e:DESCRIPTION )
		oLog:Gravar( e:ERRORSTACK )
		oLog:Gravar( tcsqlerror() )                               
		
		lRet:=.T.
		
		Break
	EndIf

Return lRet