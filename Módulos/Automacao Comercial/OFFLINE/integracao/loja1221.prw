Function ConverteTipo(cTipo)

	Local nTipo	:= 0						//Tipo de dados

	If cTipo = "N"
		nTipo := 5 	
	ElseIf cTipo = "C"
		nTipo := 3
	ElseIf cTipo = "D"
		nTipo := 4
	ElseIf cTipo = "L"
		nTipo :=  2
	Else	
		nTipo := 3
	Endif

Return nTipo                             

