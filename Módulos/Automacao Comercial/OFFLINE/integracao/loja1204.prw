Method GetIndNic(cNickName) Class LJCDadosTabela
	
	Local nRetorno := 1							//Retorno do metodo
	
	cNickName := Upper(AllTrim(cNickName)) 
	
	If ::oNickName:Contains(cNickName)
		nRetorno := ::oNickName:ElementKey(cNickName)
	EndIf

Return nRetorno