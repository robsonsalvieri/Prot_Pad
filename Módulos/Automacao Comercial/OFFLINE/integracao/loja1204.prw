Method BuscarIndice() Class LJCDadosTabela

	DbSelectArea("SIX")
	
	SIX->(dbSetOrder(1))
	
	If dbSeek(::cTabela)          
		 
		WHILE (SIX->INDICE = ::cTabela)

			AADD(::aIndice, SIX->CHAVE)
			
			If !Empty(SIX->NICKNAME)
				::oNickName:ADD(Upper(AllTrim(SIX->NICKNAME)), Val(SIX->ORDEM))
			EndIf
			
			SIX->(dbSkip())
		End
		
	EndIf
                                       
Return Nil    

