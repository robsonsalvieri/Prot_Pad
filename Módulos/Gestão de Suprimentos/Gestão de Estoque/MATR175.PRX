TRCell():New(oSection2,"QUANTIDADE","   ",STR0033		,PesqPictQt("D7_QTDE",17)	,TamSX3("D7_QTDE")[1]	,/*lPixel*/,/*{|| code-block de impressao }*/)
TRCell():New(oSection2,"D7_USUARIO","SD7",/*Titulo*/	,/*Picture*/				,/*Tamanho*/			,/*lPixel*/,/*{|| code-block de impressao }*/)
