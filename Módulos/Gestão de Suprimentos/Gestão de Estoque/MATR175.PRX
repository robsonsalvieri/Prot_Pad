TRCell():New(oSection2,"D7_NUMERO" ,"SD7",/*Titulo*/	,/*Picture*/				,/*Tamanho*/			,/*lPixel*/,/*{|| code-block de impressao }*/)
TRCell():New(oSection2,"D7_DATA"   ,"SD7",/*Titulo*/	,/*Picture*/				,/*Tamanho*/			,/*lPixel*/,/*{|| code-block de impressao }*/)
