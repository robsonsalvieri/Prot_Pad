TRCell():New(oSection2,"X5_DESCRI" ,"SX5",STR0036		,/*Picture*/				,/*Tamanho*/			,/*lPixel*/,{|| If( !Empty((cAliasSD7)->D7_MOTREJE) , " - " + Left(X5Descri(),20) , "" ) })

