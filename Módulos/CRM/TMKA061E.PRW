Function Tk061Arquivo(nTipo,cArqAtt)

Local cRetAux  := ""			//Retorno auxiliar do caminho do arquivo
Local cTipoArq := ""			//Tipo (extensao) do arquivo

Local aHelpPor := {} // Texto em portugues
Local aHelpSpa := {} // Texto em Espanhol
Local aHelpEng := {} // Texto em Ingles
Local lRet     := .T.

Default cArqAtt := ""

Aadd(aHelpPor,"O caminho selecionado ้ muito extenso." )
PutHelp("PTK061DIR",aHelpPor,aHelpEng,aHelpSpa,.T.) 

aHelpPor := {}
Aadd(aHelpPor,"Selecione um caminho mais curto ou " )
Aadd(aHelpPor,"aumente o tamanho do campo." )

PutHelp("STK061DIR",aHelpPor,aHelpEng,aHelpSpa,.T.)

//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
//ณExibe a tela para a selecao de arquivos de acordo comณ
//ณcada forma de contato.                               ณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
If (nTipo == 1)
	Do Case
		Case M->U4_FORMA == "2"				//Fax
			cTipoArq 	  := STR0001		//"Arquivos Texto (*.TXT)     | *.TXT | "
			cTipoArq 	  += STR0002		//"Arquivos Tif   (*.TIF)     | *.TIF | "
			cRetAux  	  := cGetFile(	cTipoArq, STR0003, 0, "SERVIDOR\",;
										.T.		, GETF_LOCALFLOPPY + GETF_LOCALHARD + GETF_NETWORKDRIVE)  //"Escolha o arquivo de FAX"										

		Case M->U4_FORMA == "3"				//Cross-Posting
			cTipoArq 	  := STR0004		//"Todos os Arquivos (*.*)     | *.* | "
			cRetAux  	  := cGetFile(	cTipoArq, STR0005, 0, "SERVIDOR\",;
										.T.     , GETF_ONLYSERVER, .T.)  //"Escolha os anexos do Email"

		Case M->U4_FORMA == "4"				//Mala Direta
			cTipoArq 	  := STR0006		//"Modelo de Documento (*.DOT)     | *.DOT | "
			cRetAux  	  := cGetFile(	cTipoArq, STR0007, 0, "SERVIDOR\",;
										.T.		, GETF_LOCALFLOPPY + GETF_LOCALHARD + GETF_NETWORKDRIVE)  //"Escolha o arquivo de Mala Direta"
	Endcase
	If Len(cRetAux) > TamSX3("U4_MALADIR")[1]
		Help(" ", 1, 'TK061DIR')
		lRet := .F.
	EndIf
	M->U4_MALADIR := cRetAux
Else
	
	If (M->U4_FORMA == "4") //Mala Direta
		cTipoArq 	  := STR0006 //"Modelo de Documento (*.DOT)     | *.DOT | "
		cRetAux  	  := cGetFile(	cTipoArq, STR0008, 0, "SERVIDOR\",;
									.T.		, GETF_LOCALFLOPPY + GETF_LOCALHARD + GETF_NETWORKDRIVE)  //"Escolha o arquivo de Etiquetas"
		If Len(cRetAux) > TamSX3("U4_ETIQUET")[1]
			Help(" ", 1, 'TK061DIR')
			lRet := .F.
		EndIf
		M->U4_ETIQUET := cRetAux
	Endif

Endif

If M->U4_FORMA == "1"
	Help(" ",1,"TK061NOVOZ")		
	lRet := .F.
Endif

cArqAtt := cRetAux

