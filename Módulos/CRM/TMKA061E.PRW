Function TK061ATUCPO()

If M->U4_FORMA == "1" //Voz
	M->U4_MALADIR	:= CRIAVAR("U4_MALADIR",.F.)
	M->U4_TIPOEND	:= CRIAVAR("U4_TIPOEND",.F.)
	M->U4_LABEL		:= CRIAVAR("U4_LABEL",.F.)
	M->U4_ETIQUET	:= CRIAVAR("U4_ETIQUET",.F.)
ElseIf M->U4_FORMA == "2" //Fax
	M->U4_MALADIR	:= CRIAVAR("U4_MALADIR",.F.)
	M->U4_TIPOEND	:= CRIAVAR("U4_TIPOEND",.F.)
	M->U4_LABEL		:= CRIAVAR("U4_LABEL",.F.)
	M->U4_ETIQUET	:= CRIAVAR("U4_ETIQUET",.F.)
ElseIf M->U4_FORMA == "3" //Cross Posting
	M->U4_TIPOTEL	:= CRIAVAR("U4_TIPOTEL",.F.)
	M->U4_TIPOEND	:= CRIAVAR("U4_TIPOEND",.F.)
	M->U4_LABEL		:= CRIAVAR("U4_LABEL",.F.)
	M->U4_ETIQUET	:= CRIAVAR("U4_ETIQUET",.F.)
ElseIf M->U4_FORMA == "4" //Mala Direta
	M->U4_TIPOTEL	:= CRIAVAR("U4_TIPOTEL",.F.)
Endif
Return .T.

