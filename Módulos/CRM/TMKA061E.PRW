Static Function Tk061Status(cLista, lMala)

Local aArea:= GetArea()
Local cStatus := "2"

//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
//ณAtualiza o status da lista para Enviado.ณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
DbSelectArea("SU4")
DbSetOrder(1)
If DbSeek(xFilial("SU4") + cLista)

	// C๓digos de Status
	// 1 - Nada impresso
	// 2 - Mala e Etiqueta impressos
	// 3 - Somente mala impressa
	// 4 - Somente Etiqueta impressa
	If SU4->U4_STATUS == "3" .OR. SU4->U4_STATUS == "4"
		cStatus := "2"
	Elseif lMala
		cStatus := "3"
	Elseif !lMala
		cStatus := "4"
	Endif
	
	RecLock("SU4",.F.)
	REPLACE SU4->U4_STATUS With cStatus
	MsUnLock()
	DbCommit()
Endif

//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
//ณAtualiza o status de cada contato como Encerrado.ณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
DbSelectArea("SU6")
DbSetOrder(1)
If DbSeek(xFilial("SU6") + cLista,.T.)
	While !Eof() .AND. (xFilial("SU6") == SU6->U6_FILIAL) .AND. (cLista == SU6->U6_LISTA)
		RecLock("SU6",.F.)
		REPLACE SU6->U6_STATUS With "3"
		MsUnLock()
		DbCommit()
		
		//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
		//ณSe ja foi gravado como impresso etiqueta ou mala, nao ha     ณ
		//ณa necessidade de gravar o SU8 novamente pois a chave e unica.ณ
		//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
		If !(cStatus $ "34") 
			//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
			//ณAtualiza o historico de marketing.ณ
			//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
			Tk400Hist(SU6->U6_LISTA,SU6->U6_CODIGO,"8")
		EndIf
		
		DbSkip()
	End
Endif

RestArea(aArea)

Return Nil
