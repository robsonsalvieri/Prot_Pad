Function TK061VISCAD(cCodigo,nCad)

Local aSRot 		:= {}
Local aSArea		:= GetArea()
Local laRotSaved	:= .F.

If Type("aRotina") == "A"
	aSRot := aClone(aRotina) // Salva a Rotina
	laRotSaved := .T.
EndIf

If nCad == 1
	aRotina := MenuDef(nCad)
				 
    
	DbSelectArea("SUO")
	DbSetOrder(1) 

	If DbSeek(xFilial("SUO")+cCodigo) 
		FWExecView( STR0014, "TMKA310", 1 )//"Informa็๕es de Campanha" ## Visualizar
    Endif

ElseIf nCad == 2 // Eventos
	aRotina := MenuDef(nCad)
    
	DbSelectArea("ACD")
	DbSetOrder(1) 
	If DbSeek(xFilial("ACD")+cCodigo) 
		Tk340Eventos("ACD",RECNO(),2)
    Endif
Endif

If laRotSaved
	//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
	//ณRestaura aRotina padrao.ณ
	//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
	aRotina := {}
	aRotina := aClone(aSRot)
EndIf

RestArea(aSArea)

Return .T.

