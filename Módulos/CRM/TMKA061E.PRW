Function Tk061GrvAlt(	nOpc		,cEntidade	,aEntidade	,cMensagem	,;
						cAssunto	,aAttach	,cAttach	,cFiltro	,;
						cPergunte	,cText)
Local lRet 		:= .F. 			// Retorno da Funcao que recebe o retorno da funcao de selecao.
Local cSelOper  := "" 		  	// Armazena codigo do operador selecionado automaticamente.
Local aLista 	:= {}			// Array usado para gravacao da Lista Manual
Local lGrvCab   := .F.			// Variavel de controle da gravacao do cabecalho do SU4. Utilizada exclusivamente na inc. manual.
Local cAntOper	:= ""			// Operador Anterior 
Local nI		:= 0			// Contador de FOR para avaliacao dos itens deletados.
Local nSoma		:= 0			// Variavel auxiliar para verificacao se todos os itens foram deletados.

If nModulo == 73 //SIGACRM
	
	//------------------------------------
	// Verificacao dos itens deletados.
	//------------------------------------
	For nI:= 1 To Len(aCols)
		If aCols[nI][Len(aHeader)+1]
			nSoma++
		Endif
	Next nI
		
	If nSoma == Len(aCols)
		lRet := .F.
		Help(" ",1,"TK061NALT")
	Else 
		lRet := .T.
	EndIf

	//---------------------------------------------
	// Grava Itens quando for Altera็ใo no SIGACRM
	//--------------------------------------------
	If lRet 		
		lRet := TK61Change()
	EndIf
	
Else
	
	If Tk061IncVld(	nOpc	,cEntidade	,aEntidade	,@cMensagem	,@cAssunto,;
		@aAttach,@cAttach	,@cFiltro	,@cPergunte	,@cText,;
		@cSelOper)
		
		//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
		//ณVerificacao dos itens deletados.ณ
		//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
		For nI:= 1 To Len(aCols)
			If aCols[nI][Len(aHeader)+1]
				nSoma++
			Endif
		Next nI
		
		If nSoma ==  Len(aCols)
			Help(" ",1,"TK061NALT")
			//Help()
			lRet := .F.
		Else
			
			cAntOper := SU4->U4_OPERAD
			
			lRet := Tk061Grava(	nOpc		,aLista		,@cAssunto	,@cMensagem	,;
			@cAttach	,@aAttach	,@cFiltro	,cSelOper	,;
			lGrvCab		,NIL)
			
			If lRet
				If cAntOper <> cSelOper
					//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
					//ณSubtrai um do operador anterior.       ณ
					//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
					Tk061GrvTarefa(cAntOper,2)
					
					//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
					//ณSoma mais uma tarefa para o operador.  ณ
					//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
					Tk061GrvTarefa(cSelOper,1)
				Endif
			Endif
		Endif
	Endif
	
EndIf

Return (lRet)


