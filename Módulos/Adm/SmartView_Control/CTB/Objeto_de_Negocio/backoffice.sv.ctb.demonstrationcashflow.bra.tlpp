	self:oSchema:addProperty("dFinal"     ,STR0005, "date"  , STR0005, "dFinal"     ,,,,lCanFilter) // Data Final
	self:oSchema:addProperty("dFinalA"    ,STR0006, "date"  , STR0006, "dFinalA"    ,,,,lCanFilter) // Data Inicial
