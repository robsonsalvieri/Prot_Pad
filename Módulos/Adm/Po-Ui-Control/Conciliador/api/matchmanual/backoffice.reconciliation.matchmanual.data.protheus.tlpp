Local aResponse := {} As Array
Local aMatches  := {} As Array

//Get Matches
aMatches := ::tcGetMatchManual(jBody)

//Set Matches
If Len(aMatches) > 0
    aResponse := ::tcSetMatchManual(aMatches, jBody)
Else
    aAdd(aResponse, .F.)
