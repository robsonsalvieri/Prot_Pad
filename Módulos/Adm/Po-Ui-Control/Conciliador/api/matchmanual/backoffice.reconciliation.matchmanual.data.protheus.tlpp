/*/{Protheus.doc} tcSetMatchManualAllItems
Metodo responsável por atualizar as tabelas temporárias, criando um único match
para todos os registros das temporarias que não tem match ejson de retorno

@author Totvs
/*/
method tcSetMatchManualAllItems(jBody As Json) class MatchManualProtheusData
Local cQryUpdt  := ""  As Character
Local cRegMatch := ""  As Character
Local cDesMatch := ""  As Character
Local cSeqMatch := ""  As Character
Local cError    := ""  As Character
Local cIdMatch  := ""  As Character
Local nAt       := 0   As Numeric
Local lContinue := .T. As Logical
Local aResponse := {}  As Array
Local cComparison := ""  As Character
Local cCompMD   := "MD"  As Character
Local cTabOri   := ""   As Character
Local cTabDes   := ""   As Character


//Verifica se temporarios existem
If Valtype(jBody) == "J" .And. ValType(jBody:GetJsonText("idmatch")) == "C" .And. jBody['idmatch'] <> Nil
    If TCCanOpen(jBody['tabori']) .And. TCCanOpen(jBody['tabdes'])
        cTabOri := jBody['tabori']
        cTabDes := jBody['tabdes']
        nAt := TamSx3("QLD_REGMATCH")[1]
        cIdMatch  := AllTrim(jBody:GetJsonText("idmatch"))
        cComparison := AllTrim(jBody:GetJsonText("comparison"))

        If !Empty(cIdMatch)
            cRegMatch := SubStr(cIdMatch, 1, nAt)
            cSeqMatch := SubStr(cIdMatch, nAt+1, Len(cIdMatch))
            cDesMatch := "manual"

            //Atualiza tabela temporaria de origem
            cQryUpdt := "UPDATE " + cTabOri
            cQryUpdt += " SET REGMATCH = '" + cRegMatch + "', DESMATCH = '" + cDesMatch + "', SEQMATCH = '" + cSeqMatch + "',"
            cQryUpdt += " IDMATCH = '"+ cIdMatch + "'"
            If cComparison == 'MD' // Atualiza o campo de comparação apenas se for manual e seta o valor de manual divergente
                cQryUpdt += " ,COMPARISON = '"+ cCompMD + "'"            
            EndIf
            cQryUpdt += " WHERE REGMATCH = '"+Space(TamSx3("QLD_REGMAT")[1])+"'"
            cQryUpdt += " AND RECONCILED = 'N' "
            cQryUpdt += " AND D_E_L_E_T_ = ' ' "

            IIf( TcSqlExec(cQryUpdt) <> 0 ,; 
                (Conout(TCSqlError()),;
                    cError := STR0002,; //"matchManual Error: Nao foi possivel atualizar a tabela temporaria: "
                    cError += cTabOri + STR0003,; //". Para mais detalhes, verificar arquivo console.log"
                    lContinue := .F.);
                , lContinue := .T.)

            //Atualiza tabela temporaria de destino
            If lContinue
                cQryUpdt := "UPDATE " + cTabDes
                cQryUpdt += " SET REGMATCH = '" + cRegMatch + "', DESMATCH = '" + cDesMatch + "', SEQMATCH = '" + cSeqMatch + "',"
                cQryUpdt += " IDMATCH = '"+ cIdMatch + "'"
                If cComparison == 'MD' // Atualiza o campo de comparação apenas se for manual e seta o valor de manual divergente
                    cQryUpdt += " ,COMPARISON = '"+ cCompMD + "'"            
                EndIf
                cQryUpdt += " WHERE REGMATCH = '"+Space(TamSx3("QLD_REGMAT")[1])+"'"
                cQryUpdt += " AND RECONCILED = 'N' "
                cQryUpdt += " AND D_E_L_E_T_ = ' ' "

                IIf( TcSqlExec(cQryUpdt) <> 0 ,; 
                    (Conout(TCSqlError()),;
                        cError := STR0002,; //"matchManual Error: Nao foi possivel atualizar a tabela temporaria: "
                        cError += cTabDes + STR0003,; //". Para mais detalhes, verificar arquivo console.log"
                        lContinue := .F.);
                    , lContinue := .T.)
            EndIf
        EndIf
    Else
        lContinue := .F.
        cError    := STR0005 //"Tabela temporária inválida"
    EndIf
Else
    lContinue := .F.
    cError    := STR0004 //"Não enviado idmatch no corpo"
EndIf

//Retorno
If lContinue
    aAdd(aResponse, lContinue)
    aAdd(aResponse, '{"regmatch": "'+cRegMatch+'", "desmatch": "'+cDesMatch+'", "seqmatch": "'+cSeqMatch+'"}')
Else
    aAdd(aResponse, lContinue)
    aAdd(aResponse, cError)
EndIf

TcRefresh(cTabOri) // Resetar tempo de timeout
TcRefresh(cTabDes) // Resetar tempo de timeout
return aResponse

/*/{Protheus.doc} tcSetUpdateMatchManual
Metodo responsável por atualizar as tabelas temporárias com o match manual

@author Totvs
/*/
method tcSetUpdateMatchManual(cTable as Character, cRegMatch as Character, cDesMatch as Character, cSeqMatch as Character, cIdMatch as Character,;
                                cCompMD as Character, cComparison as Character, cCampoAux as Character, cUUIDIn as Character)  class MatchManualProtheusData
    Local lRet := .T.
    Local cQryUpdt := ""
    Local cError   := ""

    DEFAULT cTable    := ""
    DEFAULT cRegMatch := ""
    DEFAULT cDesMatch := ""
    DEFAULT cSeqMatch := ""
    DEFAULT cIdMatch  := ""
    DEFAULT cCompMD   := ""
    DEFAULT cComparison:= ""
    DEFAULT cCampoAux := ""
    DEFAULT cUUIDIn   := ""

 //Atualiza tabela temporaria de origem
    cQryUpdt := "UPDATE " + cTable
    cQryUpdt += " SET REGMATCH = '" + cRegMatch + "', DESMATCH = '" + cDesMatch + "', SEQMATCH = '" + cSeqMatch + "',"
    cQryUpdt += " IDMATCH = '"+ cIdMatch + "'"
    If cComparison == 'MD' // Atualiza o campo de comparação apenas se for manual e seta o valor de manual divergente
        cQryUpdt += " ,COMPARISON = '"+ cCompMD + "'"    
    EndIf
    cQryUpdt += " WHERE " + cCampoAux + " IN (" + cUUIDIn + ")"
    cQryUpdt += " AND REGMATCH = '"+Space(TamSx3("QLD_REGMAT")[1])+"'"
    cQryUpdt += " AND RECONCILED = 'N' "
    cQryUpdt += " AND D_E_L_E_T_ = ' ' "

    If TcSqlExec(cQryUpdt) <> 0
        Conout(TCSqlError())
        cError := STR0002 //"matchManual Error: Nao foi possivel atualizar a tabela temporaria: "
        cError += cTable + STR0003 //". Para mais detalhes, verificar arquivo console.log"
        lRet := .F.
    EndIf

Return lRet
