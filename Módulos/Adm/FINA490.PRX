Static Function ModelDef() As Object

	Local oModel		As Object
	Local oStrF7G		As Object

	If __lF7GSeq == Nil
		__lF7GSeq := F7G->(FieldPos("F7G_SEQUEN")) > 0
	EndIF

	oStrF7G := FWFormStruct(1,"F7G")
	If __lF7GSeq
		oStrF7G:SetProperty('F7G_SEQUEN', MODEL_FIELD_VALID, FWBuildFeature( STRUCT_FEATURE_VALID, "Fin490Sq()"))
	EndIF

	oModel  := MPFormModel():New( 'FINA490', , {|oModel|Fin490Pos( oModel )} , {|oModel|F490Commit( oModel )} )
	oModel:SetDescription(STR0026) //"Atualização de Motivos de Baixa"
	oModel:addFields('F7GMASTER',,oStrF7G)
	oModel:SetPrimaryKey({'xFilial("F7G")','F7G_SIGLA'})

Return oModel



