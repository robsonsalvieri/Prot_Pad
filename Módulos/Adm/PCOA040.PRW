Function A040BMP(oGdAKC,nPosAtivo)
If !oGdAKC:aCols[oGdAKC:nAt][Len(oGdAKC:aHeader)+1]
	If oGdAKC:aCols[oGdAKC:nAt][nPosAtivo] == BMP_ON
		oGdAKC:aCols[oGdAKC:nAt][nPosAtivo]:= BMP_OFF
