Local aSays:={}, aButtons:={}
Local nOpca 		:= 0

PRIVATE cCadastro 	:= OemtoAnsi(STR0001)     //"Bloqueio/Desbloqueio de bens"

Default lAutomato := .F.

dbSelectArea("SN1")
dbSetOrder(1 )

Pergunte("AFA200",.F.)

If ! lAutomato
	AADD(aSays,OemToAnsi( STR0004 ) ) //"Este programa tem o objetivo de bloquear ou desbloquear "
	AADD(aSays,OemToAnsi( STR0005 + STR0006 ) ) //"um ou mais bens de acordo com" ## " os parâmetros escolhidos."
	
	//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
