	ProcLogIni( aButtons )
	
	AADD(aButtons, { 5,.T.,{|| Pergunte("AFA200",.T. ) } } )
	AADD(aButtons, { 1,.T.,{|| nOpca := 1,	IF( AtfOK(),FechaBatch(),nOpca := 0 ) }} )
