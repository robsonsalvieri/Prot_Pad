Function PCOC310(nCallOpcx)

Local bBlock
Local nPos
Private cCadastro	:= STR0001 //"Consulta Saldos Mensais de Cubos"
Private aRotina := MenuDef()
						
If AMIIn(57) // AMIIn do modulo SIGAPCO ( 57 )

	//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
	//ณ Adiciona botoes do usuario no Browse                                   ณ
	//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
	If ExistBlock( "PCOC3101" )
		//P_Eฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฟ
		//P_Eณ Ponto de entrada utilizado para inclusao de funcoes de usuarios no     ณ
		//P_Eณ browse da tela de Centros Orcamentarios                                ณ
		//P_Eณ Parametros : Nenhum                                                    ณ
		//P_Eณ Retorno    : Array contendo as rotinas a serem adicionados na enchoice ณ
		//P_Eณ               Ex. :  User Function PCOC3101                            ณ
		//P_Eณ                      Return {{"Titulo", {|| U_Teste() } }}             ณ
		//P_Eภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤู
		If ValType( aUsRotina := ExecBlock( "PCOC3101", .F., .F. ) ) == "A"
			AEval( aUsRotina, { |x| AAdd( aRotina, x ) } )
		EndIf
	EndIf

	PCOC310INF()
	If nCallOpcx <> Nil
		nPos := Ascan(aRotina,{|x| x[4]== nCallOpcx})
		If ( nPos # 0 )
			bBlock := &( "{ |x,y,z,k| " + aRotina[ nPos,2 ] + "(x,y,z,k) }" )
			Eval( bBlock,Alias(),AL4->(Recno()),nPos)
		EndIf
	Else
		mBrowse(6,1,22,75,"AKS")
	EndIf
EndIf

Return



Function PCOC310ViewChv()

Local aArea := GetArea()
Local aAreaAKW := AKW->(GetArea())
Local cCubo   := M->AKS_CONFIG
Local cSaldo := ""
Local nIni:= 1, nFim := 1
Local aQebra := {}, cAux
Local cTitle

dbSelectArea("AKW")
dbSetOrder(1)
dbSeek(xFilial()+cCubo)

While !Eof() .And. xFilial()+cCubo == AKW->AKW_FILIAL+AKW->AKW_COD

	cTitle := AllTrim(AKW->AKW_DESCRI)
	cAux := &(AllTrim(AKW->AKW_CHAVER))
	nFim := Len(cAux)
	cAux := Subs(M->AKS_CHAVE, nIni, nFim)
	cSaldo += cTitle+Space(20-Len(cTitle)*2)+chr(9)+ " :   "+cAux+C310Descri(cAux)+CRLF
	nIni += nFim
	dbSkip()

End

RestArea(aAreaAKW)
RestArea(aArea)

Return(cSaldo)



Static Function C310Descri(cAux)

Local aArea := GetArea(cAux)
Local cDescri := ""

dbSelectArea(AKW_ALIAS)
dbSetOrder(1)

If dbSeek(xFilial()+cAux) .And. ;
	AllTrim(AKW->AKW_DESCRE)!=AllTrim(AKW->AKW_RELAC)
	cDescri := " - "+&(AllTrim(AKW->AKW_DESCRE))
EndIf	

RestArea(aArea)

Return(cDescri)

