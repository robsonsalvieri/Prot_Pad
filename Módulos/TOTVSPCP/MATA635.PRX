Local cTRT     := ""
Local cOperac  := ""
Local lRet     := .T.
Local aEstrut  := {}
Default lAutoMacao := .F.

IF !lAutoMacao
	cComp    := aCols[n,nPosComp]
	cTRT     := aCols[n,nPosTRT]
	cOperac  := aCols[n,nPosOperac]
ENDIF

If cReadVar == "GF_OPERAC"
	lRet := a630SeekSG2(1,cProduto,xFilial("SG2")+cProduto + cRoteiro + cReadVal,,,,.T.)
Endif

