Function A635VldProd(cProd)
Local lRet := .T.
Default cProd := cProduto

DbSelectArea("SB1")
DbSetOrder(1)
If ! MsSeek(xFilial("SB1")+cProd)
	HELP(" ",1,"REGNOIS")
	lRet := .F.
EndIf

If lRet .And. ! a630SeekSG2(1,cProd,xFilial("SG2") + cProd)
	HELP(" ",1,"REGNOIS")
	lRet := .F.
EndIf

Return ( lRet )
