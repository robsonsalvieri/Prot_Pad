/*/{Protheus.doc} ModelDef
Definição do modelo de dados para o programa
@author Carlos Alexandre da Silveira
@since 26/07/2018
@version 1.0
@return oModel	- Modelo de dados do programa.
/*/
Static Function ModelDef()
	Local oEvent   := Nil
	Local oModel   := Nil
	Local oStruSH4 := FWFormStruct(1, "SH4")
	Local oStruHZI := Nil

	oModel := MPFormModel():New("MATA620")
	oEvent := MATA620EVDEF():New(oModel)


	If temDicConj()
		oStruHZI := FWFormStruct(1, "HZI")

		oStruHZI:addTrigger("HZI_FERRAM", "HZI_DESCFE", {|| .T.}, {|oModel| getDescFer(oModel)})

		oStruSH4:SetProperty("H4_CONJUNT", MODEL_FIELD_VALID, FWBuildFeature(STRUCT_FEATURE_VALID, "A620VldCon()"))

		oStruHZI:SetProperty("HZI_FERRAM", MODEL_FIELD_VALID  , FWBuildFeature(STRUCT_FEATURE_VALID, "A620VlFCon()"))
		oStruHZI:SetProperty("HZI_FERRAM", MODEL_FIELD_OBRIGAT, .T.)
		oStruHZI:SetProperty("HZI_DESCFE", MODEL_FIELD_INIT   , {|oModel| A120DesFer(oModel)})

		oModel:AddFields("SH4MASTER", /*cOwner*/, oStruSH4)
		oModel:AddGrid("HZI_DETAIL", "SH4MASTER", oStruHZI, /*bLinePre*/, /*bLinePost*/, /*bPre*/, /*bPost*/, /*bLoad*/)
		oModel:SetRelation("HZI_DETAIL",{{"HZI_FILIAL", "xFilial('HZI')"},{"HZI_CONJUN", "H4_CODIGO "}},"HZI_FILIAL+HZI_CONJUN")

		oModel:GetModel("HZI_DETAIL"):SetUniqueLine({"HZI_FERRAM"})

		oModel:GetModel("HZI_DETAIL"):SetDescription(STR0015) // "Ferramentas do conjunto"
		oModel:GetModel("HZI_DETAIL"):SetOptional(.T.)

		oModel:GetModel("HZI_DETAIL"):SetNoInsertLine(.T.)
		oModel:GetModel("HZI_DETAIL"):SetNoDeleteLine(.T.)

		oModel:setPost({|oModel| posVldCab(oModel)})
	Else
		oModel:AddFields("SH4MASTER", /*cOwner*/, oStruSH4)
	EndIf

	oModel:SetPrimaryKey({})

	oModel:SetDescription(STR0006) //STR0006 - Ferramentas

	//Instala o evento padrão do programa.
	oModel:InstallEvent("MATA620EVDEF",/*cOwner*/,oEvent)

Return oModel

/*/{Protheus.doc} ViewDef
Definição da tela para o programa
@author Carlos Alexandre da Silveira
@since 26/07/2018
@version 1.0
@return oView	- Objeto View para a tela
/*/
Static Function ViewDef()
	Local oModel   := FWLoadModel( 'MATA620' )
	Local oStruSH4 := FWFormStruct(2, "SH4")
	Local oStrDetail := Nil
	Local oView    := Nil

	oView := FWFormView():New()

	oView:SetModel(oModel)

	oView:AddField("VIEW_SH4", oStruSH4, "SH4MASTER")
	If temDicConj()
		oStrDetail := FWFormStruct(2, "HZI", {|cCampo| "|" + cCampo + "|" $ "|HZI_FERRAM|HZI_DESCFE|"})

		oView:AddGrid("VIEW_DETAIL", oStrDetail, "HZI_DETAIL")
		oView:EnableTitleView("VIEW_DETAIL", STR0015) // "Ferramentas do conjunto"

		oView:CreateHorizontalBox("TELA",50)
		oView:CreateHorizontalBox("GRID",50)

		oView:SetOwnerView("VIEW_DETAIL","GRID")
	Else
		oView:CreateHorizontalBox("TELA",100)
	EndIf

	oView:SetOwnerView("VIEW_SH4","TELA")

Return oView

