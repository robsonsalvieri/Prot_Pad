Function FdaVlICMS(nItem,aFdaNfCab,aFdaNfItem)
Local cChaveF4:=RetFilial("HF4")+aFdaNfItem[nItem,10]
dbSelectArea("HF4")
dbSetOrder(1)
dbSeek(cChaveF4)       

If HF4->HF4_ICM <> "N"
	//Ŀ
	// Calculo do valor do ICMS do item.                           
	//
	aFdaNfItem[nItem][IT_VALICM]:= aFdaNfItem[nItem][ IT_BASEICM ]*aFdaNfItem[nItem][ IT_ALIQICM ]/100
Else
	aFdaNfItem[nItem][IT_VALICM]:= 0
EndIf

Return

