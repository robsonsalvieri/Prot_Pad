Function AF9GetDesc(aProjs, aTasks)
	Local cProject := ""
	
	aTasks := {}
	
	dbSelectArea("AF9")
	dbSetOrder(1)
	dbGoTop()

	While !AF9->(EoF())
		aAdd(aTasks, AF9->AF9_DESCRI)
		
		If cProject # AF9->AF9_PROJET
			aAdd(aProjs, AF9->AF9_PROJET)			
		EndIf
		
		cProject := AF9->AF9_PROJET
		AF9->(dbSkip())
	End
