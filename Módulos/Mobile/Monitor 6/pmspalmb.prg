Function GetIndexes(aIndexes, cAlias)
	Local lReturn := .T.
	Local aBuffer   := {}

	aIndexes := {}
	
	dbSelectArea("ADVIND")
	ADVIND->(dbSetOrder(2))
	ADVIND->(dbGotop())
	
	While !ADVIND->(Eof())
		If Trim(ADVIND->TBLNAME)==Trim(cAlias)
			aBuffer := {}
	
			aAdd(aBuffer, ADVIND->TBLNAME)
			aAdd(aBuffer, AllTrim(ADVIND->NOME_IDX))
			aAdd(aBuffer, ADVIND->EXPRE)
			
			aAdd(aIndexes, aClone(aBuffer))
		EndIf
		ADVIND->(dbSkip())
	End
Return lReturn


