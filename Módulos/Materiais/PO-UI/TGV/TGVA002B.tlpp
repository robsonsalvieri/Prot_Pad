Static Function GetNotificationTitleContact(nOperation as Numeric, cNumero as Character, lError as Logical) as Character

	Local cTitle as Character

	nOperation := IIF( Empty( nOperation ), 3, nOperation )

	If lError
		Do Case
		Case nOperation == 3
			cTitle := STR0043 + ' ' + cNumero //"Falha ao incluir Contato:"
		Case nOperation == 4
			cTitle := STR0044 + ' ' + cNumero //"Falha ao alterar Contato:"
		Case nOperation == 5
			cTitle := STR0045 + ' ' + cNumero //"Falha ao excluir Contato:"
		Endcase
	Else
		Do Case
		Case nOperation == 3
			cTitle := STR0046 + ' ' + cNumero //"Contato incluído com sucesso:"
		Case nOperation == 4
			cTitle := STR0047 + ' ' + cNumero //"Contato alterado com sucesso:"
		Case nOperation == 5
			cTitle := STR0048 + ' ' + cNumero //"Contato excluído com sucesso:"
		Endcase
	EndIf

Return cTitle

