BeginSQL Alias cTemp
	SELECT A1_COD, A1_LOJA
	FROM 
		%table:SA1% 	
	WHERE
		A1_FILIAL = %Exp:cFilialCli%
		AND A1_CLIPRI = %exp:cCli%
		AND A1_LOJPRI = %exp:cLoja%
		AND %NotDel%
