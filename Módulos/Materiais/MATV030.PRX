/*/	{Protheus.doc} PicCli

Ajusta picture do campo A1_CGC de acordo com o tipo de Pessoa (F/J)

@sample	PicCli(cTipPes)

@param		cTipPes = Tipo de Pessoa			 

@return	cPict

@author	Servicos   	
@version	12.1.16
/*/
//------------------------------------------------------------------------------
Function PicCli(cTipPes)
Local cPict 		:= ""
Local cCgc 			:= M->A1_CGC
Local oModel		:= Nil
Local oView	 		:= Nil
Local lCNPJ			:= .F.
Local nTamCGC		:= Len( SA1->A1_CGC )
Local nOperation	:= 0
Local lCgcEdit	    := If(Empty(Alltrim(GetSx3Cache("A1_CGC","X3_WHEN"))),.T.,(&(Alltrim(GetSx3Cache("A1_CGC","X3_WHEN"))) == .T.))
Local l030IsMVC     := MA030IsMVC()
Local nFocus		:= 0

If l030IsMVC 
	oModel		:= FWModelActive()
	
	If oModel == Nil .Or. !oModel:GetId() == "CRMA980" 
		l030IsMVC := .F.
	Else
		oView  		:= FWViewActive() 
		cCgc   		:= IIF(oModel:IsActive(), oModel:GetValue( 'SA1MASTER', 'A1_CGC' ), M->A1_CGC)
		nOperation  := IIf(oModel <> Nil, oModel:GetOperation(),0)
		lCgcEdit	:= lCgcEdit .And. (nOperation == MODEL_OPERATION_INSERT .Or. nOperation == MODEL_OPERATION_UPDATE)
		nFocus		:= GetFocus()	//Retorna o handle do objeto em foco
	EndIf
EndIf

lCNPJ := Len( AllTrim( cCgc ) ) == 14

If cTipPes == "F"
	If !Empty( M->A1_TIPO )
		//Habilita CNPJ para Pessoa Fisica, quando cliente for Produtor Rural de SP
		If M->A1_TIPO <> "L"
			//Caso Troque o Tipo do cliente, e já exista CNPJ informado, limpa campo A1_CGC.
			If !Empty( cCgc ) .And. lCNPJ
				If !l030IsMVC
					M->A1_CGC := Space( nTamCGC )
				Else
					If oModel:IsActive()
						If lCgcEdit  
							oModel:SetValue('SA1MASTER', "A1_CGC", Space( nTamCGC ) )
						Else
							M->A1_CGC := Space( nTamCGC )
						EndIf
					EndIf
				EndIf
			EndIf
			cPict := "@R 999.999.999-99"
		Else
			If M->A1_EST == "SP"
				If Empty( cCgc ) .Or. lCNPJ
					cPict := "@R! NN.NNN.NNN/NNNN-99"
				Else
					cPict := "@R 999.999.999-99"
				EndIf
			Else
				//Caso Troque o Tipo do cliente, e já exista CNPJ informado, limpa campo A1_CGC.
				If !Empty( cCgc ) .And. lCNPJ
					If !l030IsMVC
						M->A1_CGC := Space( nTamCGC )
					Else
						If oModel:IsActive()
							If lCgcEdit 
								oModel:SetValue('SA1MASTER', "A1_CGC", Space( nTamCGC ) )
							Else
								M->A1_CGC := Space( nTamCGC )
							EndIf
						EndIf
					EndIf
				EndIf
				cPict := "@R 999.999.999-99"
			EndIf
		EndIf
	Else
		cPict := "@R 999.999.999-99"
	EndIf		
ElseIf cTipPes == "J"
	If !lCNPJ
		If !l030IsMVC
			M->A1_CGC := Space( nTamCGC )
		Else
			If oModel:IsActive()
				If lCgcEdit 
					oModel:SetValue('SA1MASTER', "A1_CGC", Space( nTamCGC ) )
				Else
					M->A1_CGC := Space( nTamCGC )
				EndIf
			EndIf
		EndIf
	EndIf
			cPict := "@R! NN.NNN.NNN/NNNN-99"
Else
	If !lCNPJ .AND. !Empty( AllTrim( cCgc ) )
		cPict := "@R 999.999.999-99"
	Else 
		cPict := "@R! NN.NNN.NNN/NNNN-99"
	EndIf
	If !l030IsMVC
		M->A1_CGC := cCgc
	Else
		If oModel:IsActive()
			If lCgcEdit 
				oModel:SetValue('SA1MASTER', "A1_CGC", cCgc )
			Else
				M->A1_CGC := cCgc
			EndIf
		EndIf
	EndIf
EndIf

If l030IsMVC .And. oModel:IsActive() .And. !IsInCallStack('Refresh') .And. !IsInCallStack('FolderActivate') .And. cPctAtual <> cPict 
	oView:Refresh( 'VIEW_SA1' )
	SetFocus(nFocus)	//Restaura o foco
EndIf

cPctAtual := cPict
cPict := cPict + "%C"


Return cPict

