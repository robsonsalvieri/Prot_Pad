/*/{Protheus.doc} A030VldUCod
// Realiza a validação da unificação de códigos referente a mensagem CustomerVendorReserveId
@author caio.y
@since 08/06/2017
@version undefined

@type function
/*/
//---------------------------------------------------------------------------------------------------------------
Function A030VldUCod()
Local lRet		:= .T. 
Local aAreaSA2	:= SA2->(GetArea())
Local aAreaSA1	:= SA1->(GetArea())

//-- Valida unificação de códigos
If lIntUnqCod .And. INCLUI
	
	If !Empty(M->A1_CGC) 
		SA1->(dbSetOrder(3))
		If SA1->(MsSeek(xFilial("SA1") + M->A1_CGC))
			Help( " " , 1 , "EXISTCLI" ,,, 2 , 0 )
			lRet	:= .F. 
		EndIf
	EndIf
	
	If lRet
		If M->A1_PESSOA == "J" .And. M->A1_TIPO <> "X" //-- Pessoa Juridica a diferente de estrangeiro
			If !Empty(M->A1_CGC) .And. !Empty(M->A1_INSCR)			
				SA2->(dbSetOrder(3))
				If SA2->(MsSeek(xFilial("SA2") + M->A1_CGC ))
					If RTrim(M->A1_INSCR) == RTrim(SA2->A2_INSCR)
						M->A1_COD	:= SA2->A2_COD
					EndIf
				Else
					lRet	:= MATA020B(.F.,@M->A1_COD,"MATA030") 
				EndIf				
			EndIf	
		ElseIf M->A1_PESSOA == "F" .Or. M->A1_TIPO == "X" //-- Pessoa Física ou Estrangeiro
			If !Empty(M->A1_CGC)
				SA2->(dbSetOrder(3))
				If SA2->(MsSeek(xFilial("SA2") + M->A1_CGC ))
					If RTrim(M->A1_INSCR) ==  RTrim(SA2->A2_INSCR)
						M->A1_COD	:= SA2->A2_COD
					EndIf
				Else
					lRet	:= MATA020B(.F.,@M->A1_COD,"MATA030") 
				EndIf				
			EndIf	
		EndIf	
	EndIf
EndIf

RestArea(aAreaSA1)
RestArea(aAreaSA2)
Return lRet

